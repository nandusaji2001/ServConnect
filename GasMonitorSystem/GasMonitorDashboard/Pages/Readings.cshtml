@page
@model GasMonitorDashboard.Pages.ReadingsModel
@{
    ViewData["Title"] = "All Readings";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5">All Weight Readings</h1>
            <p class="text-muted">Complete history of weight measurements</p>
        </div>
    </div>

    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Filters</h5>
                </div>
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-3">
                            <label for="startDate" class="form-label">Start Date</label>
                            <input type="datetime-local" class="form-control" id="startDate" name="startDate" 
                                   value="@Model.StartDate?.ToString("yyyy-MM-ddTHH:mm")">
                        </div>
                        <div class="col-md-3">
                            <label for="endDate" class="form-label">End Date</label>
                            <input type="datetime-local" class="form-control" id="endDate" name="endDate" 
                                   value="@Model.EndDate?.ToString("yyyy-MM-ddTHH:mm")">
                        </div>
                        <div class="col-md-2">
                            <label for="deviceId" class="form-label">Device ID</label>
                            <select class="form-select" id="deviceId" name="deviceId">
                                <option value="">All Devices</option>
                                @foreach (var device in Model.AvailableDevices)
                                {
                                    <option value="@device" selected="@(device == Model.DeviceId)">@device</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="status" class="form-label">Status</label>
                            <select class="form-select" id="status" name="status">
                                <option value="">All Status</option>
                                <option value="Empty" selected="@(Model.Status == "Empty")">Empty</option>
                                <option value="Low" selected="@(Model.Status == "Low")">Low</option>
                                <option value="Normal" selected="@(Model.Status == "Normal")">Normal</option>
                                <option value="High" selected="@(Model.Status == "High")">High</option>
                                <option value="Error" selected="@(Model.Status == "Error")">Error</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-filter"></i> Filter
                            </button>
                            <a href="/Readings" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> Clear
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Stats -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h4>Total Records</h4>
                    <h2>@Model.Readings.Count</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h4>Average Weight</h4>
                    <h2>@(Model.Readings.Any() ? Model.Readings.Average(r => r.Weight).ToString("F2") : "0.00") kg</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <h4>Max Weight</h4>
                    <h2>@(Model.Readings.Any() ? Model.Readings.Max(r => r.Weight).ToString("F2") : "0.00") kg</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-secondary text-white">
                <div class="card-body text-center">
                    <h4>Min Weight</h4>
                    <h2>@(Model.Readings.Any() ? Model.Readings.Min(r => r.Weight).ToString("F2") : "0.00") kg</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Readings Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Weight Readings</h5>
                    <div>
                        <button class="btn btn-sm btn-outline-success" onclick="exportToCSV()">
                            <i class="fas fa-download"></i> Export CSV
                        </button>
                        <a href="/" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Readings.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="readingsTable">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Weight (kg)</th>
                                        <th>Device ID</th>
                                        <th>Status</th>
                                        <th>Temperature</th>
                                        <th>Timestamp</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var reading in Model.Readings)
                                    {
                                        <tr>
                                            <td>@reading.Id</td>
                                            <td>@reading.Weight.ToString("F3")</td>
                                            <td>@reading.DeviceId</td>
                                            <td>
                                                @{
                                                    var badgeClass = reading.Status switch
                                                    {
                                                        "Normal" => "badge-success",
                                                        "Low" => "badge-warning",
                                                        "High" => "badge-danger",
                                                        "Empty" => "badge-secondary",
                                                        "Error" => "badge-danger",
                                                        _ => "badge-secondary"
                                                    };
                                                }
                                                <span class="badge @badgeClass">@reading.Status</span>
                                            </td>
                                            <td>@(reading.Temperature?.ToString("F1") ?? "N/A")Â°C</td>
                                            <td>@reading.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No readings found</h4>
                            <p class="text-muted">Try adjusting your filters or check back later.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function exportToCSV() {
            const table = document.getElementById('readingsTable');
            const rows = Array.from(table.querySelectorAll('tr'));
            
            const csvContent = rows.map(row => {
                const cells = Array.from(row.querySelectorAll('th, td'));
                return cells.map(cell => {
                    let content = cell.textContent.trim();
                    // Handle badges - extract just the text
                    const badge = cell.querySelector('.badge');
                    if (badge) {
                        content = badge.textContent.trim();
                    }
                    // Escape quotes and wrap in quotes if contains comma
                    if (content.includes(',') || content.includes('"')) {
                        content = '"' + content.replace(/"/g, '""') + '"';
                    }
                    return content;
                }).join(',');
            }).join('\n');
            
            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            const url = URL.createObjectURL(blob);
            link.setAttribute('href', url);
            link.setAttribute('download', `weight_readings_${new Date().toISOString().split('T')[0]}.csv`);
            link.style.visibility = 'hidden';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
    </script>
}
