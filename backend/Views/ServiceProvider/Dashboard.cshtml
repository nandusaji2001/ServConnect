@{
    ViewData["Title"] = "Service Provider Dashboard";
}

<style>
    .dashboard-container {
        padding: 20px;
        background-color: #f8f9fa;
        min-height: 100vh;
    }
    
    .dashboard-header {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }
    
    .dashboard-header h1 {
        margin: 0;
        font-size: 2.5rem;
        font-weight: 300;
    }
    
    .dashboard-header p {
        margin: 10px 0 0 0;
        opacity: 0.9;
        font-size: 1.1rem;
    }
    
    .welcome-name {
        color: #ffd700;
        font-weight: 500;
    }
    
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }
    
    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-left: 4px solid;
    }
    
    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
    }
    
    .stat-card.services { border-left-color: #4CAF50; }
    .stat-card.bookings { border-left-color: #2196F3; }
    .stat-card.earnings { border-left-color: #FF9800; }
    .stat-card.rating { border-left-color: #9C27B0; }
    
    .stat-number {
        font-size: 2.5rem;
        font-weight: bold;
        margin: 0;
        color: #333;
    }
    
    .stat-label {
        color: #666;
        font-size: 1rem;
        margin: 5px 0 0 0;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .stat-icon {
        float: right;
        font-size: 2rem;
        opacity: 0.3;
        margin-top: -10px;
    }
    
    .quick-actions {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        margin-bottom: 30px;
    }
    
    .quick-action-btn {
        background: white;
        border: none;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        text-decoration: none;
        color: #333;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }
    
    .quick-action-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        color: #4facfe;
        text-decoration: none;
    }
    
    .quick-action-btn i {
        font-size: 2rem;
        margin-bottom: 10px;
        color: #4facfe;
    }
    
    .quick-action-btn span {
        font-weight: 500;
    }
    
    .content-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 20px;
        margin-bottom: 30px;
    }
    
    .main-content {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }
    
    .sidebar-content {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }
    
    .sidebar-card {
        background: white;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }
    
    .section-title {
        margin: 0 0 20px 0;
        color: #333;
        font-size: 1.5rem;
        display: flex;
        align-items: center;
    }
    
    .section-title i {
        margin-right: 10px;
        color: #4facfe;
    }
    
    .booking-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 0;
        border-bottom: 1px solid #eee;
    }
    
    .booking-item:last-child {
        border-bottom: none;
    }
    
    .booking-info h4 {
        margin: 0 0 5px 0;
        color: #333;
        font-size: 1.1rem;
    }
    
    .booking-info p {
        margin: 0;
        color: #666;
        font-size: 0.9rem;
    }
    
    .booking-status {
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 500;
        text-transform: uppercase;
    }
    
    .status-pending {
        background: #fff3cd;
        color: #856404;
    }
    
    .status-confirmed {
        background: #d4edda;
        color: #155724;
    }
    
    .status-completed {
        background: #d1ecf1;
        color: #0c5460;
    }
    
    .notification-item {
        display: flex;
        align-items: start;
        padding: 15px 0;
        border-bottom: 1px solid #eee;
    }
    
    .notification-item:last-child {
        border-bottom: none;
    }
    
    .notification-icon {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        font-size: 1rem;
        color: white;
        background: #4facfe;
    }
    
    .notification-content h5 {
        margin: 0 0 5px 0;
        color: #333;
        font-size: 1rem;
    }
    
    .notification-content p {
        margin: 0;
        color: #666;
        font-size: 0.9rem;
    }
    
    .notification-time {
        color: #999;
        font-size: 0.8rem;
        margin-top: 5px;
    }
    
    .chart-container {
        height: 300px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f8f9fa;
        border-radius: 10px;
        color: #666;
        font-style: italic;
    }
    
    @@media (max-width: 768px) {
        .dashboard-container {
            padding: 10px;
        }
        
        .dashboard-header {
            padding: 20px;
        }
        
        .dashboard-header h1 {
            font-size: 2rem;
        }
        
        .stats-grid {
            grid-template-columns: 1fr;
        }
        
        .quick-actions {
            grid-template-columns: repeat(2, 1fr);
        }
        
        .content-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<style>
    .header-wave svg { display:block; width:100%; height:40px; margin-top:-10px; }
    .dashboard-footer {
        margin-top: 30px;
        padding: 18px 22px;
        border-radius: 12px;
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: #fff;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 12px;
        flex-wrap: wrap;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }
    .dashboard-footer .cta { display:flex; gap:10px; }
    .dashboard-footer .btn-outline-light { border-color:#fff; color:#fff; }
    .dashboard-footer .btn-outline-light:hover { background:#fff; color:#00a6ff; }
</style>

<div class="dashboard-container">
    <!-- Header -->
    <div class="dashboard-header">
        <h1><i class="fas fa-tools"></i> Service Provider Dashboard</h1>
        <p>Welcome back, <span class="welcome-name">@ViewBag.UserName</span>! Ready to serve your customers today?</p>
    </div>
    <div class="header-wave">
        <svg preserveAspectRatio="none" viewBox="0 0 1200 120" xmlns="http://www.w3.org/2000/svg"><path d="M0,0V46.29c47.79,22.2,103.59,29,158,17C289.09,36,348.06-1.72,413,0c60.66,1.6,114.22,34.08,172,48,118.91,28.73,228.91-23.19,332-31,88.8-6.79,171.06,16.13,283,36V0Z" opacity=".25" fill="#4facfe"></path><path d="M0,0V15.81C13,36.92,27.64,56.39,47.69,72.05,99.41,112.19,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8C438.17,19.86,512.34,6.09,583,22.75c59.68,14.15,113.73,46.41,173,60.45,70.05,16.71,136.87,1.93,200-22.45,33-13.16,63.74-31.21,94-49.9V0Z" opacity=".5" fill="#4facfe"></path><path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46C739.57,4.16,784.39,6.3,828,18.31c110.76,30.42,221.61,3.93,372-18.31V0Z" fill="#4facfe"></path></svg>
    </div>

    <!-- Statistics Cards -->
    <div class="stats-grid">
        <div class="stat-card services">
            <div class="stat-icon">
                <i class="fas fa-concierge-bell"></i>
            </div>
            <h2 class="stat-number">@ViewBag.ActiveServices</h2>
            <p class="stat-label">Active Services</p>
        </div>
        
        <div class="stat-card bookings">
            <div class="stat-icon">
                <i class="fas fa-layer-group"></i>
            </div>
            <h2 class="stat-number">@ViewBag.TotalServices</h2>
            <p class="stat-label">Total Services</p>
        </div>
        
        <div class="stat-card earnings">
            <div class="stat-icon">
                <i class="fas fa-toggle-off"></i>
            </div>
            <h2 class="stat-number">@((ViewBag.TotalServices ?? 0) - (ViewBag.ActiveServices ?? 0))</h2>
            <p class="stat-label">Inactive</p>
        </div>
        
        <div class="stat-card rating">
            <div class="stat-icon">
                <i class="fas fa-clock"></i>
            </div>
            <h2 class="stat-number">@DateTime.UtcNow.ToString("MMM yyyy")</h2>
            <p class="stat-label">Updated</p>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions">
        <a href="/ServiceProvider/Services" class="quick-action-btn">
            <i class="fas fa-plus-circle"></i>
            <span>Add Service</span>
        </a>
        
        <a href="/provider/bookings" class="quick-action-btn">
            <div class="d-flex align-items-center">
                <i class="fas fa-calendar-alt me-2"></i>
                <span>View Bookings</span>
                @if (ViewBag.UnrespondedCount > 0)
                {
                    <div class="notification-icon ms-2 position-relative">
                        <i class="fas fa-bell text-warning" style="font-size: 16px;"></i>
                        <span class="badge bg-danger position-absolute top-0 start-100 translate-middle rounded-pill" style="font-size: 0.6rem;">
                            @ViewBag.UnrespondedCount
                        </span>
                    </div>
                }
            </div>
        </a>
        
        <a href="#" class="quick-action-btn">
            <i class="fas fa-chart-line"></i>
            <span>Analytics</span>
        </a>
        
        <a href="/Complaints/Create?role=ServiceProvider" class="quick-action-btn">
            <i class="fas fa-flag"></i>
            <span>Raise Complaint</span>
        </a>
        
        
        <a href="/Home/Items?role=Vendor" class="quick-action-btn">
            <i class="fas fa-store"></i>
            <span>Browse Sellers</span>
        </a>
        
        <a href="#" class="quick-action-btn" onclick="alert('Book Vendor Service flow coming soon');return false;">
            <i class="fas fa-calendar-check"></i>
            <span>Book Vendor Service</span>
        </a>
        
        <a href="/Account/Profile" class="quick-action-btn">
            <i class="fas fa-user-cog"></i>
            <span>Profile</span>
        </a>
    </div>

    <!-- Main Content Grid -->
    <div class="content-grid">
        <!-- Services Summary -->
        <div class="main-content">
            <h3 class="section-title">
                <i class="fas fa-briefcase"></i>
                My Services Snapshot
            </h3>
            <div class="row g-3">
                <div class="col-sm-6 col-lg-3">
                    <div class="stat-card services">
                        <div class="stat-icon"><i class="fas fa-concierge-bell"></i></div>
                        <h2 class="stat-number">@ViewBag.ActiveServices</h2>
                        <p class="stat-label">Active</p>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <div class="stat-card bookings">
                        <div class="stat-icon"><i class="fas fa-layer-group"></i></div>
                        <h2 class="stat-number">@ViewBag.TotalServices</h2>
                        <p class="stat-label">Total</p>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <div class="stat-card earnings">
                        <div class="stat-icon"><i class="fas fa-toggle-off"></i></div>
                        <h2 class="stat-number">@((ViewBag.TotalServices ?? 0) - (ViewBag.ActiveServices ?? 0))</h2>
                        <p class="stat-label">Inactive</p>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <div class="stat-card rating">
                        <div class="stat-icon"><i class="fas fa-clock"></i></div>
                        <h2 class="stat-number">@DateTime.UtcNow.ToString("dd MMM")</h2>
                        <p class="stat-label">As of</p>
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <a href="/ServiceProvider/Services" class="btn btn-primary"><i class="fas fa-plus"></i> Manage Services</a>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="sidebar-content">
            <!-- Notifications -->
            <div class="sidebar-card">
                <h4 class="section-title">
                    <i class="fas fa-bell"></i>
                    Notifications
                </h4>
                
                <div class="notification-item">
                    <div class="notification-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="notification-content">
                        <h5>New Review Received</h5>
                        <p>Sarah gave you 5 stars for cleaning service</p>
                        <div class="notification-time">2 hours ago</div>
                    </div>
                </div>
                
                <div class="notification-item">
                    <div class="notification-icon">
                        <i class="fas fa-calendar"></i>
                    </div>
                    <div class="notification-content">
                        <h5>Booking Reminder</h5>
                        <p>You have a service scheduled for tomorrow</p>
                        <div class="notification-time">5 hours ago</div>
                    </div>
                </div>
                
                <div class="notification-item">
                    <div class="notification-icon">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <div class="notification-content">
                        <h5>Payment Received</h5>
                        <p>$150 payment for plumbing service</p>
                        <div class="notification-time">1 day ago</div>
                    </div>
                </div>
            </div>

            <!-- Analytics: Completed Services -->
            <div class="sidebar-card">
                <h4 class="section-title">
                    <i class="fas fa-chart-line"></i>
                    Analytics: Completed Services
                </h4>
                @{ var completedRecent = ViewBag.CompletedRecent as IEnumerable<dynamic>; }
                @if (completedRecent == null || !completedRecent.Any())
                {
                    <div class="text-muted">No completed services yet.</div>
                }
                else
                {
                    <div>
                        @foreach (var c in completedRecent)
                        {
                            <div class="booking-item" style="padding:10px 0;">
                                <div class="booking-info">
                                    <h4 style="margin:0 0 4px 0;">@c.ServiceName</h4>
                                    <p class="mb-0 text-muted">by @c.UserName • @((c.CompletedAtUtc as DateTime?)?.ToLocalTime().ToString("dd MMM, h:mm tt"))</p>
                                </div>
                                <div class="text-end" style="min-width:90px;">
                                    <span class="badge bg-primary">@((c.UserRating != null ? $"{c.UserRating}/5" : "No rating"))</span>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>

            <!-- Quick Stats -->
            <div class="sidebar-card">
                <h4 class="section-title">
                    <i class="fas fa-tachometer-alt"></i>
                    Quick Stats
                </h4>
                
                <div style="display: flex; justify-content: space-between; margin-bottom: 15px;">
                    <span>This Week:</span>
                    <strong>@(ViewBag.BookingsThisWeek ?? 0) bookings</strong>
                </div>
                
                <div style="display: flex; justify-content: space-between; margin-bottom: 15px;">
                    <span>Response Rate:</span>
                    <strong style="color: #4CAF50;">@((ViewBag.ResponseRatePercent ?? 0.0).ToString("0.0"))%</strong>
                </div>
                
                <div style="display: flex; justify-content: space-between; margin-bottom: 15px;">
                    <span>Completion Rate:</span>
                    <strong style="color: #4CAF50;">@((ViewBag.CompletionRatePercent ?? 0.0).ToString("0.0"))%</strong>
                </div>
                
                <div style="display: flex; justify-content: space-between;">
                    <span>Customer Satisfaction:</span>
                    <strong style="color: #FF9800;">⭐ @((ViewBag.AvgRating ?? 0.0).ToString("0.0"))/5</strong>
                </div>
            </div>
        </div>
        <div class="dashboard-footer">
            <div>
                <strong>Keep your pipeline full</strong>
                <div class="text-white-50">Add new services or check bookings in one click.</div>
            </div>
            <div class="cta">
                <a class="btn btn-sm btn-outline-light" href="/ServiceProvider/Services"><i class="fas fa-plus-circle"></i> Add Service</a>
                <a class="btn btn-sm btn-outline-light" href="#"><i class="fas fa-calendar-alt"></i> Bookings</a>
                <a class="btn btn-sm btn-outline-light" href="/Account/Profile"><i class="fas fa-user-cog"></i> Profile</a>
            </div>
        </div>
    </div>

<script>
    // Add some interactivity
    document.addEventListener('DOMContentLoaded', function() {
        // Animate stat numbers on load
        const statNumbers = document.querySelectorAll('.stat-number');
        statNumbers.forEach(stat => {
            const text = stat.textContent;
            if (text.includes('$')) {
                const finalNumber = parseInt(text.replace('$', '').replace(',', ''));
                let currentNumber = 0;
                const increment = finalNumber / 50;
                
                const timer = setInterval(() => {
                    currentNumber += increment;
                    if (currentNumber >= finalNumber) {
                        stat.textContent = '$' + finalNumber.toLocaleString();
                        clearInterval(timer);
                    } else {
                        stat.textContent = '$' + Math.floor(currentNumber).toLocaleString();
                    }
                }, 30);
            } else if (!text.includes('.')) {
                const finalNumber = parseInt(text);
                let currentNumber = 0;
                const increment = finalNumber / 30;
                
                const timer = setInterval(() => {
                    currentNumber += increment;
                    if (currentNumber >= finalNumber) {
                        stat.textContent = finalNumber;
                        clearInterval(timer);
                    } else {
                        stat.textContent = Math.floor(currentNumber);
                    }
                }, 50);
            }
        });
    });
</script>