@{
    ViewData["Title"] = "Service Provider Dashboard";
}

<style>
    .dashboard-container {
        padding: 20px;
        background-color: #f8f9fa;
        min-height: 100vh;
    }
    
    .dashboard-header {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }
    
    .dashboard-header h1 {
        margin: 0;
        font-size: 2.5rem;
        font-weight: 300;
    }
    
    .dashboard-header p {
        margin: 10px 0 0 0;
        opacity: 0.9;
        font-size: 1.1rem;
    }
    
    .welcome-name {
        color: #ffd700;
        font-weight: 500;
    }
    
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }
    
    .stat-card {
        background: white;
        padding: 25px;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-left: 4px solid;
    }
    
    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
    }
    
    .stat-card.services { border-left-color: #4CAF50; }
    .stat-card.bookings { border-left-color: #2196F3; }
    .stat-card.earnings { border-left-color: #FF9800; }
    .stat-card.rating { border-left-color: #9C27B0; }
    
    .stat-number {
        font-size: 2.5rem;
        font-weight: bold;
        margin: 0;
        color: #333;
    }
    
    .stat-label {
        color: #666;
        font-size: 1rem;
        margin: 5px 0 0 0;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .stat-icon {
        float: right;
        font-size: 2rem;
        opacity: 0.3;
        margin-top: -10px;
    }
    
    .quick-actions {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        margin-bottom: 30px;
    }
    
    .quick-action-btn {
        background: white;
        border: none;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        text-decoration: none;
        color: #333;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }
    
    .quick-action-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        color: #4facfe;
        text-decoration: none;
    }
    
    .quick-action-btn i {
        font-size: 2rem;
        margin-bottom: 10px;
        color: #4facfe;
    }
    
    .quick-action-btn span {
        font-weight: 500;
    }
    
    .content-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 20px;
        margin-bottom: 30px;
    }
    
    .main-content {
        background: white;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }
    
    .sidebar-content {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }
    
    .sidebar-card {
        background: white;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
    }
    
    .section-title {
        margin: 0 0 20px 0;
        color: #333;
        font-size: 1.5rem;
        display: flex;
        align-items: center;
    }
    
    .section-title i {
        margin-right: 10px;
        color: #4facfe;
    }
    
    .booking-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 0;
        border-bottom: 1px solid #eee;
    }
    
    .booking-item:last-child {
        border-bottom: none;
    }
    
    .booking-info h4 {
        margin: 0 0 5px 0;
        color: #333;
        font-size: 1.1rem;
    }
    
    .booking-info p {
        margin: 0;
        color: #666;
        font-size: 0.9rem;
    }
    
    .booking-status {
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 500;
        text-transform: uppercase;
    }
    
    .status-pending {
        background: #fff3cd;
        color: #856404;
    }
    
    .status-confirmed {
        background: #d4edda;
        color: #155724;
    }
    
    .status-completed {
        background: #d1ecf1;
        color: #0c5460;
    }
    
    .notification-item {
        display: flex;
        align-items: start;
        padding: 15px 0;
        border-bottom: 1px solid #eee;
    }
    
    .notification-item:last-child {
        border-bottom: none;
    }
    
    .notification-icon {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        font-size: 1rem;
        color: white;
        background: #4facfe;
    }
    
    .notification-content h5 {
        margin: 0 0 5px 0;
        color: #333;
        font-size: 1rem;
    }
    
    .notification-content p {
        margin: 0;
        color: #666;
        font-size: 0.9rem;
    }
    
    .notification-time {
        color: #999;
        font-size: 0.8rem;
        margin-top: 5px;
    }
    
    .chart-container {
        height: 300px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f8f9fa;
        border-radius: 10px;
        color: #666;
        font-style: italic;
    }
    
    @@media (max-width: 768px) {
        .dashboard-container {
            padding: 10px;
        }
        
        .dashboard-header {
            padding: 20px;
        }
        
        .dashboard-header h1 {
            font-size: 2rem;
        }
        
        .stats-grid {
            grid-template-columns: 1fr;
        }
        
        .quick-actions {
            grid-template-columns: repeat(2, 1fr);
        }
        
        .content-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="dashboard-container">
    <!-- Header -->
    <div class="dashboard-header">
        <h1><i class="fas fa-tools"></i> Service Provider Dashboard</h1>
        <p>Welcome back, <span class="welcome-name">@ViewBag.UserName</span>! Ready to serve your customers today?</p>
    </div>

    <!-- Statistics Cards -->
    <div class="stats-grid">
        <div class="stat-card services">
            <div class="stat-icon">
                <i class="fas fa-concierge-bell"></i>
            </div>
            <h2 class="stat-number">12</h2>
            <p class="stat-label">Active Services</p>
        </div>
        
        <div class="stat-card bookings">
            <div class="stat-icon">
                <i class="fas fa-calendar-check"></i>
            </div>
            <h2 class="stat-number">47</h2>
            <p class="stat-label">Total Bookings</p>
        </div>
        
        <div class="stat-card earnings">
            <div class="stat-icon">
                <i class="fas fa-dollar-sign"></i>
            </div>
            <h2 class="stat-number">$2,340</h2>
            <p class="stat-label">This Month</p>
        </div>
        
        <div class="stat-card rating">
            <div class="stat-icon">
                <i class="fas fa-star"></i>
            </div>
            <h2 class="stat-number">4.8</h2>
            <p class="stat-label">Average Rating</p>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions">
        <a href="/ServiceProvider/Services" class="quick-action-btn">
            <i class="fas fa-plus-circle"></i>
            <span>Add Service</span>
        </a>
        
        <a href="#" class="quick-action-btn">
            <i class="fas fa-calendar-alt"></i>
            <span>View Bookings</span>
        </a>
        
        <a href="#" class="quick-action-btn">
            <i class="fas fa-chart-line"></i>
            <span>Analytics</span>
        </a>
        
        <a href="#" class="quick-action-btn">
            <i class="fas fa-comments"></i>
            <span>Messages</span>
        </a>
        
        <a href="/Account/Profile" class="quick-action-btn">
            <i class="fas fa-user-cog"></i>
            <span>Profile</span>
        </a>
    </div>

    <!-- Main Content Grid -->
    <div class="content-grid">
        <!-- Recent Bookings -->
        <div class="main-content">
            <h3 class="section-title">
                <i class="fas fa-calendar-check"></i>
                Recent Bookings
            </h3>
            
            <div class="booking-item">
                <div class="booking-info">
                    <h4>Home Cleaning Service</h4>
                    <p>Customer: Sarah Johnson • Tomorrow, 2:00 PM</p>
                </div>
                <span class="booking-status status-confirmed">Confirmed</span>
            </div>
            
            <div class="booking-item">
                <div class="booking-info">
                    <h4>Plumbing Repair</h4>
                    <p>Customer: Mike Davis • Today, 4:30 PM</p>
                </div>
                <span class="booking-status status-pending">Pending</span>
            </div>
            
            <div class="booking-item">
                <div class="booking-info">
                    <h4>Electrical Installation</h4>
                    <p>Customer: Lisa Brown • Yesterday</p>
                </div>
                <span class="booking-status status-completed">Completed</span>
            </div>
            
            <div class="booking-item">
                <div class="booking-info">
                    <h4>Garden Maintenance</h4>
                    <p>Customer: Robert Wilson • Dec 15, 10:00 AM</p>
                </div>
                <span class="booking-status status-confirmed">Confirmed</span>
            </div>
            
            <!-- Earnings Chart Placeholder -->
            <h3 class="section-title" style="margin-top: 30px;">
                <i class="fas fa-chart-area"></i>
                Earnings Overview
            </h3>
            <div class="chart-container">
                <p>📊 Earnings chart will be displayed here</p>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="sidebar-content">
            <!-- Notifications -->
            <div class="sidebar-card">
                <h4 class="section-title">
                    <i class="fas fa-bell"></i>
                    Notifications
                </h4>
                
                <div class="notification-item">
                    <div class="notification-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="notification-content">
                        <h5>New Review Received</h5>
                        <p>Sarah gave you 5 stars for cleaning service</p>
                        <div class="notification-time">2 hours ago</div>
                    </div>
                </div>
                
                <div class="notification-item">
                    <div class="notification-icon">
                        <i class="fas fa-calendar"></i>
                    </div>
                    <div class="notification-content">
                        <h5>Booking Reminder</h5>
                        <p>You have a service scheduled for tomorrow</p>
                        <div class="notification-time">5 hours ago</div>
                    </div>
                </div>
                
                <div class="notification-item">
                    <div class="notification-icon">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <div class="notification-content">
                        <h5>Payment Received</h5>
                        <p>$150 payment for plumbing service</p>
                        <div class="notification-time">1 day ago</div>
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="sidebar-card">
                <h4 class="section-title">
                    <i class="fas fa-tachometer-alt"></i>
                    Quick Stats
                </h4>
                
                <div style="display: flex; justify-content: space-between; margin-bottom: 15px;">
                    <span>This Week:</span>
                    <strong>8 bookings</strong>
                </div>
                
                <div style="display: flex; justify-content: space-between; margin-bottom: 15px;">
                    <span>Response Rate:</span>
                    <strong style="color: #4CAF50;">98%</strong>
                </div>
                
                <div style="display: flex; justify-content: space-between; margin-bottom: 15px;">
                    <span>Completion Rate:</span>
                    <strong style="color: #4CAF50;">95%</strong>
                </div>
                
                <div style="display: flex; justify-content: space-between;">
                    <span>Customer Satisfaction:</span>
                    <strong style="color: #FF9800;">⭐ 4.8/5</strong>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Add some interactivity
    document.addEventListener('DOMContentLoaded', function() {
        // Animate stat numbers on load
        const statNumbers = document.querySelectorAll('.stat-number');
        statNumbers.forEach(stat => {
            const text = stat.textContent;
            if (text.includes('$')) {
                const finalNumber = parseInt(text.replace('$', '').replace(',', ''));
                let currentNumber = 0;
                const increment = finalNumber / 50;
                
                const timer = setInterval(() => {
                    currentNumber += increment;
                    if (currentNumber >= finalNumber) {
                        stat.textContent = '$' + finalNumber.toLocaleString();
                        clearInterval(timer);
                    } else {
                        stat.textContent = '$' + Math.floor(currentNumber).toLocaleString();
                    }
                }, 30);
            } else if (!text.includes('.')) {
                const finalNumber = parseInt(text);
                let currentNumber = 0;
                const increment = finalNumber / 30;
                
                const timer = setInterval(() => {
                    currentNumber += increment;
                    if (currentNumber >= finalNumber) {
                        stat.textContent = finalNumber;
                        clearInterval(timer);
                    } else {
                        stat.textContent = Math.floor(currentNumber);
                    }
                }, 50);
            }
        });
    });
</script>