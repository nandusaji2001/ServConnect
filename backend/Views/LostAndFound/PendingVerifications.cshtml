@model ServConnect.ViewModels.PendingVerificationsViewModel
@{
    ViewData["Title"] = "Pending Verifications";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1"><i class="bi bi-clipboard-check me-2"></i>Pending Verifications</h2>
            <p class="text-muted mb-0">Review claims on items you found</p>
        </div>
        <a asp-action="MyFoundItems" class="btn btn-outline-primary">
            <i class="bi bi-box-seam me-1"></i> My Found Items
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.PendingClaims.Count == 0)
    {
        <div class="text-center py-5">
            <i class="bi bi-check-circle display-1 text-success"></i>
            <h4 class="mt-3">All caught up!</h4>
            <p class="text-muted">No pending claims to verify at the moment.</p>
            <a asp-action="MyFoundItems" class="btn btn-primary mt-2">
                <i class="bi bi-box-seam me-1"></i> View My Found Items
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-info mb-4">
            <i class="bi bi-info-circle me-2"></i>
            You have <strong>@Model.PendingClaims.Count</strong> claim(s) waiting for your verification.
            Review the private ownership details provided by claimants and verify if they match the actual item.
        </div>

        <div class="row g-4">
            @foreach (var claim in Model.PendingClaims)
            {
                <div class="col-12">
                    <div class="card shadow-sm border-warning">
                        <div class="card-header bg-warning d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-hourglass-split me-2"></i>Pending Verification</span>
                            <span class="badge bg-dark">Attempt @claim.AttemptCount / 2</span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    @if (claim.Item?.Images.Count > 0)
                                    {
                                        <img src="@claim.Item.Images[0]" class="img-fluid rounded" 
                                             style="height: 180px; width: 100%; object-fit: cover;">
                                    }
                                    <div class="mt-2">
                                        <h5>@claim.Item?.Title</h5>
                                        <span class="badge bg-secondary">@claim.Item?.Category</span>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="card mb-3">
                                        <div class="card-body py-2">
                                            <h6 class="text-muted mb-1">Claimant</h6>
                                            <strong>@claim.ClaimantName</strong>
                                            <div class="small text-muted">Claimed @claim.CreatedAt.ToString("MMM dd, yyyy")</div>
                                        </div>
                                    </div>

                                    <div class="card border-primary mb-3">
                                        <div class="card-header bg-primary text-white py-2">
                                            <small><i class="bi bi-key me-2"></i>Private Ownership Details</small>
                                        </div>
                                        <div class="card-body">
                                            <p class="mb-0 small" style="white-space: pre-wrap;">
                                                @(claim.PrivateOwnershipDetails.Length > 200 
                                                    ? claim.PrivateOwnershipDetails.Substring(0, 200) + "..." 
                                                    : claim.PrivateOwnershipDetails)
                                            </p>
                                        </div>
                                    </div>

                                    @if (claim.ProofImages.Count > 0)
                                    {
                                        <div class="mb-3">
                                            <small class="text-muted">Proof Documents: @claim.ProofImages.Count file(s)</small>
                                        </div>
                                    }

                                    <a asp-action="VerifyClaim" asp-route-id="@claim.Id" class="btn btn-warning">
                                        <i class="bi bi-clipboard-check me-2"></i>Review & Verify
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Lost & Found
        </a>
    </div>
</div>
