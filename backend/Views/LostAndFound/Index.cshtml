@model ServConnect.ViewModels.LostFoundListViewModel
@{
    ViewData["Title"] = "Lost & Found";
}

<style>
    :root {
        --primary: #10B981;
        --primary-dark: #059669;
        --primary-light: #34D399;
        --bg-light: #ffffff;
        --bg-section: #f8fafc;
        --bg-card: #ffffff;
        --bg-card-hover: #f9fafb;
        --text-primary: #1f2937;
        --text-secondary: #6b7280;
        --border-color: #e5e7eb;
        --gradient-primary: linear-gradient(135deg, #10B981 0%, #059669 100%);
        --shadow-sm: 0 4px 6px rgba(0, 0, 0, 0.05);
        --shadow-md: 0 10px 25px rgba(0, 0, 0, 0.1);
        --shadow-lg: 0 25px 50px rgba(0, 0, 0, 0.15);
        --shadow-glow: 0 10px 40px rgba(16, 185, 129, 0.3);
    }

    body {
        background: linear-gradient(135deg, #f0fdf4 0%, #ecfdf5 50%, #d1fae5 100%);
        min-height: 100vh;
    }

    .lf-container {
        padding: 40px 15px;
        max-width: 1600px;
        margin: 0 auto;
    }

    .back-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(12px);
        color: var(--text-primary);
        border-radius: 50px;
        text-decoration: none;
        font-weight: 500;
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--border-color);
        transition: all 0.3s ease;
        margin-bottom: 30px;
    }

    .back-btn:hover {
        transform: translateX(-5px);
        box-shadow: var(--shadow-md);
        color: var(--primary);
        border-color: var(--primary);
        text-decoration: none;
    }

    .lf-header {
        text-align: center;
        margin-bottom: 40px;
        animation: fadeInDown 0.8s ease-out;
    }

    .lf-header h1 {
        font-size: 3rem;
        font-weight: 800;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 16px;
    }

    .lf-header p {
        font-size: 1.15rem;
        color: var(--text-secondary);
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.8;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 16px;
        margin-bottom: 40px;
        flex-wrap: wrap;
        animation: fadeInUp 0.8s ease-out 0.2s both;
    }

    .action-btn {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 16px 32px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 1rem;
        text-decoration: none;
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .action-btn.primary {
        background: var(--gradient-primary);
        color: white;
        box-shadow: var(--shadow-sm);
    }

    .action-btn.primary:hover {
        transform: translateY(-3px);
        box-shadow: var(--shadow-glow);
        text-decoration: none;
        color: white;
    }

    .action-btn.secondary {
        background: rgba(255, 255, 255, 0.95);
        color: var(--primary);
        border: 2px solid var(--primary);
    }

    .action-btn.secondary:hover {
        background: var(--primary);
        color: white;
        transform: translateY(-3px);
        text-decoration: none;
    }

    .stats-row {
        display: flex;
        justify-content: center;
        gap: 40px;
        margin-bottom: 40px;
        animation: fadeInUp 0.8s ease-out 0.3s both;
    }

    .stat-item {
        text-align: center;
        padding: 20px 30px;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 16px;
        box-shadow: var(--shadow-sm);
    }

    .stat-item .number {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--primary);
    }

    .stat-item .label {
        font-size: 0.9rem;
        color: var(--text-secondary);
        margin-top: 4px;
    }

    .filter-section {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(12px);
        padding: 20px 30px;
        border-radius: 20px;
        margin-bottom: 30px;
        box-shadow: var(--shadow-sm);
        animation: fadeInUp 0.8s ease-out 0.4s both;
    }

    .filter-section h6 {
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 16px;
    }

    .filter-pills {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }

    .filter-pill {
        padding: 10px 20px;
        border-radius: 50px;
        font-size: 0.9rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.3s ease;
        border: 1px solid var(--border-color);
        background: white;
        color: var(--text-secondary);
    }

    .filter-pill:hover, .filter-pill.active {
        background: var(--gradient-primary);
        color: white;
        border-color: var(--primary);
        text-decoration: none;
        transform: translateY(-2px);
    }

    .items-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 24px;
        animation: fadeInUp 0.8s ease-out 0.5s both;
    }

    .item-card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: var(--shadow-sm);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        position: relative;
    }

    .item-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background: var(--gradient-primary);
        transform: scaleY(0);
        transition: transform 0.3s ease;
    }

    .item-card:hover::before {
        transform: scaleY(1);
    }

    .item-card:hover {
        transform: translateY(-8px);
        background: var(--bg-card-hover);
        border-color: var(--primary);
        box-shadow: var(--shadow-lg);
    }

    .item-image {
        height: 200px;
        background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    .item-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .item-card:hover .item-image img {
        transform: scale(1.08);
    }

    .item-image .placeholder-icon {
        font-size: 4rem;
        color: var(--primary);
        opacity: 0.3;
    }

    .item-badges {
        position: absolute;
        top: 12px;
        left: 12px;
        right: 12px;
        display: flex;
        justify-content: space-between;
    }

    .badge-category {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(8px);
        color: var(--text-primary);
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .badge-condition {
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        color: white;
    }

    .badge-condition.good { background: var(--primary); }
    .badge-condition.damaged { background: #EF4444; }
    .badge-condition.used { background: #F59E0B; }

    .item-content {
        padding: 24px;
    }

    .item-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 10px;
        line-height: 1.3;
    }

    .item-description {
        color: var(--text-secondary);
        font-size: 0.9rem;
        line-height: 1.6;
        margin-bottom: 16px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .item-meta {
        display: flex;
        flex-direction: column;
        gap: 8px;
        padding-top: 16px;
        border-top: 1px solid var(--border-color);
        font-size: 0.85rem;
        color: var(--text-secondary);
    }

    .item-meta i {
        color: var(--primary);
        width: 20px;
    }

    .item-btn {
        width: 100%;
        background: var(--gradient-primary);
        border: none;
        padding: 14px;
        border-radius: 12px;
        color: white;
        font-weight: 600;
        font-size: 0.95rem;
        cursor: pointer;
        margin-top: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        text-decoration: none;
    }

    .item-btn:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-glow);
        color: white;
        text-decoration: none;
    }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        grid-column: 1 / -1;
    }

    .empty-state i {
        font-size: 5rem;
        color: var(--primary);
        opacity: 0.3;
        margin-bottom: 24px;
    }

    .empty-state h3 {
        font-size: 1.5rem;
        color: var(--text-primary);
        margin-bottom: 12px;
    }

    .empty-state p {
        color: var(--text-secondary);
        max-width: 400px;
        margin: 0 auto 24px;
    }

    .dashboard-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 24px;
        margin-top: 60px;
        animation: fadeInUp 0.8s ease-out 0.6s both;
    }

    .dashboard-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(12px);
        border-radius: 20px;
        padding: 32px;
        text-align: center;
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--border-color);
        transition: all 0.3s ease;
    }

    .dashboard-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-md);
        border-color: var(--primary);
    }

    .dashboard-card i {
        font-size: 3rem;
        color: var(--primary);
        margin-bottom: 16px;
    }

    .dashboard-card h5 {
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 8px;
    }

    .dashboard-card p {
        color: var(--text-secondary);
        font-size: 0.9rem;
        margin-bottom: 20px;
    }

    .dashboard-card .btn {
        background: var(--gradient-primary);
        border: none;
        padding: 12px 28px;
        border-radius: 50px;
        color: white;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .dashboard-card .btn:hover {
        transform: scale(1.05);
        box-shadow: var(--shadow-glow);
    }

    .alert {
        border-radius: 16px;
        border: none;
        padding: 16px 24px;
    }

    .alert-success {
        background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
        color: var(--primary-dark);
    }

    @@keyframes fadeInDown {
        from { opacity: 0; transform: translateY(-30px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @@media (max-width: 768px) {
        .lf-header h1 { font-size: 2.2rem; }
        .action-buttons { flex-direction: column; align-items: center; }
        .stats-row { flex-direction: column; gap: 16px; }
        .items-grid { grid-template-columns: 1fr; }
    }
</style>

<div class="lf-container">
    <a href="/Home/ExploreServices" class="back-btn">
        <i class="fas fa-arrow-left"></i> Back to Services
    </a>

    <div class="lf-header">
        <h1><i class="fas fa-search me-3"></i>Lost & Found</h1>
        <p>Help reunite lost items with their owners. Report found items or claim your lost belongings.</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="action-buttons">
        @if (User.Identity?.IsAuthenticated == true)
        {
            <a asp-action="ReportFound" class="action-btn primary">
                <i class="fas fa-plus-circle"></i> Report Found Item
            </a>
            <a asp-action="LostItems" class="action-btn secondary">
                <i class="fas fa-exclamation-triangle"></i> Browse Lost Items
            </a>
            <a asp-action="MyFoundItems" class="action-btn secondary">
                <i class="fas fa-box"></i> My Found Items
            </a>
            <a asp-action="MyClaims" class="action-btn secondary">
                <i class="fas fa-hand-paper"></i> My Claims
            </a>
        }
        else
        {
            <a href="/Account/Login?returnUrl=/LostAndFound/ReportFound" class="action-btn primary">
                <i class="fas fa-plus-circle"></i> Report Found Item
            </a>
            <a asp-action="LostItems" class="action-btn secondary">
                <i class="fas fa-exclamation-triangle"></i> Browse Lost Items
            </a>
        }
    </div>

    <div class="stats-row">
        <div class="stat-item">
            <div class="number">@Model.TotalCount</div>
            <div class="label">Available Items</div>
        </div>
    </div>

    <div class="filter-section">
        <h6><i class="fas fa-filter me-2"></i>Filter by Category</h6>
        <div class="filter-pills">
            <a href="@Url.Action("Index")" class="filter-pill @(string.IsNullOrEmpty(Model.CategoryFilter) ? "active" : "")">
                All Items
            </a>
            @foreach (var cat in ServConnect.Models.LostFoundItemCategory.All)
            {
                <a href="@Url.Action("Index", new { category = cat })" 
                   class="filter-pill @(Model.CategoryFilter == cat ? "active" : "")">
                    @cat
                </a>
            }
        </div>
    </div>

    <div class="items-grid">
        @if (Model.Items.Count == 0)
        {
            <div class="empty-state">
                <i class="fas fa-inbox"></i>
                <h3>No items found</h3>
                <p>Be the first to report a found item and help someone find their lost belongings!</p>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a asp-action="ReportFound" class="action-btn primary">
                        <i class="fas fa-plus-circle"></i> Report Found Item
                    </a>
                }
            </div>
        }
        else
        {
            @foreach (var item in Model.Items)
            {
                <div class="item-card">
                    <div class="item-image">
                        @if (item.Images.Count > 0)
                        {
                            <img src="@item.Images[0]" alt="@item.Title">
                        }
                        else
                        {
                            <i class="fas fa-image placeholder-icon"></i>
                        }
                        <div class="item-badges">
                            <span class="badge-category">@item.Category</span>
                            <span class="badge-condition @item.Condition.ToLower()">@item.Condition</span>
                        </div>
                    </div>
                    <div class="item-content">
                        <h3 class="item-title">@item.Title</h3>
                        <p class="item-description">
                            @(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)
                        </p>
                        <div class="item-meta">
                            <div><i class="fas fa-map-marker-alt"></i> @item.FoundLocation</div>
                            <div><i class="fas fa-calendar"></i> Found: @item.FoundDate.ToString("MMM dd, yyyy")</div>
                        </div>
                        <a asp-action="Details" asp-route-id="@item.Id" class="item-btn">
                            <i class="fas fa-eye"></i> View Details
                        </a>
                    </div>
                </div>
            }
        }
    </div>

    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="dashboard-cards">
            <div class="dashboard-card">
                <i class="fas fa-box-open"></i>
                <h5>My Found Items</h5>
                <p>Manage items you've reported as found and review pending claims</p>
                <a asp-action="MyFoundItems" class="btn">View Items</a>
            </div>
            <div class="dashboard-card">
                <i class="fas fa-clipboard-check"></i>
                <h5>My Claims</h5>
                <p>Track the status of your item claims and verification progress</p>
                <a asp-action="MyClaims" class="btn">View Claims</a>
            </div>
            <div class="dashboard-card">
                <i class="fas fa-exclamation-triangle" style="color: #EF4444;"></i>
                <h5>My Lost Items</h5>
                <p>Track items you've reported as lost and see if anyone found them</p>
                <a asp-action="MyLostItems" class="btn">View Lost Items</a>
            </div>
        </div>
    }
</div>
