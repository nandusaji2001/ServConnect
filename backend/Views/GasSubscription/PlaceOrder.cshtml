@{
    ViewData["Title"] = "Place Gas Order";
    var vendors = ViewBag.Vendors as List<ServConnect.Models.Users> ?? new List<ServConnect.Models.Users>();
    var subscription = ViewBag.Subscription as ServConnect.Models.GasSubscription;
}

<div class="container py-4" style="max-width: 600px;">
    <!-- Header -->
    <div class="d-flex align-items-center mb-4">
        <a href="@Url.Action("Index", "GasSubscription")" class="btn btn-outline-secondary me-3">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div>
            <h2 class="mb-0">
                <i class="bi bi-cart-plus text-success me-2"></i>
                Order Gas Cylinder
            </h2>
            <p class="text-muted mb-0">Place a manual gas cylinder order</p>
        </div>
    </div>

    @if (!vendors.Any())
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <strong>No Vendors Available</strong>
            <p class="mb-0 mt-2">There are no gas vendors registered on the platform yet. Please check back later.</p>
        </div>
    }
    else
    {
        <form id="orderForm">
            <!-- Vendor Selection -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="bi bi-shop me-2"></i>Select Gas Vendor
                    </h5>

                    <div class="list-group list-group-flush" id="vendorList">
                        @foreach (var vendor in vendors)
                        {
                            var isPreferred = subscription?.PreferredVendorId == vendor.Id;
                            
                            <label class="list-group-item list-group-item-action d-flex align-items-center gap-3 py-3 @(isPreferred ? "border-success" : "")">
                                <input type="radio" name="vendorId" value="@vendor.Id" 
                                       class="form-check-input flex-shrink-0" style="width: 20px; height: 20px;"
                                       @(isPreferred ? "checked" : "")>
                                <div class="flex-grow-1">
                                    <div class="fw-medium">
                                        @(vendor.BusinessName ?? vendor.FullName)
                                        @if (isPreferred)
                                        {
                                            <span class="badge bg-success ms-2">Preferred</span>
                                        }
                                    </div>
                                    @if (!string.IsNullOrEmpty(vendor.BusinessAddress))
                                    {
                                        <small class="text-muted">
                                            <i class="bi bi-geo-alt me-1"></i>@vendor.BusinessAddress
                                        </small>
                                    }
                                </div>
                                <i class="bi bi-chevron-right text-muted"></i>
                            </label>
                        }
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="bi bi-receipt me-2"></i>Order Summary
                    </h5>

                    <div class="d-flex justify-content-between py-2">
                        <span>LPG Gas Cylinder (2kg)</span>
                        <span class="fw-bold">₹500.00</span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between py-2">
                        <span class="fw-bold">Total</span>
                        <span class="fw-bold text-success fs-5">₹500.00</span>
                    </div>

                    <div class="alert alert-info mt-3 mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        Payment will be collected on delivery (COD)
                    </div>
                </div>
            </div>

            <!-- Delivery Address -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="bi bi-geo-alt me-2"></i>Delivery Address
                    </h5>

                    @if (!string.IsNullOrEmpty(subscription?.DeliveryAddress))
                    {
                        <div class="p-3 bg-light rounded mb-3">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <strong>@subscription.UserPhone</strong>
                                    <p class="mb-0 text-muted">@subscription.DeliveryAddress</p>
                                </div>
                                <i class="bi bi-check-circle-fill text-success"></i>
                            </div>
                        </div>
                        <a href="@Url.Action("Settings", "GasSubscription")" class="btn btn-sm btn-link p-0">
                            <i class="bi bi-pencil me-1"></i>Change address
                        </a>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            Please configure your delivery address first.
                            <a href="@Url.Action("Settings", "GasSubscription")" class="alert-link">Configure now</a>
                        </div>
                    }
                </div>
            </div>

            <!-- Place Order Button -->
            <button type="submit" class="btn btn-success btn-lg w-100" id="placeOrderBtn"
                    @(string.IsNullOrEmpty(subscription?.DeliveryAddress) ? "disabled" : "")>
                <i class="bi bi-check-lg me-2"></i>Place Order
            </button>
        </form>
    }
</div>

@section Scripts {
    <script>
        document.getElementById('orderForm')?.addEventListener('submit', async function(e) {
            e.preventDefault();

            const vendorId = document.querySelector('input[name="vendorId"]:checked')?.value;
            if (!vendorId) {
                alert('Please select a vendor');
                return;
            }

            const btn = document.getElementById('placeOrderBtn');
            const originalText = btn.innerHTML;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Placing Order...';
            btn.disabled = true;

            try {
                const response = await fetch('/api/GasSubscriptionApi/orders', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ vendorId: vendorId })
                });

                const result = await response.json();

                if (result.success) {
                    btn.innerHTML = '<i class="bi bi-check-circle me-2"></i>Order Placed!';
                    btn.classList.remove('btn-success');
                    btn.classList.add('btn-primary');

                    setTimeout(() => {
                        window.location.href = '/GasSubscription/OrderDetails/' + result.order.id;
                    }, 1000);
                } else {
                    throw new Error(result.message || 'Failed to place order');
                }
            } catch (error) {
                alert('Error placing order: ' + error.message);
                btn.innerHTML = originalText;
                btn.disabled = false;
            }
        });
    </script>
}
