@model List<ServConnect.Models.GasOrder>
@{
    ViewData["Title"] = "Gas Order History";
}

<div class="container py-4">
    <!-- Header -->
    <div class="d-flex align-items-center mb-4">
        <a href="@Url.Action("Index", "GasSubscription")" class="btn btn-outline-secondary me-3">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div>
            <h2 class="mb-0">
                <i class="bi bi-clock-history text-primary me-2"></i>
                Gas Order History
            </h2>
            <p class="text-muted mb-0">View all your gas cylinder orders</p>
        </div>
    </div>

    @if (Model?.Any() == true)
    {
        <div class="card border-0 shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Order Date</th>
                            <th>Vendor</th>
                            <th>Item</th>
                            <th>Price</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>
                                    <span class="fw-medium">@order.CreatedAt.ToString("MMM dd, yyyy")</span>
                                    <br />
                                    <small class="text-muted">@order.CreatedAt.ToString("hh:mm tt")</small>
                                </td>
                                <td>@order.VendorName</td>
                                <td>@order.GasItemName</td>
                                <td>â‚¹@order.Price</td>
                                <td>
                                    @if (order.IsAutoTriggered)
                                    {
                                        <span class="badge bg-info">
                                            <i class="bi bi-lightning me-1"></i>Auto
                                        </span>
                                        @if (order.TriggerGasPercentage.HasValue)
                                        {
                                            <br />
                                            <small class="text-muted">@order.TriggerGasPercentage.Value.ToString("F0")% level</small>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Manual</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(order.Status)">
                                        @order.Status
                                    </span>
                                </td>
                                <td>
                                    <a href="@Url.Action("OrderDetails", "GasSubscription", new { id = order.Id })" 
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox display-1 text-muted mb-3"></i>
                <h5>No Orders Yet</h5>
                <p class="text-muted mb-4">Your gas order history will appear here</p>
                <a href="@Url.Action("PlaceOrder", "GasSubscription")" class="btn btn-primary">
                    <i class="bi bi-cart-plus me-2"></i>Place Your First Order
                </a>
            </div>
        </div>
    }
</div>

@functions {
    string GetStatusBadgeClass(GasOrderStatus status)
    {
        return status switch
        {
            GasOrderStatus.Delivered => "bg-success",
            GasOrderStatus.Accepted => "bg-info",
            GasOrderStatus.OutForDelivery => "bg-primary",
            GasOrderStatus.Pending => "bg-warning text-dark",
            GasOrderStatus.Cancelled or GasOrderStatus.Rejected => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
