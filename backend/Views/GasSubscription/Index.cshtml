@model ServConnect.Models.GasSubscriptionDashboard
@{
    ViewData["Title"] = "Gas Cylinder Monitor";
    var vendors = ViewBag.Vendors as List<ServConnect.Models.Users> ?? new List<ServConnect.Models.Users>();
}

<style>
    /* Modern Gas Subscription Page Styles */
    .gas-page-wrapper {
        overflow-x: hidden;
    }

    .gas-hero {
        background: linear-gradient(135deg, #ff9a44 0%, #fc6076 100%);
        padding: 40px 15px 80px;
        text-align: center;
        color: white;
        margin: -1rem -0.75rem 0;
        position: relative;
        overflow: hidden;
    }

    .gas-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.08'%3E%3Ccircle cx='30' cy='30' r='4'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    }

    .gas-hero h1 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 8px;
        position: relative;
        z-index: 1;
    }

    .gas-hero p {
        font-size: 1rem;
        opacity: 0.9;
        max-width: 500px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: rgba(255, 255, 255, 0.9);
        text-decoration: none;
        font-size: 0.95rem;
        margin-bottom: 12px;
        transition: all 0.3s ease;
        position: relative;
        z-index: 1;
    }

    .back-link:hover {
        color: white;
        transform: translateX(-5px);
    }

    .hero-actions {
        display: flex;
        justify-content: center;
        gap: 12px;
        margin-top: 20px;
        position: relative;
        z-index: 1;
        flex-wrap: wrap;
    }

    .hero-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 22px;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        border: 2px solid white;
        font-size: 0.9rem;
    }

    .hero-btn-primary {
        background: white;
        color: #fc6076;
    }

    .hero-btn-primary:hover {
        background: transparent;
        color: white;
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .hero-btn-outline {
        background: transparent;
        color: white;
    }

    .hero-btn-outline:hover {
        background: white;
        color: #fc6076;
        transform: translateY(-3px);
    }

    .dashboard-container {
        max-width: 1100px;
        margin: -50px auto 0;
        padding: 0 15px 40px;
        position: relative;
        z-index: 2;
    }

    /* Modern Card Styles */
    .modern-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        transition: all 0.3s ease;
        height: 100%;
    }

    .modern-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.12);
    }

    .card-accent {
        height: 5px;
        background: linear-gradient(90deg, #ff9a44, #fc6076);
    }

    .card-accent-success {
        background: linear-gradient(90deg, #00c853, #69f0ae);
    }

    .card-accent-info {
        background: linear-gradient(90deg, #00c6ff, #0072ff);
    }

    .card-accent-warning {
        background: linear-gradient(90deg, #ffc107, #ff9800);
    }

    .modern-card-body {
        padding: 20px;
    }

    .modern-card-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #1a1a2e;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .modern-card-title i {
        font-size: 1.2rem;
        color: #fc6076;
    }

    /* Cylinder Visual - Enhanced */
    .cylinder-visual-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 15px 0;
    }

    .cylinder-wrapper {
        position: relative;
        width: 120px;
        filter: drop-shadow(0 15px 25px rgba(0,0,0,0.12));
    }

    .modern-cylinder-cap {
        width: 42px;
        height: 14px;
        background: linear-gradient(to bottom, #555, #333);
        margin: 0 auto;
        border-radius: 5px 5px 0 0;
    }

    .modern-cylinder-valve {
        width: 22px;
        height: 25px;
        background: linear-gradient(to right, #444, #666, #444);
        margin: 0 auto;
        border-radius: 3px;
        position: relative;
    }

    .modern-cylinder-valve::after {
        content: '';
        position: absolute;
        top: 4px;
        left: 50%;
        transform: translateX(-50%);
        width: 10px;
        height: 10px;
        background: #333;
        border-radius: 50%;
    }

    .modern-cylinder-body {
        width: 100%;
        height: 160px;
        background: linear-gradient(to right, #e74c3c 0%, #c0392b 15%, #e74c3c 50%, #c0392b 85%, #e74c3c 100%);
        border-radius: 10px 10px 20px 20px;
        position: relative;
        overflow: hidden;
        box-shadow: inset -12px 0 25px rgba(0,0,0,0.2), inset 12px 0 25px rgba(255,255,255,0.08);
    }

    .gas-fill {
        position: absolute;
        bottom: 0;
        left: 4px;
        right: 4px;
        background: linear-gradient(to top, #27ae60, #2ecc71, #58d68d);
        transition: height 0.8s cubic-bezier(0.4, 0, 0.2, 1);
        border-radius: 0 0 17px 17px;
    }

    .gas-fill.status-full,
    .gas-fill.status-good {
        background: linear-gradient(to top, #00c853, #69f0ae, #b9f6ca);
    }

    .gas-fill.status-half {
        background: linear-gradient(to top, #ff9800, #ffc107, #ffe082);
    }

    .gas-fill.status-low {
        background: linear-gradient(to top, #ff5722, #ff9800, #ffcc80);
    }

    .gas-fill.status-critical {
        background: linear-gradient(to top, #d32f2f, #f44336, #ef9a9a);
        animation: critical-pulse 1.5s ease-in-out infinite;
    }

    @@keyframes critical-pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.6; }
    }

    .gas-bubbles-modern {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 100%;
        overflow: hidden;
    }

    .modern-bubble {
        position: absolute;
        bottom: -12px;
        background: rgba(255,255,255,0.5);
        border-radius: 50%;
        animation: modern-bubble-rise 4s ease-in infinite;
    }

    .modern-bubble:nth-child(1) { left: 25%; width: 10px; height: 10px; animation-delay: 0s; }
    .modern-bubble:nth-child(2) { left: 50%; width: 7px; height: 7px; animation-delay: 1.5s; }
    .modern-bubble:nth-child(3) { left: 70%; width: 8px; height: 8px; animation-delay: 3s; }

    @@keyframes modern-bubble-rise {
        0% { transform: translateY(0) scale(1); opacity: 0.7; }
        100% { transform: translateY(-160px) scale(0.3); opacity: 0; }
    }

    .cylinder-scale {
        position: absolute;
        right: -35px;
        top: 0;
        bottom: 0;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 8px 0;
    }

    .scale-mark {
        font-size: 10px;
        color: #999;
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .scale-mark::before {
        content: '';
        width: 8px;
        height: 1px;
        background: #ccc;
    }

    .modern-cylinder-base {
        width: 110px;
        height: 14px;
        background: linear-gradient(to bottom, #333, #1a1a1a);
        margin: 0 auto;
        border-radius: 0 0 10px 10px;
    }

    .percentage-display {
        margin-top: 20px;
        text-align: center;
    }

    .percentage-number {
        font-size: 3rem;
        font-weight: 800;
        background: linear-gradient(135deg, #fc6076, #ff9a44);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1;
    }

    .percentage-symbol {
        font-size: 1.5rem;
        font-weight: 600;
        color: #999;
    }

    .status-pill {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 8px 18px;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.85rem;
        margin-top: 12px;
    }

    .status-full, .status-good { background: linear-gradient(135deg, #e8f5e9, #c8e6c9); color: #2e7d32; }
    .status-half { background: linear-gradient(135deg, #fff8e1, #ffecb3); color: #f57f17; }
    .status-low { background: linear-gradient(135deg, #fff3e0, #ffe0b2); color: #e65100; }
    .status-critical { background: linear-gradient(135deg, #ffebee, #ffcdd2); color: #c62828; }

    .live-indicator {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        background: #f8f9fa;
        border-radius: 15px;
        font-size: 0.8rem;
        color: #666;
        margin-top: 12px;
    }

    .live-dot {
        width: 6px;
        height: 6px;
        background: #00c853;
        border-radius: 50%;
        animation: live-pulse 2s ease-in-out infinite;
    }

    @@keyframes live-pulse {
        0%, 100% { opacity: 1; transform: scale(1); }
        50% { opacity: 0.5; transform: scale(0.8); }
    }

    /* Stats Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 10px;
    }

    .stat-item {
        background: linear-gradient(135deg, #f8f9fa, #fff);
        border-radius: 12px;
        padding: 14px;
        text-align: center;
        border: 1px solid #eee;
        transition: all 0.3s ease;
    }

    .stat-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(0,0,0,0.06);
    }

    .stat-label {
        font-size: 0.7rem;
        color: #888;
        margin-bottom: 4px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .stat-value {
        font-size: 1.1rem;
        font-weight: 700;
        color: #1a1a2e;
    }

    .stat-value.text-success { color: #00c853 !important; }
    .stat-value.text-danger { color: #f44336 !important; }

    /* Order Card */
    .order-status-card {
        background: linear-gradient(135deg, #f0f7ff, #e3f2fd);
        border-radius: 12px;
        padding: 15px;
        margin-bottom: 15px;
    }

    .order-vendor {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 12px;
    }

    .vendor-avatar {
        width: 42px;
        height: 42px;
        background: linear-gradient(135deg, #ff9a44, #fc6076);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
    }

    .vendor-info h4 {
        margin: 0;
        font-size: 1rem;
        color: #1a1a2e;
    }

    .vendor-info span {
        font-size: 0.8rem;
        color: #666;
    }

    .order-progress-modern {
        position: relative;
        padding: 15px 0;
    }

    .progress-track {
        height: 3px;
        background: #e0e0e0;
        border-radius: 2px;
        position: relative;
    }

    .progress-fill {
        height: 100%;
        background: linear-gradient(90deg, #00c853, #69f0ae);
        border-radius: 2px;
        transition: width 0.5s ease;
    }

    .progress-steps {
        display: flex;
        justify-content: space-between;
        margin-top: 12px;
    }

    .progress-step {
        text-align: center;
        flex: 1;
    }

    .step-icon {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background: #e0e0e0;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 6px;
        color: #999;
        font-size: 0.75rem;
        transition: all 0.3s ease;
    }

    .step-icon.active {
        background: linear-gradient(135deg, #00c853, #69f0ae);
        color: white;
        box-shadow: 0 3px 12px rgba(0,200,83,0.25);
    }

    .step-label {
        font-size: 0.65rem;
        color: #888;
    }

    .step-label.active {
        color: #00c853;
        font-weight: 600;
    }

    /* Setup Card */
    .setup-card {
        text-align: center;
        padding: 40px 20px;
    }

    .setup-icon {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #fff3e0, #ffe0b2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 25px;
    }

    .setup-icon i {
        font-size: 2.8rem;
        color: #ff9800;
    }

    .setup-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1a1a2e;
        margin-bottom: 12px;
    }

    .setup-desc {
        color: #666;
        max-width: 350px;
        margin: 0 auto 25px;
        line-height: 1.5;
        font-size: 0.95rem;
    }

    .setup-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 30px;
        background: linear-gradient(135deg, #ff9a44, #fc6076);
        color: white;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        font-size: 0.95rem;
    }

    .setup-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 30px rgba(252, 96, 118, 0.3);
        color: white;
    }

    /* Recent Orders List */
    .orders-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .order-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 14px 0;
        border-bottom: 1px solid #f0f0f0;
        transition: all 0.3s ease;
    }

    .order-item:last-child {
        border-bottom: none;
    }

    .order-item:hover {
        background: #fafafa;
        margin: 0 -15px;
        padding: 14px 15px;
        border-radius: 10px;
    }

    .order-details {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .order-icon {
        width: 38px;
        height: 38px;
        background: linear-gradient(135deg, #fff3e0, #ffe0b2);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #ff9800;
        font-size: 1rem;
    }

    .order-info h5 {
        margin: 0;
        font-size: 0.9rem;
        color: #1a1a2e;
    }

    .order-info span {
        font-size: 0.8rem;
        color: #888;
    }

    .order-badge {
        padding: 5px 12px;
        border-radius: 15px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .order-badge.delivered { background: #e8f5e9; color: #2e7d32; }
    .order-badge.pending { background: #fff8e1; color: #f57f17; }
    .order-badge.accepted { background: #e3f2fd; color: #1976d2; }
    .order-badge.outfordelivery { background: #f3e5f5; color: #7b1fa2; }
    .order-badge.auto { background: #e0f7fa; color: #00838f; }

    .view-all-link {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        color: #fc6076;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

    .view-all-link:hover {
        color: #ff9a44;
        gap: 10px;
    }

    /* No Vendor Card */
    .no-vendor-card {
        text-align: center;
        padding: 25px;
    }

    .no-vendor-icon {
        width: 65px;
        height: 65px;
        background: linear-gradient(135deg, #fff8e1, #ffecb3);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
    }

    .no-vendor-icon i {
        font-size: 1.6rem;
        color: #ffa000;
    }

    /* Animation */
    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .animate-in {
        animation: fadeInUp 0.5s ease forwards;
    }

    .delay-1 { animation-delay: 0.1s; }
    .delay-2 { animation-delay: 0.2s; }
    .delay-3 { animation-delay: 0.3s; }

    /* Responsive */
    @@media (max-width: 768px) {
        .gas-hero {
            padding: 30px 12px 70px;
            margin: -1rem -0.5rem 0;
        }

        .gas-hero h1 {
            font-size: 1.6rem;
        }

        .dashboard-container {
            margin-top: -45px;
            padding: 0 10px 30px;
        }

        .modern-card-body {
            padding: 15px;
        }

        .percentage-number {
            font-size: 2.5rem;
        }

        .stats-grid {
            gap: 8px;
        }

        .stat-item {
            padding: 10px;
        }

        .hero-actions {
            flex-direction: column;
            align-items: center;
        }

        .hero-btn {
            width: 100%;
            max-width: 200px;
            justify-content: center;
        }
    }
</style>

<!-- Hero Section -->
<div class="gas-page-wrapper">
<div class="gas-hero">
    <a href="@Url.Action("DailyEssentials", "Home")" class="back-link">
        <i class="fas fa-arrow-left"></i> Back to Daily Essentials
    </a>
    <h1><i class="fas fa-fire me-3"></i>Gas Cylinder Monitor</h1>
    <p>IoT-powered smart monitoring with automatic refill booking</p>
    
    <div class="hero-actions">
        <a href="@Url.Action("Settings", "GasSubscription")" class="hero-btn hero-btn-outline">
            <i class="fas fa-cog"></i> Settings
        </a>
        <a href="@Url.Action("PlaceOrder", "GasSubscription")" class="hero-btn hero-btn-primary">
            <i class="fas fa-cart-plus"></i> Order Gas
        </a>
    </div>
</div>

<div class="dashboard-container">
    @if (Model?.Subscription == null)
    {
        <!-- No Subscription Setup -->
        <div class="modern-card animate-in">
            <div class="card-accent"></div>
            <div class="setup-card">
                <div class="setup-icon">
                    <i class="fas fa-fire"></i>
                </div>
                <h2 class="setup-title">Set Up Gas Monitoring</h2>
                <p class="setup-desc">
                    Connect your IoT device to automatically monitor gas levels and 
                    get automatic refills when your cylinder runs low.
                </p>
                <a href="@Url.Action("Settings", "GasSubscription")" class="setup-btn">
                    <i class="fas fa-cog"></i> Configure Now
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            <!-- Gas Cylinder Visual Card -->
            <div class="col-lg-5 col-md-6">
                <div class="modern-card animate-in delay-1">
                    <div class="card-accent"></div>
                    <div class="modern-card-body">
                        <h3 class="modern-card-title">
                            <i class="fas fa-fire"></i> Cylinder Status
                        </h3>
                        
                        <div class="cylinder-visual-container">
                            <div class="cylinder-wrapper">
                                <div class="modern-cylinder-cap"></div>
                                <div class="modern-cylinder-valve"></div>
                                <div class="modern-cylinder-body">
                                    <div class="gas-fill status-@Model.GasStatus.ToLower()" id="gasLevelFill" style="height: @Model.CurrentGasPercentage%;">
                                        <div class="gas-bubbles-modern">
                                            <span class="modern-bubble"></span>
                                            <span class="modern-bubble"></span>
                                            <span class="modern-bubble"></span>
                                        </div>
                                    </div>
                                    <div class="cylinder-scale">
                                        <span class="scale-mark">100%</span>
                                        <span class="scale-mark">75%</span>
                                        <span class="scale-mark">50%</span>
                                        <span class="scale-mark">25%</span>
                                        <span class="scale-mark">0%</span>
                                    </div>
                                </div>
                                <div class="modern-cylinder-base"></div>
                            </div>
                        </div>
                        
                        <div class="percentage-display">
                            <span class="percentage-number" id="gasPercentage">@Model.CurrentGasPercentage.ToString("F0")</span>
                            <span class="percentage-symbol">%</span>
                            
                            <div>
                                <span id="gasStatus" class="status-pill status-@Model.GasStatus.ToLower()">
                                    <i class="fas fa-circle" style="font-size: 8px;"></i>
                                    @Model.GasStatus
                                </span>
                            </div>
                            
                            <div class="live-indicator" id="refreshIndicator">
                                <span class="live-dot"></span>
                                <span id="lastUpdate">@(Model.Subscription.LastReadingAt?.ToString("g") ?? "Awaiting data...")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Details & Stats Card -->
            <div class="col-lg-4 col-md-6">
                <div class="modern-card animate-in delay-2">
                    <div class="card-accent card-accent-info"></div>
                    <div class="modern-card-body">
                        <h3 class="modern-card-title">
                            <i class="fas fa-chart-bar"></i> Cylinder Details
                        </h3>
                        
                        <div class="stats-grid">
                            <div class="stat-item">
                                <div class="stat-label">Current Weight</div>
                                <div class="stat-value" id="currentWeight">@((Model.CurrentWeightGrams / 1000).ToString("F2")) kg</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-label">Full Weight</div>
                                <div class="stat-value">@((Model.Subscription.FullCylinderWeightGrams / 1000).ToString("F1")) kg</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-label">Threshold</div>
                                <div class="stat-value">@Model.Subscription.ThresholdPercentage%</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-label">Auto-Booking</div>
                                <div class="stat-value @(Model.Subscription.IsAutoBookingEnabled ? "text-success" : "text-danger")">
