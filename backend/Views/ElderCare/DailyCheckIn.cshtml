        color: #333;
    }
    
    .notes-section {
        margin-top: 25px;
    }
    
    .notes-section label {
        font-size: 1.2rem;
        font-weight: 600;
        color: #333;
        display: block;
        margin-bottom: 10px;
    }
    
    .notes-section textarea {
