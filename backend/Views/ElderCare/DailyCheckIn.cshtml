@section Scripts {
    <script>
        var selectedMood = '';
        
        function selectMood(element, mood) {
            // Remove selected from all
            document.querySelectorAll('.mood-option').forEach(opt => opt.classList.remove('selected'));
            // Add selected to clicked
            element.classList.add('selected');
            selectedMood = mood;
            // Enable button
            document.getElementById('checkinBtn').disabled = false;
        }
        
        function performCheckIn() {
            if (!selectedMood) {
                alert('@(isMalayalam ? "‡¥¶‡¥Ø‡¥µ‡¥æ‡¥Ø‡¥ø ‡¥í‡¥∞‡µÅ ‡¥Æ‡µÇ‡¥°‡µç ‡¥§‡¥ø‡¥∞‡¥û‡µç‡¥û‡µÜ‡¥ü‡µÅ‡¥ï‡µç‡¥ï‡µÅ‡¥ï" : "Please select a mood")');
                return;
            }
            
            const notes = document.getElementById('checkinNotes').value;
            const btn = document.getElementById('checkinBtn');
            btn.disabled = true;
            btn.textContent = '@(isMalayalam ? "‡¥∞‡µá‡¥ñ‡¥™‡µç‡¥™‡µÜ‡¥ü‡µÅ‡¥§‡µç‡¥§‡µÅ‡¥®‡µç‡¥®‡µÅ..." : "Recording...")';
            
            const formData = new FormData();
            formData.append('mood', selectedMood);
            formData.append('notes', notes);
            
            fetch('@Url.Action("PerformCheckIn", "ElderCare")', {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.getElementById('successMessage').style.display = 'block';
                    btn.textContent = '@(isMalayalam ? "‡¥™‡µÇ‡µº‡¥§‡µç‡¥§‡¥ø‡¥Ø‡¥æ‡¥Ø‡¥ø!" : "Done!") ‚úÖ';
                    setTimeout(() => {
                        window.location.reload();
                    }, 2000);
                } else {
                    alert(data.message);
                    btn.disabled = false;
                    btn.textContent = '@(isMalayalam ? "‡¥ö‡µÜ‡¥ï‡µç‡¥ï‡µç-‡¥á‡µª ‡¥ö‡µÜ‡¥Ø‡µç‡¥Ø‡µÅ‡¥ï" : "Check In") ‚úÖ';
                }
            })
            .catch(error => {
                alert('@(isMalayalam ? "‡¥™‡¥ø‡¥∂‡¥ï‡µç ‡¥∏‡¥Ç‡¥≠‡¥µ‡¥ø‡¥ö‡µç‡¥ö‡µÅ" : "An error occurred")');
