        color: white;
        border: none;
        border-radius: 12px;
        font-size: 1.3rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 25px;
    }
    
    .checkin-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(17, 153, 142, 0.4);
    }
    
    .checkin-button:disabled {
        opacity: 0.7;
        cursor: not-allowed;
    }
    
    .already-checked-in {
