        align-items: center;
        padding: 20px;
        border: 3px solid #e0e0e0;
        border-radius: 15px;
        cursor: pointer;
        transition: all 0.3s ease;
        min-width: 100px;
    }
    
    .mood-option:hover {
        border-color: #11998e;
        transform: translateY(-3px);
    }
    
    .mood-option.selected {
        border-color: #11998e;
        background: #e8f5e9;
    }
    
    .mood-option .emoji {
