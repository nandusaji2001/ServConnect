@section Scripts {
    <script>
        // Font size controls
        const fontBtns = document.querySelectorAll('.font-btn');
        fontBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                fontBtns.forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                
                document.body.classList.remove('font-large', 'font-xlarge');
                const size = this.dataset.size;
                if (size === 'large') {
                    document.body.classList.add('font-large');
                } else if (size === 'xlarge') {
                    document.body.classList.add('font-xlarge');
                }
                
                // Save preference
                localStorage.setItem('elderNewsFontSize', size);
            });
        });
        
        // Load saved font size preference
        document.addEventListener('DOMContentLoaded', function() {
            const savedSize = localStorage.getItem('elderNewsFontSize');
            if (savedSize) {
                fontBtns.forEach(btn => {
                    btn.classList.remove('active');
                    if (btn.dataset.size === savedSize) {
                        btn.classList.add('active');
                        if (savedSize === 'large') {
                            document.body.classList.add('font-large');
                        } else if (savedSize === 'xlarge') {
                            document.body.classList.add('font-xlarge');
                        }
                    }
                });
            }
            
            // Load news
            loadNews();
        });
        
        // Translation function
        async function translateText(text, sourceLang = 'en', targetLang = 'ml') {
            try {
                const res = await fetch('/api/news/translate', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        text: text,
                        sourceLanguage: sourceLang,
                        targetLanguage: targetLang
                    })
                });
                
                if (!res.ok) return text;
                
                const data = await res.json();
                return data.translatedText || text;
            } catch (error) {
                console.error('Translation error:', error);
                return text;
            }
        }
        
        // Handle translate button click
        async function handleTranslate(index, btn) {
            const titleEl = document.getElementById(`title-${index}`);
            const descEl = document.getElementById(`desc-${index}`);
            
            if (btn.dataset.translated === 'true') {
                // Restore original
                titleEl.textContent = titleEl.dataset.original;
                descEl.textContent = descEl.dataset.original;
                titleEl.classList.remove('translated');
                descEl.classList.remove('translated');
                btn.innerHTML = '<i class="fas fa-language"></i> ‡¥Æ‡¥≤‡¥Ø‡¥æ‡¥≥‡¥Ç';
                btn.dataset.translated = 'false';
            } else {
                // Translate
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> @(isMalayalam ? "‡¥µ‡¥ø‡¥µ‡µº‡¥§‡µç‡¥§‡¥®‡¥Ç..." : "Translating...")';
                
                titleEl.dataset.original = titleEl.textContent;
                descEl.dataset.original = descEl.textContent;
                
                const translatedTitle = await translateText(titleEl.textContent, 'en', 'ml');
                const translatedDesc = await translateText(descEl.textContent, 'en', 'ml');
                
                titleEl.textContent = translatedTitle;
                descEl.textContent = translatedDesc;
                titleEl.classList.add('translated');
                descEl.classList.add('translated');
                
                btn.innerHTML = '<i class="fas fa-language"></i> English';
                btn.dataset.translated = 'true';
                btn.disabled = false;
            }
        }
        
        // Load news function
        async function loadNews() {
            const container = document.getElementById('newsGrid');
            const location = document.getElementById('locationInput').value.trim() || 'Kerala';
            const language = document.getElementById('languageSelect').value;
            
            container.innerHTML = `
                <div class="news-placeholder">
                    <div class="loading-spinner"></div>
                    <p>@(isMalayalam ? "‡¥µ‡¥æ‡µº‡¥§‡µç‡¥§‡¥ï‡µæ ‡¥≤‡µã‡¥°‡µç ‡¥ö‡µÜ‡¥Ø‡µç‡¥Ø‡µÅ‡¥®‡µç‡¥®‡µÅ..." : "Loading news...")</p>
                </div>
            `;
            
            try {
                const res = await fetch(`/api/news?location=${encodeURIComponent(location)}&language=${encodeURIComponent(language)}`);
                const data = await res.json();
                
                if (!data.articles || data.articles.length === 0) {
                    container.innerHTML = `
                        <div class="news-placeholder">
                            <i class="fas fa-newspaper" style="font-size: 4rem; color: #9ca3af; margin-bottom: 20px;"></i>
                            <p>@(isMalayalam ? "‡¥à ‡¥∏‡µç‡¥•‡¥≤‡¥§‡µç‡¥§‡¥ø‡¥®‡µç ‡¥µ‡¥æ‡µº‡¥§‡µç‡¥§‡¥ï‡µæ ‡¥≤‡¥≠‡µç‡¥Ø‡¥Æ‡¥≤‡µç‡¥≤" : "No news available for this location")</p>
                        </div>
                    `;
                    return;
                }
                
                container.innerHTML = data.articles.map((article, index) => {
                    const pubDate = article.pubDate 
                        ? new Date(article.pubDate).toLocaleDateString('@(isMalayalam ? "ml-IN" : "en-US")', { month: 'short', day: 'numeric', year: 'numeric' }) 
                        : '';
                    
                    const imageHtml = article.imageUrl 
                        ? `<img src="${article.imageUrl}" alt="${article.title}" onerror="this.parentElement.innerHTML='<i class=\\'fas fa-newspaper news-image-placeholder\\'></i>'" loading="lazy">`
                        : '<i class="fas fa-newspaper news-image-placeholder"></i>';
                    
                    const showTranslateBtn = language === 'en';
                    
                    return `
                        <div class="elder-news-card">
                            <div class="news-image">${imageHtml}</div>
                            <div class="news-content">
                                <div class="news-meta">
                                    <span class="news-source">${article.source || 'News'}</span>
                                    <span class="news-date">${pubDate}</span>
                                </div>
                                <h3 class="news-title" id="title-${index}">${article.title}</h3>
                                <p class="news-description" id="desc-${index}">${article.description || ''}</p>
                                <div class="news-actions">
                                    <a href="${article.link}" target="_blank" class="read-more-btn">
                                        @(isMalayalam ? "‡¥™‡µÇ‡µº‡¥£‡µç‡¥£ ‡¥≤‡µá‡¥ñ‡¥®‡¥Ç" : "Read Full Article")
                                        <i class="fas fa-external-link-alt"></i>
                                    </a>
                                    ${showTranslateBtn ? `
                                        <button class="translate-btn" data-index="${index}" data-translated="false" onclick="handleTranslate(${index}, this)">
                                            <i class="fas fa-language"></i> ‡¥Æ‡¥≤‡¥Ø‡¥æ‡¥≥‡¥Ç
                                        </button>
                                    ` : ''}
                                </div>
                            </div>
                        </div>
                    `;
                }).join('');
                
            } catch (error) {
                console.error('Failed to load news:', error);
                container.innerHTML = `
