@section Scripts {
    <script>
        // Load notes from localStorage
        function loadNotes() {
            const notesContainer = document.getElementById('notesList');
            const notes = JSON.parse(localStorage.getItem('elderNotes') || '[]');
            
            if (notes.length === 0) {
                notesContainer.innerHTML = `
                    <div class="no-notes">
                        <div class="icon">üìù</div>
                        <p>@(isMalayalam ? "‡¥á‡¥§‡µÅ‡¥µ‡¥∞‡µÜ ‡¥ï‡µÅ‡¥±‡¥ø‡¥™‡µç‡¥™‡µÅ‡¥ï‡¥≥‡µä‡¥®‡µç‡¥®‡µÅ‡¥Æ‡¥ø‡¥≤‡µç‡¥≤. ‡¥®‡¥ø‡¥ô‡µç‡¥ô‡¥≥‡µÅ‡¥ü‡µÜ ‡¥Ü‡¥¶‡µç‡¥Ø ‡¥ï‡µÅ‡¥±‡¥ø‡¥™‡µç‡¥™‡µç ‡¥é‡¥¥‡µÅ‡¥§‡µÅ‡¥ï!" : "No notes yet. Write your first note!")</p>
                    </div>
                `;
                return;
            }
            
            // Sort by date, newest first
            notes.sort((a, b) => new Date(b.date) - new Date(a.date));
            
            notesContainer.innerHTML = notes.map(note => `
                <div class="note-card">
                    <div class="title">${escapeHtml(note.title)}</div>
                    <div class="content">${escapeHtml(note.content)}</div>
                    <div class="date">${formatDate(note.date)}</div>
                </div>
            `).join('');
        }
        
        function saveNote() {
            const title = document.getElementById('noteTitle').value.trim();
            const content = document.getElementById('noteContent').value.trim();
            
            if (!title || !content) {
                alert('@(isMalayalam ? "‡¥¶‡¥Ø‡¥µ‡¥æ‡¥Ø‡¥ø ‡¥§‡¥≤‡¥ï‡µç‡¥ï‡µÜ‡¥ü‡µç‡¥ü‡µÅ‡¥Ç ‡¥â‡¥≥‡µç‡¥≥‡¥ü‡¥ï‡µç‡¥ï‡¥µ‡µÅ‡¥Ç ‡¥®‡µΩ‡¥ï‡µÅ‡¥ï" : "Please enter both title and content")');
                return;
            }
            
            const notes = JSON.parse(localStorage.getItem('elderNotes') || '[]');
            notes.push({
                id: Date.now(),
                title: title,
                content: content,
                date: new Date().toISOString()
            });
            
            localStorage.setItem('elderNotes', JSON.stringify(notes));
            
            // Clear form
            document.getElementById('noteTitle').value = '';
            document.getElementById('noteContent').value = '';
            
            // Show success
            document.getElementById('successMessage').style.display = 'block';
            setTimeout(() => {
                document.getElementById('successMessage').style.display = 'none';
            }, 3000);
            
            // Reload notes
            loadNotes();
            
            // Also save to server
            const formData = new FormData();
            formData.append('title', title);
            formData.append('content', content);
            
            fetch('@Url.Action("SaveNote", "ElderCare")', {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                body: formData
            }).catch(err => console.log('Server save failed, but local save succeeded'));
        }
        
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
        
        function formatDate(dateStr) {
            const date = new Date(dateStr);
            return date.toLocaleDateString('en-IN', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
        }
        
        // Load notes on page load
        document.addEventListener('DOMContentLoaded', loadNotes);
    </script>
    @Html.AntiForgeryToken()
}
