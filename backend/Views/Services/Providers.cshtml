@model ServConnect.ViewModels.ServiceProvidersViewModel
@{
    ViewData["Title"] = $"Providers - {Model.ServiceName}";
}
<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
        <h2 class="mb-0">@Model.ServiceName</h2>
        <a class="btn btn-outline-secondary btn-sm" href="@Url.Action("Browse", "Services")">
            <i class="fas fa-arrow-left me-1"></i> Back to Services
        </a>
    </div>

    @if (Model.Providers == null || !Model.Providers.Any())
    {
        <div class="alert alert-info">No providers available for this service yet.</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var p in Model.Providers)
            {
                <div class="col-12 col-md-6">
                    <div class="card h-100 provider-card">
                        <div class="card-body d-flex flex-column gap-2">
                            <div class="d-flex align-items-start gap-2">
                                <div class="avatar-circle bg-light text-primary">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="fw-semibold">@(!string.IsNullOrWhiteSpace(p.ServiceName) ? p.ServiceName : Model.ServiceName)</div>
                                    <div class="text-muted small">ProviderId: @p.ProviderId</div>
                                </div>
                            </div>
                            <div class="mt-auto d-flex align-items-center justify-content-between">
                                <div class="price fw-semibold">Price on request</div>
                                <a class="btn btn-primary btn-sm" href="#" onclick="event.preventDefault(); alert('Booking flow placeholder\\nProvider: @p.ProviderId');">
                                    Book
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .avatar-circle {
        width: 40px; height: 40px; border-radius: 50%; display: grid; place-items: center;
        box-shadow: inset 0 0 0 1px #e9ecef;
    }
    .provider-card { border-radius: 12px; }
    .price { color: #0d6efd; }
</style>