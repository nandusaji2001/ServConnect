@{
    ViewData["Title"] = "My Questions - ServConnect";
}

<style>
    :root {
        --rental-primary: #10B981;
        --rental-primary-dark: #059669;
        --rental-gradient: linear-gradient(135deg, #10B981 0%, #059669 100%);
    }

    body {
        background: linear-gradient(180deg, #f0fdf4 0%, #ecfdf5 100%);
    }

    .queries-container {
        width: 100%;
        padding: 30px 40px;
        max-width: 900px;
        margin: 0 auto;
    }

    .page-header {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 32px;
        animation: fadeInUp 0.6s ease;
    }

    .back-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 45px;
        height: 45px;
        background: white;
        color: #374151;
        border-radius: 14px;
        text-decoration: none;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
    }

    .back-btn:hover {
        transform: translateX(-5px);
        color: var(--rental-primary);
    }

    .page-title h1 {
        font-size: 2rem;
        font-weight: 800;
        background: var(--rental-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .page-title p {
        color: #64748b;
        margin-top: 4px;
    }

    /* Info Banner */
    .info-banner {
        background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
        border-radius: 16px;
        padding: 16px 20px;
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 24px;
        animation: fadeInUp 0.6s ease 0.1s both;
    }

    .info-banner i {
        color: #d97706;
        font-size: 1.2rem;
    }

    .info-banner p {
        color: #92400e;
        font-size: 0.9rem;
        margin: 0;
    }

    /* Queries List */
    .queries-list {
        background: white;
        border-radius: 24px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.06);
        overflow: hidden;
        animation: fadeInUp 0.6s ease 0.2s both;
    }

    .section-header {
        padding: 24px 28px;
        border-bottom: 2px solid #f1f5f9;
    }

    .section-header h2 {
        font-size: 1.3rem;
        font-weight: 700;
        color: #1f2937;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .section-header h2 i {
        color: var(--rental-primary);
    }

    .query-card {
        display: flex;
        gap: 16px;
        padding: 20px 28px;
        border-bottom: 1px solid #f1f5f9;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .query-card:last-child {
        border-bottom: none;
    }

    .query-card:hover {
        background: #f8fafc;
    }

    .query-card.unread {
        background: #eff6ff;
    }

    .query-property-image {
        width: 80px;
        height: 80px;
        border-radius: 12px;
        overflow: hidden;
        flex-shrink: 0;
        background: linear-gradient(135deg, #e0e7ff 0%, #c7d2fe 100%);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .query-property-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .query-property-image i {
        font-size: 1.5rem;
        color: var(--rental-primary);
        opacity: 0.5;
    }

    .query-content {
        flex: 1;
        min-width: 0;
    }

    .query-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 6px;
    }

    .query-property-title {
        font-weight: 600;
        color: #1f2937;
        margin-bottom: 4px;
    }

    .query-owner {
        font-size: 0.85rem;
        color: #64748b;
    }

    .query-time {
        font-size: 0.8rem;
        color: #94a3b8;
    }

    .query-preview {
        color: #64748b;
        font-size: 0.9rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        margin-top: 8px;
    }

    .query-unread-indicator {
        width: 10px;
        height: 10px;
        background: var(--rental-primary);
        border-radius: 50%;
        flex-shrink: 0;
        align-self: center;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 20px;
    }

    .empty-state i {
        font-size: 4rem;
        color: #d1d5db;
        margin-bottom: 20px;
    }

    .empty-state h3 {
        font-size: 1.5rem;
        color: #374151;
        margin-bottom: 10px;
    }

    .empty-state p {
        color: #64748b;
        margin-bottom: 24px;
    }

    .empty-state a {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 14px 28px;
        background: var(--rental-gradient);
        color: white;
        border-radius: 14px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .empty-state a:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(99, 102, 241, 0.4);
    }

    /* Loading */
    .loading-container {
        text-align: center;
        padding: 60px 20px;
    }

    .loading-spinner {
        width: 50px;
        height: 50px;
        border: 4px solid #e5e7eb;
        border-top-color: var(--rental-primary);
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin: 0 auto 16px;
    }

    /* Chat Modal */
    .modal-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.5);
        display: none;
        align-items: center;
        justify-content: center;
        z-index: 1000;
        backdrop-filter: blur(5px);
    }

    .modal-overlay.active {
        display: flex;
    }

    .chat-modal {
        background: white;
        border-radius: 24px;
        max-width: 600px;
        width: 95%;
        max-height: 80vh;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        animation: modalIn 0.4s ease;
    }

    @@keyframes modalIn {
        from {
            opacity: 0;
            transform: scale(0.9) translateY(20px);
        }
        to {
            opacity: 1;
            transform: scale(1) translateY(0);
        }
    }

    .chat-header {
        padding: 20px 24px;
        border-bottom: 1px solid #e5e7eb;
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: white;
    }

    .chat-header-info h3 {
        font-size: 1.1rem;
        color: #1f2937;
        margin-bottom: 4px;
    }

    .chat-header-info p {
        font-size: 0.85rem;
        color: #64748b;
    }

    .modal-close {
        width: 40px;
        height: 40px;
        border: none;
        background: #f1f5f9;
        border-radius: 50%;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    .modal-close:hover {
        background: #fee2e2;
        color: #dc2626;
    }

    .chat-messages {
        flex: 1;
        overflow-y: auto;
        padding: 20px;
        background: #f8fafc;
        display: flex;
        flex-direction: column;
        gap: 16px;
        min-height: 300px;
        max-height: 400px;
    }

    .chat-message {
        max-width: 80%;
        padding: 12px 16px;
        border-radius: 16px;
        font-size: 0.95rem;
    }

    .chat-message.received {
        background: white;
        border: 1px solid #e5e7eb;
        align-self: flex-start;
        border-bottom-left-radius: 4px;
    }

    .chat-message.sent {
        background: var(--rental-gradient);
        color: white;
        align-self: flex-end;
        border-bottom-right-radius: 4px;
    }

    .chat-message-meta {
        font-size: 0.75rem;
        margin-top: 6px;
        opacity: 0.7;
    }

    .chat-expire-notice {
        text-align: center;
        font-size: 0.8rem;
        color: #f59e0b;
        padding: 8px;
        background: #fef3c7;
        border-radius: 8px;
        margin: 0 20px 16px;
    }

    .chat-input {
        padding: 16px 20px;
        border-top: 1px solid #e5e7eb;
        background: white;
        display: flex;
        gap: 12px;
    }

    .chat-input input {
        flex: 1;
        padding: 12px 16px;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        font-size: 1rem;
        outline: none;
        transition: border-color 0.3s;
    }

    .chat-input input:focus {
        border-color: var(--rental-primary);
    }

    .chat-send-btn {
        padding: 12px 24px;
        background: var(--rental-gradient);
        color: white;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .chat-send-btn:hover {
        transform: scale(1.05);
    }

    .chat-send-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
        transform: none;
    }

    /* Animations */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .queries-container {
            padding: 20px 16px;
        }

        .page-title h1 {
            font-size: 1.5rem;
        }

        .query-card {
            padding: 16px;
        }

        .query-property-image {
            width: 60px;
            height: 60px;
        }
    }
</style>

<div class="queries-container">
    <div class="page-header">
        <a href="/Rental" class="back-btn">
            <i class="fas fa-arrow-left"></i>
        </a>
        <div class="page-title">
            <h1><i class="fas fa-comments"></i> My Questions</h1>
            <p>View and manage your property inquiries</p>
        </div>
    </div>

    <div class="info-banner">
        <i class="fas fa-info-circle"></i>
        <p>Conversations are automatically deleted after 7 days of inactivity. Make sure to save any important information.</p>
    </div>

    <div class="queries-list">
        <div class="section-header">
            <h2><i class="fas fa-inbox"></i> Your Conversations</h2>
        </div>
        <div id="queriesList">
            <div class="loading-container">
                <div class="loading-spinner"></div>
                <p>Loading your questions...</p>
            </div>
        </div>
    </div>
</div>

<!-- Chat Modal -->
<div class="modal-overlay" id="chatModal">
    <div class="chat-modal">
        <div class="chat-header">
            <div class="chat-header-info">
                <h3 id="chatPropertyTitle">Property</h3>
                <p id="chatOwnerName">Owner</p>
            </div>
            <button class="modal-close" onclick="closeChatModal()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="chat-expire-notice">
            <i class="fas fa-clock"></i> This conversation will expire in <span id="expireTime">7 days</span>
        </div>
        <div class="chat-messages" id="chatMessages">
            <!-- Messages will be loaded here -->
        </div>
        <div class="chat-input">
            <input type="text" id="chatInput" placeholder="Type your message..." onkeypress="handleChatKeyPress(event)" />
            <button class="chat-send-btn" onclick="sendChatMessage()" id="sendChatBtn">
                <i class="fas fa-paper-plane"></i> Send
            </button>
        </div>
    </div>
</div>

<script>
    let allQueries = [];
    let currentQuery = null;

    async function loadQueries() {
        try {
            const response = await fetch('/api/rentalquery/user');
            const result = await response.json();

            if (result.success) {
                allQueries = result.queries || [];
                renderQueries();
            } else {
                showError('Failed to load questions');
            }
        } catch (error) {
            console.error('Error:', error);
            showError('Connection error. Please try again.');
        }
    }

    function renderQueries() {
        const container = document.getElementById('queriesList');
        
        if (allQueries.length === 0) {
            container.innerHTML = `
                <div class="empty-state">
                    <i class="fas fa-comments"></i>
                    <h3>No questions yet</h3>
                    <p>When you ask questions about rental properties, they'll appear here</p>
                    <a href="/Rental"><i class="fas fa-search"></i> Browse Rentals</a>
                </div>
            `;
            return;
        }

        container.innerHTML = allQueries.map(query => {
            const lastMessage = query.messages[query.messages.length - 1];
            const isUnread = query.unreadCountForUser > 0;
            const timeAgo = getTimeAgo(new Date(query.lastUpdatedAt));
            
            return `
                <div class="query-card ${isUnread ? 'unread' : ''}" onclick="openChat('${query.id}')">
                    <div class="query-property-image">
                        <i class="fas fa-home"></i>
                    </div>
                    <div class="query-content">
                        <div class="query-header">
                            <div>
                                <div class="query-property-title">${query.propertyTitle}</div>
                                <div class="query-owner">Owner: ${query.ownerName || 'Property Owner'}</div>
                            </div>
                            <span class="query-time">${timeAgo}</span>
                        </div>
                        <div class="query-preview">
                            <strong>${lastMessage?.senderRole === 'Owner' ? 'Owner: ' : 'You: '}</strong>
                            ${lastMessage?.message || 'No messages'}
                        </div>
                    </div>
                    ${isUnread ? '<div class="query-unread-indicator"></div>' : ''}
                </div>
            `;
        }).join('');
    }

    function showError(message) {
        document.getElementById('queriesList').innerHTML = `
            <div class="empty-state">
                <i class="fas fa-exclamation-circle"></i>
                <h3>Error</h3>
                <p>${message}</p>
            </div>
        `;
    }

    async function openChat(queryId) {
        try {
            const response = await fetch(`/api/rentalquery/${queryId}`);
            const result = await response.json();

            if (result.success) {
                currentQuery = result.query;
                document.getElementById('chatPropertyTitle').textContent = currentQuery.propertyTitle;
                document.getElementById('chatOwnerName').textContent = `Owner: ${currentQuery.ownerName || 'Property Owner'}`;
                
                // Calculate expire time
                const expireDate = new Date(currentQuery.expireAt);
                const now = new Date();
                const daysLeft = Math.ceil((expireDate - now) / (1000 * 60 * 60 * 24));
                document.getElementById('expireTime').textContent = daysLeft > 0 ? `${daysLeft} days` : 'soon';

                renderChatMessages();
                document.getElementById('chatModal').classList.add('active');
                
                // Refresh queries to update unread status
                loadQueries();
            } else {
                alert(result.message || 'Failed to load conversation');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Failed to load conversation');
        }
    }

    function renderChatMessages() {
        const container = document.getElementById('chatMessages');
        
        container.innerHTML = currentQuery.messages.map(msg => {
            const isSent = msg.senderRole === 'User';
            const time = new Date(msg.sentAt).toLocaleString();
            
            return `
                <div class="chat-message ${isSent ? 'sent' : 'received'}">
                    <div>${msg.message}</div>
                    <div class="chat-message-meta">
                        ${msg.senderName} â€¢ ${time}
                    </div>
                </div>
            `;
        }).join('');
        
        // Scroll to bottom
        container.scrollTop = container.scrollHeight;
    }

    function closeChatModal() {
        document.getElementById('chatModal').classList.remove('active');
        currentQuery = null;
        document.getElementById('chatInput').value = '';
    }

    function handleChatKeyPress(event) {
        if (event.key === 'Enter' && !event.shiftKey) {
            event.preventDefault();
            sendChatMessage();
        }
    }

    async function sendChatMessage() {
        const input = document.getElementById('chatInput');
        const message = input.value.trim();
        
        if (!message || !currentQuery) return;

        const sendBtn = document.getElementById('sendChatBtn');
        sendBtn.disabled = true;

        try {
            const response = await fetch('/api/rentalquery/reply', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    queryId: currentQuery.id,
                    message: message
                })
            });

            const result = await response.json();

            if (result.success) {
                currentQuery = result.query;
                renderChatMessages();
                input.value = '';
            } else {
                alert(result.message || 'Failed to send message');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Failed to send message');
        } finally {
            sendBtn.disabled = false;
        }
    }

    function getTimeAgo(date) {
        const seconds = Math.floor((new Date() - date) / 1000);
        
        if (seconds < 60) return 'Just now';
        if (seconds < 3600) return `${Math.floor(seconds / 60)}m ago`;
        if (seconds < 86400) return `${Math.floor(seconds / 3600)}h ago`;
        if (seconds < 604800) return `${Math.floor(seconds / 86400)}d ago`;
        return date.toLocaleDateString();
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', loadQueries);
</script>
