@{
    ViewData["Title"] = "House Rentals - ServConnect";
}

<style>
    /* Base Styles */
    :root {
        --rental-primary: #6366F1;
        --rental-primary-dark: #4F46E5;
        --rental-secondary: #10B981;
        --rental-accent: #F59E0B;
        --rental-gradient: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
    }

    body {
        background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
    }

    .rentals-container {
        width: 100%;
        padding: 30px 40px;
    }

    /* Header Section */
    .rentals-header {
        background: var(--rental-gradient);
        border-radius: 24px;
        padding: 50px 40px;
        margin-bottom: 40px;
        color: white;
        position: relative;
        overflow: hidden;
    }

    .rentals-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -20%;
        width: 60%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 60%);
        animation: rotate 20s linear infinite;
    }

    @@keyframes rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    .header-content {
        position: relative;
        z-index: 1;
    }

    .rentals-header h1 {
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 16px;
        animation: fadeInUp 0.8s ease;
    }

    .rentals-header p {
        font-size: 1.2rem;
        opacity: 0.9;
        max-width: 600px;
        margin-bottom: 24px;
        animation: fadeInUp 0.8s ease 0.1s both;
    }

    .header-actions {
        display: flex;
        gap: 16px;
        flex-wrap: wrap;
        animation: fadeInUp 0.8s ease 0.2s both;
    }

    .header-btn {
        padding: 14px 28px;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

    .header-btn.primary {
        background: white;
        color: var(--rental-primary);
    }

    .header-btn.primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    }

    .header-btn.secondary {
        background: rgba(255,255,255,0.15);
        color: white;
        border: 2px solid rgba(255,255,255,0.3);
    }

    .header-btn.secondary:hover {
        background: rgba(255,255,255,0.25);
        transform: translateY(-3px);
    }

    .back-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        background: white;
        color: #374151;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 500;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        margin-bottom: 20px;
    }

    .back-btn:hover {
        transform: translateX(-5px);
        color: var(--rental-primary);
    }

    /* Filters Section */
    .filters-section {
        background: white;
        border-radius: 20px;
        padding: 24px;
        margin-bottom: 30px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.06);
    }

    .filters-row {
        display: grid;
        grid-template-columns: 2fr repeat(4, 1fr) auto;
        gap: 16px;
        align-items: end;
    }

    .filter-group {
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .filter-group label {
        font-size: 0.85rem;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .filter-group input,
    .filter-group select {
        padding: 12px 16px;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        background: #f8fafc;
    }

    .filter-group input:focus,
    .filter-group select:focus {
        border-color: var(--rental-primary);
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
        outline: none;
        background: white;
    }

    .search-btn {
        padding: 12px 24px;
        background: var(--rental-gradient);
        color: white;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
        height: fit-content;
    }

    .search-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(99, 102, 241, 0.3);
    }

    /* Amenities Filter */
    .amenities-filter {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        padding: 16px 0;
        border-top: 1px solid #f1f5f9;
        margin-top: 16px;
    }

    .amenity-chip {
        padding: 8px 16px;
        border: 2px solid #e5e7eb;
        border-radius: 50px;
        font-size: 0.85rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
        background: white;
        color: #64748b;
    }

    .amenity-chip:hover {
        border-color: var(--rental-primary);
        color: var(--rental-primary);
    }

    .amenity-chip.active {
        background: var(--rental-gradient);
        color: white;
        border-color: transparent;
    }

    /* Results Info */
    .results-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .results-count {
        font-size: 1rem;
        color: #64748b;
    }

    .results-count strong {
        color: #1f2937;
    }

    .sort-select {
        padding: 10px 16px;
        border: 2px solid #e5e7eb;
        border-radius: 10px;
        font-size: 0.9rem;
        background: white;
    }

    /* Property Cards Grid */
    .properties-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
        gap: 24px;
    }

    .property-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0,0,0,0.06);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        cursor: pointer;
    }

    .property-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 50px rgba(0,0,0,0.12);
    }

    .property-image {
        height: 220px;
        position: relative;
        overflow: hidden;
        background: linear-gradient(135deg, #f0f0f0 0%, #e0e0e0 100%);
    }

    .property-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .property-card:hover .property-image img {
        transform: scale(1.1);
    }

    .property-badges {
        position: absolute;
        top: 16px;
        left: 16px;
        display: flex;
        gap: 8px;
    }

    .property-badge {
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 0.75rem;
        font-weight: 600;
        backdrop-filter: blur(10px);
    }

    .badge-type {
        background: rgba(99, 102, 241, 0.9);
        color: white;
    }

    .badge-furnishing {
        background: rgba(16, 185, 129, 0.9);
        color: white;
    }

    .property-wishlist {
        position: absolute;
        top: 16px;
        right: 16px;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: white;
        border: none;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .property-wishlist:hover {
        transform: scale(1.1);
    }

    .property-wishlist i {
        color: #ef4444;
        font-size: 1.1rem;
    }

    .image-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
    }

    .image-placeholder i {
        font-size: 4rem;
        color: #d1d5db;
    }

    .property-content {
        padding: 24px;
    }

    .property-location {
        display: flex;
        align-items: center;
        gap: 6px;
        color: #64748b;
        font-size: 0.9rem;
        margin-bottom: 8px;
    }

    .property-location i {
        color: var(--rental-primary);
    }

    .property-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 12px;
        line-height: 1.3;
    }

    .property-features {
        display: flex;
        gap: 20px;
        margin-bottom: 16px;
    }

    .feature {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 0.9rem;
        color: #64748b;
    }

    .feature i {
        color: var(--rental-primary);
    }

    .property-amenities {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        margin-bottom: 16px;
    }

    .amenity-tag {
        padding: 4px 10px;
        background: #f1f5f9;
        border-radius: 6px;
        font-size: 0.75rem;
        color: #64748b;
    }

    .property-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 16px;
        border-top: 1px solid #f1f5f9;
    }

    .property-price {
        display: flex;
        flex-direction: column;
    }

    .price-amount {
        font-size: 1.5rem;
        font-weight: 800;
        color: var(--rental-primary);
    }

    .price-period {
        font-size: 0.8rem;
        color: #64748b;
    }

    .view-btn {
        padding: 12px 24px;
        background: var(--rental-gradient);
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .view-btn:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgba(99, 102, 241, 0.3);
    }

    /* Loading State */
    .loading-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 80px;
    }

    .loading-spinner {
        width: 50px;
        height: 50px;
        border: 4px solid #e5e7eb;
        border-top-color: var(--rental-primary);
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 20px;
        background: white;
        border-radius: 20px;
    }

    .empty-state i {
        font-size: 5rem;
        color: #d1d5db;
        margin-bottom: 20px;
    }

    .empty-state h3 {
        font-size: 1.5rem;
        color: #374151;
        margin-bottom: 12px;
    }

    .empty-state p {
        color: #64748b;
        max-width: 400px;
        margin: 0 auto;
    }

    /* Pagination */
    .pagination {
        display: flex;
        justify-content: center;
        gap: 8px;
        margin-top: 40px;
    }

    .pagination button {
        padding: 12px 18px;
        border: 2px solid #e5e7eb;
        background: white;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-weight: 500;
    }

    .pagination button:hover:not(:disabled) {
        border-color: var(--rental-primary);
        color: var(--rental-primary);
    }

    .pagination button.active {
        background: var(--rental-gradient);
        color: white;
        border-color: transparent;
    }

    .pagination button:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    /* Animations */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .property-card {
        animation: fadeInUp 0.5s ease forwards;
    }

    /* Responsive */
    @@media (max-width: 1024px) {
        .filters-row {
            grid-template-columns: 1fr 1fr;
        }
    }

    @@media (max-width: 768px) {
        .rentals-container {
            padding: 20px 16px;
        }

        .rentals-header {
            padding: 30px 24px;
        }

        .rentals-header h1 {
            font-size: 2rem;
        }

        .filters-row {
            grid-template-columns: 1fr;
        }

        .properties-grid {
            grid-template-columns: 1fr;
        }

        .header-actions {
            flex-direction: column;
        }
    }
</style>

<div class="rentals-container">
    <a href="/Home/ExploreServices" class="back-btn">
        <i class="fas fa-arrow-left"></i> Back to Services
    </a>

    <!-- Header Section -->
    <div class="rentals-header">
        <div class="header-content">
            <h1><i class="fas fa-home"></i> House Rentals</h1>
            <p>Find your perfect home! Browse through hundreds of verified rental properties in your area.</p>
            <div class="header-actions">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <a href="/Rental/AddProperty" class="header-btn primary">
                        <i class="fas fa-plus"></i> List Your Property
                    </a>
                    <a href="/Rental/ManageListings" class="header-btn secondary">
                        <i class="fas fa-cog"></i> Manage Listings
                    </a>
                    <a href="/Rental/MyQueries" class="header-btn secondary" id="myQueriesBtn">
                        <i class="fas fa-comments"></i> My Questions
                        <span class="query-badge" id="queryBadge" style="display: none; background: #dc2626; color: white; border-radius: 50%; padding: 2px 8px; font-size: 0.75rem; margin-left: 4px;">0</span>
                    </a>
                }
                else
                {
                    <a href="/Account/Login?returnUrl=/Rental/AddProperty" class="header-btn primary">
                        <i class="fas fa-plus"></i> List Your Property
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- Filters Section -->
    <div class="filters-section">
        <div class="filters-row">
            <div class="filter-group">
                <label>Search</label>
                <input type="text" id="searchInput" placeholder="Search by location, title..." />
            </div>
            <div class="filter-group">
                <label>Property Type</label>
                <select id="houseTypeFilter">
                    <option value="">All Types</option>
                    <option value="1">1 BHK</option>
                    <option value="2">2 BHK</option>
                    <option value="3">3 BHK</option>
                    <option value="4">4+ BHK</option>
                    <option value="5">Studio</option>
                    <option value="6">PG / Hostel</option>
                    <option value="7">Villa</option>
                    <option value="8">Independent House</option>
                    <option value="9">Single Room</option>
                    <option value="10">Shared Room</option>
                </select>
            </div>
            <div class="filter-group">
                <label>Furnishing</label>
                <select id="furnishingFilter">
                    <option value="">Any</option>
                    <option value="0">Unfurnished</option>
                    <option value="1">Semi-Furnished</option>
                    <option value="2">Fully Furnished</option>
                </select>
            </div>
            <div class="filter-group">
                <label>Min Rent</label>
                <input type="number" id="minRentFilter" placeholder="₹ Min" />
            </div>
            <div class="filter-group">
                <label>Max Rent</label>
                <input type="number" id="maxRentFilter" placeholder="₹ Max" />
            </div>
            <button class="search-btn" onclick="applyFilters()">
                <i class="fas fa-search"></i> Search
            </button>
        </div>

        <div class="amenities-filter">
            <span class="amenity-chip" data-amenity="WiFi" onclick="toggleAmenity(this)">WiFi</span>
            <span class="amenity-chip" data-amenity="AC" onclick="toggleAmenity(this)">AC</span>
            <span class="amenity-chip" data-amenity="Parking" onclick="toggleAmenity(this)">Parking</span>
            <span class="amenity-chip" data-amenity="Gym" onclick="toggleAmenity(this)">Gym</span>
            <span class="amenity-chip" data-amenity="Swimming Pool" onclick="toggleAmenity(this)">Pool</span>
            <span class="amenity-chip" data-amenity="Security" onclick="toggleAmenity(this)">Security</span>
            <span class="amenity-chip" data-amenity="Power Backup" onclick="toggleAmenity(this)">Power Backup</span>
            <span class="amenity-chip" data-amenity="Lift" onclick="toggleAmenity(this)">Lift</span>
        </div>
    </div>

    <!-- Results Info -->
    <div class="results-info">
        <span class="results-count"><strong id="totalCount">0</strong> properties found</span>
        <select class="sort-select" id="sortSelect" onchange="applyFilters()">
            <option value="newest">Newest First</option>
            <option value="price-low">Price: Low to High</option>
            <option value="price-high">Price: High to Low</option>
        </select>
    </div>

    <!-- Properties Grid -->
    <div id="propertiesContainer" class="properties-grid">
        <div class="loading-container">
            <div class="loading-spinner"></div>
        </div>
    </div>

    <!-- Pagination -->
    <div class="pagination" id="pagination"></div>
</div>

<script>
    let currentPage = 0;
    const pageSize = 12;
    let selectedAmenities = [];
    const houseTypeLabels = {
        1: '1 BHK', 2: '2 BHK', 3: '3 BHK', 4: '4+ BHK', 5: 'Studio',
        6: 'PG/Hostel', 7: 'Villa', 8: 'House', 9: 'Room', 10: 'Shared'
    };
    const furnishingLabels = { 0: 'Unfurnished', 1: 'Semi-Furnished', 2: 'Fully Furnished' };

    function toggleAmenity(element) {
        const amenity = element.dataset.amenity;
        element.classList.toggle('active');
        
        if (selectedAmenities.includes(amenity)) {
            selectedAmenities = selectedAmenities.filter(a => a !== amenity);
        } else {
            selectedAmenities.push(amenity);
        }
    }

    async function loadProperties(page = 0) {
        const container = document.getElementById('propertiesContainer');
        container.innerHTML = '<div class="loading-container"><div class="loading-spinner"></div></div>';

        const params = new URLSearchParams();
        
        const query = document.getElementById('searchInput').value;
        const houseType = document.getElementById('houseTypeFilter').value;
        const furnishing = document.getElementById('furnishingFilter').value;
        const minRent = document.getElementById('minRentFilter').value;
        const maxRent = document.getElementById('maxRentFilter').value;

        if (query) params.set('q', query);
        if (houseType) params.set('houseType', houseType);
        if (furnishing) params.set('furnishing', furnishing);
        if (minRent) params.set('minRent', minRent);
        if (maxRent) params.set('maxRent', maxRent);
        if (selectedAmenities.length > 0) params.set('amenities', selectedAmenities.join(','));
        params.set('skip', page * pageSize);
        params.set('take', pageSize);

        try {
            const response = await fetch(`/api/rentalapi/properties?${params}`);
            
            if (!response.ok) {
                const errorText = await response.text();
                console.error('API Error:', response.status, errorText);
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            
            const data = await response.json();

            document.getElementById('totalCount').textContent = data.total || 0;

            if (!data.properties || data.properties.length === 0) {
                container.innerHTML = `
                    <div class="empty-state" style="grid-column: 1 / -1;">
                        <i class="fas fa-home"></i>
                        <h3>No properties found</h3>
                        <p>Try adjusting your filters or search criteria to find more properties.</p>
                    </div>
                `;
                document.getElementById('pagination').innerHTML = '';
                return;
            }

            container.innerHTML = data.properties.map((property, index) => {
                const imageHtml = property.imageUrls && property.imageUrls.length > 0
                    ? `<img src="${property.imageUrls[0]}" alt="${property.title}" onerror="this.parentElement.innerHTML='<div class=\\'image-placeholder\\'><i class=\\'fas fa-home\\'></i></div>';">`
                    : '<div class="image-placeholder"><i class="fas fa-home"></i></div>';

                const amenitiesHtml = property.amenities && property.amenities.length > 0
                    ? property.amenities.slice(0, 3).map(a => `<span class="amenity-tag">${a}</span>`).join('')
                    : '';

                return `
                    <div class="property-card" style="animation-delay: ${index * 0.1}s" onclick="viewProperty('${property.id}')">
                        <div class="property-image">
                            ${imageHtml}
                            <div class="property-badges">
                                <span class="property-badge badge-type">${houseTypeLabels[property.houseType] || 'Property'}</span>
                                <span class="property-badge badge-furnishing">${furnishingLabels[property.furnishing] || ''}</span>
                            </div>
                            <button class="property-wishlist" onclick="event.stopPropagation();">
                                <i class="far fa-heart"></i>
                            </button>
                        </div>
                        <div class="property-content">
                            <div class="property-location">
                                <i class="fas fa-map-marker-alt"></i>
                                ${property.area || property.city || 'Location'}
                            </div>
                            <h3 class="property-title">${property.title}</h3>
                            <div class="property-features">
                                ${property.bedrooms ? `<span class="feature"><i class="fas fa-bed"></i> ${property.bedrooms} Beds</span>` : ''}
                                ${property.bathrooms ? `<span class="feature"><i class="fas fa-bath"></i> ${property.bathrooms} Baths</span>` : ''}
                                ${property.squareFeet ? `<span class="feature"><i class="fas fa-vector-square"></i> ${property.squareFeet} sqft</span>` : ''}
                            </div>
                            <div class="property-amenities">
                                ${amenitiesHtml}
                                ${property.amenities && property.amenities.length > 3 ? `<span class="amenity-tag">+${property.amenities.length - 3} more</span>` : ''}
                            </div>
                            <div class="property-footer">
                                <div class="property-price">
                                    <span class="price-amount">₹${property.rentAmount.toLocaleString()}</span>
                                    <span class="price-period">per month</span>
                                </div>
                                <button class="view-btn">View Details</button>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');

            // Render pagination
            const totalPages = Math.ceil(data.total / pageSize);
            renderPagination(totalPages, page);

        } catch (error) {
            console.error('Error loading properties:', error);
            console.error('Error details:', error.message, error.stack);
            container.innerHTML = `
                <div class="empty-state" style="grid-column: 1 / -1;">
                    <i class="fas fa-exclamation-circle"></i>
                    <h3>Error loading properties</h3>
                    <p>Something went wrong. Please try again later.</p>
                    <p style="font-size: 0.8rem; color: #888; margin-top: 10px;">Error: ${error.message || 'Unknown error'}</p>
                </div>
            `;
        }
    }

    function renderPagination(totalPages, currentPage) {
        const container = document.getElementById('pagination');
        if (totalPages <= 1) {
            container.innerHTML = '';
            return;
        }

        let html = `<button onclick="goToPage(${currentPage - 1})" ${currentPage === 0 ? 'disabled' : ''}>
            <i class="fas fa-chevron-left"></i>
        </button>`;

        for (let i = 0; i < totalPages && i < 5; i++) {
            html += `<button class="${i === currentPage ? 'active' : ''}" onclick="goToPage(${i})">${i + 1}</button>`;
        }

        if (totalPages > 5) {
            html += `<button disabled>...</button>`;
        }

        html += `<button onclick="goToPage(${currentPage + 1})" ${currentPage >= totalPages - 1 ? 'disabled' : ''}>
            <i class="fas fa-chevron-right"></i>
        </button>`;

        container.innerHTML = html;
    }

    function goToPage(page) {
        currentPage = page;
        loadProperties(page);
        window.scrollTo({ top: 400, behavior: 'smooth' });
    }

    function applyFilters() {
        currentPage = 0;
        loadProperties(0);
    }

    function viewProperty(id) {
        window.location.href = `/Rental/Details/${id}`;
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
        loadProperties();
        loadQueryBadge();

        // Search on Enter
        document.getElementById('searchInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') applyFilters();
        });
    });

    // Load unread queries count for badge
    async function loadQueryBadge() {
        try {
            const response = await fetch('/api/rentalquery/unread/user');
            if (response.ok) {
                const result = await response.json();
                if (result.success && result.unreadCount > 0) {
                    const badge = document.getElementById('queryBadge');
                    if (badge) {
                        badge.textContent = result.unreadCount;
                        badge.style.display = 'inline';
                    }
                }
            }
        } catch (e) {
            // Ignore - user might not be logged in
        }
    }
</script>
