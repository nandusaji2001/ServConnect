@model ServConnect.Models.RentalProperty
@{
    ViewData["Title"] = "Edit Property - ServConnect";
}

<style>
    :root {
        --rental-primary: #6366F1;
        --rental-primary-dark: #4F46E5;
        --rental-gradient: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
    }

    body {
        background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
    }

    .edit-property-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 30px 20px;
    }

    .back-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        background: white;
        color: #374151;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 500;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        margin-bottom: 20px;
    }

    .back-btn:hover {
        transform: translateX(-5px);
        color: var(--rental-primary);
    }

    .form-header {
        text-align: center;
        margin-bottom: 40px;
        animation: fadeInUp 0.6s ease;
    }

    .form-header h1 {
        font-size: 2.5rem;
        font-weight: 800;
        background: var(--rental-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 12px;
    }

    .form-header p {
        color: #64748b;
        font-size: 1.1rem;
    }

    .property-id-badge {
        display: inline-block;
        background: #f1f5f9;
        padding: 8px 16px;
        border-radius: 8px;
        font-family: monospace;
        font-size: 0.95rem;
        font-weight: 600;
        color: var(--rental-primary);
        margin-top: 10px;
    }

    .property-form {
        background: white;
        border-radius: 24px;
        padding: 40px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        animation: fadeInUp 0.6s ease 0.1s both;
    }

    .form-section {
        margin-bottom: 36px;
    }

    .section-title {
        font-size: 1.2rem;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 20px;
        padding-bottom: 12px;
        border-bottom: 2px solid #f1f5f9;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .section-title i {
        color: var(--rental-primary);
    }

    .form-row {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin-bottom: 20px;
    }

    .form-row.three-col {
        grid-template-columns: repeat(3, 1fr);
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .form-group.full-width {
        grid-column: 1 / -1;
    }

    .form-group label {
        font-weight: 600;
        color: #374151;
        font-size: 0.95rem;
    }

    .form-group label .required {
        color: #ef4444;
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
        padding: 14px 18px;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #f8fafc;
    }

    .form-group input:focus,
    .form-group select:focus,
    .form-group textarea:focus {
        border-color: var(--rental-primary);
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
        outline: none;
        background: white;
    }

    .form-group textarea {
        min-height: 120px;
        resize: vertical;
    }

    .input-prefix {
        position: relative;
    }

    .input-prefix input {
        padding-left: 40px;
    }

    .input-prefix::before {
        content: '₹';
        position: absolute;
        left: 16px;
        top: 50%;
        transform: translateY(-50%);
        color: #64748b;
        font-weight: 600;
    }

    /* Amenities Checkboxes */
    .amenities-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 12px;
    }

    .amenity-checkbox {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px 16px;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
        background: #f8fafc;
    }

    .amenity-checkbox:hover {
        border-color: var(--rental-primary);
        background: white;
    }

    .amenity-checkbox.checked {
        background: linear-gradient(135deg, #eef2ff 0%, #e0e7ff 100%);
        border-color: var(--rental-primary);
    }

    .amenity-checkbox input {
        display: none;
    }

    .amenity-checkbox .checkbox-icon {
        width: 22px;
        height: 22px;
        border: 2px solid #d1d5db;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    .amenity-checkbox.checked .checkbox-icon {
        background: var(--rental-gradient);
        border-color: transparent;
    }

    .amenity-checkbox.checked .checkbox-icon i {
        color: white;
        font-size: 0.75rem;
    }

    .amenity-checkbox span {
        font-size: 0.9rem;
        color: #374151;
    }

    /* Image Upload */
    .image-upload-area {
        border: 3px dashed #e5e7eb;
        border-radius: 16px;
        padding: 40px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
        background: #f8fafc;
    }

    .image-upload-area:hover {
        border-color: var(--rental-primary);
        background: #eef2ff;
    }

    .image-upload-area i {
        font-size: 3rem;
        color: #d1d5db;
        margin-bottom: 16px;
    }

    .image-upload-area h4 {
        color: #374151;
        margin-bottom: 8px;
    }

    .image-upload-area p {
        color: #64748b;
        font-size: 0.9rem;
    }

    .image-preview-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 16px;
        margin-top: 20px;
    }

    .image-preview {
        position: relative;
        aspect-ratio: 4/3;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    .image-preview img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .image-preview .remove-btn {
        position: absolute;
        top: 8px;
        right: 8px;
        width: 28px;
        height: 28px;
        background: #ef4444;
        color: white;
        border: none;
        border-radius: 50%;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    .image-preview .remove-btn:hover {
        transform: scale(1.1);
    }

    /* Toggle Switches */
    .toggle-group {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 16px 20px;
        background: #f8fafc;
        border-radius: 12px;
        margin-bottom: 12px;
    }

    .toggle-label {
        display: flex;
        flex-direction: column;
    }

    .toggle-label span {
        font-weight: 600;
        color: #374151;
    }

    .toggle-label small {
        color: #64748b;
        font-size: 0.85rem;
    }

    .toggle-switch {
        position: relative;
        width: 52px;
        height: 28px;
    }

    .toggle-switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    .toggle-slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: #d1d5db;
        transition: 0.3s;
        border-radius: 28px;
    }

    .toggle-slider:before {
        position: absolute;
        content: "";
        height: 20px;
        width: 20px;
        left: 4px;
        bottom: 4px;
        background: white;
        transition: 0.3s;
        border-radius: 50%;
    }

    .toggle-switch input:checked + .toggle-slider {
        background: var(--rental-gradient);
    }

    .toggle-switch input:checked + .toggle-slider:before {
        transform: translateX(24px);
    }

    /* Map Container */
    .map-container {
        height: 300px;
        border-radius: 16px;
        overflow: hidden;
        background: #e5e7eb;
        margin-top: 12px;
    }

    #map {
        width: 100%;
        height: 100%;
    }

    .search-location-btn {
        margin-bottom: 12px;
    }

    .search-btn {
        padding: 12px 24px;
        background: var(--rental-gradient);
        color: white;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .search-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(99, 102, 241, 0.3);
    }

    .location-hint {
        font-size: 0.85rem;
        color: #64748b;
        margin-top: 8px;
    }

    /* Submit Button */
    .submit-section {
        margin-top: 40px;
        padding-top: 30px;
        border-top: 2px solid #f1f5f9;
        display: flex;
        gap: 16px;
    }

    .submit-btn {
        flex: 1;
        padding: 18px;
        background: var(--rental-gradient);
        color: white;
        border: none;
        border-radius: 14px;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
    }

    .submit-btn:hover:not(:disabled) {
        transform: translateY(-3px);
        box-shadow: 0 15px 35px rgba(99, 102, 241, 0.4);
    }

    .submit-btn:disabled {
        opacity: 0.7;
        cursor: not-allowed;
    }

    .submit-btn .spinner {
        width: 22px;
        height: 22px;
        border: 3px solid rgba(255,255,255,0.3);
        border-top-color: white;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    .cancel-btn {
        padding: 18px 36px;
        background: white;
        color: #374151;
        border: 2px solid #e5e7eb;
        border-radius: 14px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .cancel-btn:hover {
        background: #f8fafc;
        border-color: #d1d5db;
    }

    /* Success Modal */
    .modal-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.5);
        display: none;
        align-items: center;
        justify-content: center;
        z-index: 1000;
        backdrop-filter: blur(5px);
    }

    .modal-overlay.active {
        display: flex;
    }

    .modal-content {
        background: white;
        border-radius: 24px;
        padding: 50px;
        text-align: center;
        max-width: 450px;
        animation: modalIn 0.4s ease;
    }

    @@keyframes modalIn {
        from {
            opacity: 0;
            transform: scale(0.9) translateY(20px);
        }
        to {
            opacity: 1;
            transform: scale(1) translateY(0);
        }
    }

    .modal-content .success-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #10B981 0%, #059669 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 24px;
    }

    .modal-content .success-icon i {
        font-size: 2.5rem;
        color: white;
    }

    .modal-content h2 {
        font-size: 1.75rem;
        color: #1f2937;
        margin-bottom: 12px;
    }

    .modal-content p {
        color: #64748b;
        margin-bottom: 8px;
    }

    .modal-actions {
        display: flex;
        gap: 12px;
        margin-top: 24px;
    }

    .modal-btn {
        flex: 1;
        padding: 14px;
        border-radius: 12px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        text-align: center;
    }

    .modal-btn.primary {
        background: var(--rental-gradient);
        color: white;
        border: none;
    }

    .modal-btn.secondary {
        background: white;
        color: #374151;
        border: 2px solid #e5e7eb;
    }

    /* Animations */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .form-row, .form-row.three-col {
            grid-template-columns: 1fr;
        }

        .amenities-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .image-preview-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .property-form {
            padding: 24px;
        }

        .form-header h1 {
            font-size: 1.75rem;
        }

        .submit-section {
            flex-direction: column;
        }
    }
</style>

<div class="edit-property-container">
    <a href="/Rental/ManageListings" class="back-btn">
        <i class="fas fa-arrow-left"></i> Back to My Listings
    </a>

    <div class="form-header">
        <h1><i class="fas fa-edit"></i> Edit Property</h1>
        <p>Update your property listing details</p>
        <div class="property-id-badge">@Model.PropertyId</div>
    </div>

    <form class="property-form" id="propertyForm" onsubmit="updateProperty(event)">
        <!-- Basic Information -->
        <div class="form-section">
            <h3 class="section-title"><i class="fas fa-info-circle"></i> Basic Information</h3>
            <div class="form-group full-width">
                <label>Property Title <span class="required">*</span></label>
                <input type="text" id="title" placeholder="e.g., 2BHK Apartment Near Metro Station" value="@Model.Title" required />
            </div>
            <div class="form-group full-width">
                <label>Description</label>
                <textarea id="description" placeholder="Describe your property in detail...">@Model.Description</textarea>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label>Property Type <span class="required">*</span></label>
                    <select id="houseType" required>
                        <option value="">Select Type</option>
                        @{
                            var houseType = (int)Model.HouseType;
                        }
                        <option value="1" selected="@(houseType == 1)">1 BHK</option>
                        <option value="2" selected="@(houseType == 2)">2 BHK</option>
                        <option value="3" selected="@(houseType == 3)">3 BHK</option>
                        <option value="4" selected="@(houseType == 4)">4+ BHK</option>
                        <option value="5" selected="@(houseType == 5)">Studio</option>
                        <option value="6" selected="@(houseType == 6)">PG / Hostel</option>
                        <option value="7" selected="@(houseType == 7)">Villa</option>
                        <option value="8" selected="@(houseType == 8)">Independent House</option>
                        <option value="9" selected="@(houseType == 9)">Single Room</option>
                        <option value="10" selected="@(houseType == 10)">Shared Room</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Furnishing</label>
                    @{
                        var furnishing = (int)Model.Furnishing;
                    }
                    <select id="furnishing">
                        <option value="0" selected="@(furnishing == 0)">Unfurnished</option>
                        <option value="1" selected="@(furnishing == 1)">Semi-Furnished</option>
                        <option value="2" selected="@(furnishing == 2)">Fully Furnished</option>
                    </select>
                </div>
            </div>
        </div>

        <!-- Pricing -->
        <div class="form-section">
            <h3 class="section-title"><i class="fas fa-rupee-sign"></i> Pricing</h3>
            <div class="form-row">
                <div class="form-group">
                    <label>Monthly Rent <span class="required">*</span></label>
                    <div class="input-prefix">
                        <input type="number" id="rentAmount" placeholder="15000" value="@Model.RentAmount" required />
                    </div>
                </div>
                <div class="form-group">
                    <label>Security Deposit</label>
                    <div class="input-prefix">
                        <input type="number" id="depositAmount" placeholder="30000" value="@Model.DepositAmount" />
                    </div>
                </div>
            </div>
        </div>

        <!-- Property Details -->
        <div class="form-section">
            <h3 class="section-title"><i class="fas fa-building"></i> Property Details</h3>
            <div class="form-row three-col">
                <div class="form-group">
                    <label>Bedrooms</label>
                    <input type="number" id="bedrooms" placeholder="2" min="0" value="@Model.Bedrooms" />
                </div>
                <div class="form-group">
                    <label>Bathrooms</label>
                    <input type="number" id="bathrooms" placeholder="1" min="0" value="@Model.Bathrooms" />
                </div>
                <div class="form-group">
                    <label>Area (sqft)</label>
                    <input type="number" id="squareFeet" placeholder="1200" min="0" value="@Model.SquareFeet" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group">
                    <label>Floor Number</label>
                    <input type="number" id="floorNumber" placeholder="3" min="0" value="@Model.FloorNumber" />
                </div>
                <div class="form-group">
                    <label>Total Floors</label>
                    <input type="number" id="totalFloors" placeholder="10" min="1" value="@Model.TotalFloors" />
                </div>
            </div>
        </div>

        <!-- Location -->
        <div class="form-section">
            <h3 class="section-title"><i class="fas fa-map-marker-alt"></i> Location</h3>
            <div class="form-group full-width">
                <label>Full Address <span class="required">*</span></label>
                <textarea id="fullAddress" placeholder="Enter complete address..." rows="2" required>@Model.FullAddress</textarea>
            </div>
            <div class="form-row three-col">
                <div class="form-group">
                    <label>City <span class="required">*</span></label>
                    <input type="text" id="city" placeholder="Kochi" value="@Model.City" required onchange="searchLocation()" />
                </div>
                <div class="form-group">
                    <label>Area/Locality</label>
                    <input type="text" id="area" placeholder="Kakkanad" value="@Model.Area" onchange="searchLocation()" />
                </div>
                <div class="form-group">
                    <label>Pincode</label>
                    <input type="text" id="pincode" placeholder="682030" maxlength="6" value="@Model.Pincode" />
                </div>
            </div>
            <div class="form-group full-width">
                <label>Mark on Map</label>
                <div class="search-location-btn">
                    <button type="button" class="search-btn" onclick="searchLocation()">
                        <i class="fas fa-search"></i> Search City/Area on Map
                    </button>
                </div>
                <div class="map-container">
                    <div id="map"></div>
                </div>
                <p class="location-hint">Enter city and area above, click "Search" to locate on map, then click on map to set exact location.</p>
            </div>
            <input type="hidden" id="latitude" value="@Model.Latitude" />
            <input type="hidden" id="longitude" value="@Model.Longitude" />
        </div>

        <!-- Amenities -->
        <div class="form-section">
            <h3 class="section-title"><i class="fas fa-list-check"></i> Amenities</h3>
            <div class="amenities-grid" id="amenitiesGrid">
                @{
                    var amenityList = new[] { "WiFi", "AC", "Parking", "Gym", "Swimming Pool", "Security", "Power Backup", "Lift", "Water Supply", "Gas Pipeline", "Geyser", "Washing Machine" };
                    var amenityLabels = new[] { "WiFi", "AC", "Parking", "Gym", "Swimming Pool", "24/7 Security", "Power Backup", "Lift", "24/7 Water", "Gas Pipeline", "Geyser", "Washing Machine" };
                }
                @for (int i = 0; i < amenityList.Length; i++)
                {
                    var isChecked = Model.Amenities?.Contains(amenityList[i]) ?? false;
                    <div class="amenity-checkbox @(isChecked ? "checked" : "")" onclick="toggleAmenityCheck(this, event)">
                        <input type="checkbox" value="@amenityList[i]" @(isChecked ? "checked" : "") />
                        <span class="checkbox-icon"><i class="fas fa-check"></i></span>
                        <span>@amenityLabels[i]</span>
                    </div>
                }
            </div>
        </div>

        <!-- Images -->
        <div class="form-section">
            <h3 class="section-title"><i class="fas fa-images"></i> Property Images</h3>
            <div class="image-upload-area" onclick="document.getElementById('imageInput').click()">
                <i class="fas fa-cloud-upload-alt"></i>
                <h4>Upload Images</h4>
                <p>Click to upload or drag and drop<br>PNG, JPG up to 5MB each</p>
            </div>
            <input type="file" id="imageInput" multiple accept="image/*" style="display: none;" onchange="handleImageUpload(event)" />
            <div class="image-preview-grid" id="imagePreviewGrid"></div>
        </div>

        <!-- Owner Details -->
        <div class="form-section">
            <h3 class="section-title"><i class="fas fa-user"></i> Contact Details</h3>
            <div class="form-row three-col">
                <div class="form-group">
                    <label>Your Name <span class="required">*</span></label>
                    <input type="text" id="ownerName" placeholder="John Doe" value="@Model.OwnerName" required />
                </div>
                <div class="form-group">
                    <label>Phone <span class="required">*</span></label>
                    <input type="tel" id="ownerPhone" placeholder="+91 98765 43210" value="@Model.OwnerPhone" required />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" id="ownerEmail" placeholder="john@example.com" value="@Model.OwnerEmail" />
                </div>
            </div>
        </div>

        <!-- Preferences -->
        <div class="form-section">
            <h3 class="section-title"><i class="fas fa-sliders-h"></i> Preferences</h3>
            <div class="toggle-group">
                <div class="toggle-label">
                    <span>Available for Rent</span>
                    <small>Mark as available for potential tenants</small>
                </div>
                <label class="toggle-switch">
                    <input type="checkbox" id="isAvailable" @(Model.IsAvailable ? "checked" : "") />
                    <span class="toggle-slider"></span>
                </label>
            </div>
            <div class="toggle-group">
                <div class="toggle-label">
                    <span>Bachelors Allowed</span>
                    <small>Allow bachelor tenants</small>
                </div>
                <label class="toggle-switch">
                    <input type="checkbox" id="bachelorsAllowed" @(Model.BachelorsAllowed ? "checked" : "") />
                    <span class="toggle-slider"></span>
                </label>
            </div>
            <div class="toggle-group">
                <div class="toggle-label">
                    <span>Pets Allowed</span>
                    <small>Allow tenants with pets</small>
                </div>
                <label class="toggle-switch">
                    <input type="checkbox" id="petsAllowed" @(Model.PetsAllowed ? "checked" : "") />
                    <span class="toggle-slider"></span>
                </label>
            </div>
        </div>

        <!-- Submit -->
        <div class="submit-section">
            <a href="/Rental/ManageListings" class="cancel-btn">
                <i class="fas fa-times"></i> Cancel
            </a>
            <button type="submit" class="submit-btn" id="submitBtn">
                <i class="fas fa-save"></i>
                <span>Save Changes</span>
            </button>
        </div>
    </form>
</div>

<!-- Success Modal -->
<div class="modal-overlay" id="successModal">
    <div class="modal-content">
        <div class="success-icon">
            <i class="fas fa-check"></i>
        </div>
        <h2>Changes Saved!</h2>
        <p>Your property listing has been updated successfully.</p>
        <div class="modal-actions">
            <a href="/Rental/Details/@Model.Id" class="modal-btn secondary">View Property</a>
            <a href="/Rental/ManageListings" class="modal-btn primary">Back to Listings</a>
        </div>
    </div>
</div>

<!-- Leaflet Map -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
    const propertyId = '@Model.Id';
    let map;
    let marker;
    let uploadedImages = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ImageUrls ?? new List<string>()));

    // Initialize map
    function initMap() {
        const lat = @(Model.Latitude?.ToString(System.Globalization.CultureInfo.InvariantCulture) ?? "10.0159");
        const lng = @(Model.Longitude?.ToString(System.Globalization.CultureInfo.InvariantCulture) ?? "76.3419");
        
        map = L.map('map').setView([lat, lng], 15);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '© OpenStreetMap'
        }).addTo(map);

        // Add existing marker if coordinates exist
        if (@(Model.Latitude.HasValue ? "true" : "false")) {
            marker = L.marker([lat, lng], { draggable: true }).addTo(map);
            marker.on('dragend', function(e) {
                const pos = marker.getLatLng();
                document.getElementById('latitude').value = pos.lat;
                document.getElementById('longitude').value = pos.lng;
            });
        }

        // Click to add/move marker
        map.on('click', function(e) {
            const { lat, lng } = e.latlng;
            if (marker) {
                marker.setLatLng([lat, lng]);
            } else {
                marker = L.marker([lat, lng], { draggable: true }).addTo(map);
                marker.on('dragend', function(e) {
                    const pos = marker.getLatLng();
                    document.getElementById('latitude').value = pos.lat;
                    document.getElementById('longitude').value = pos.lng;
                });
            }
            document.getElementById('latitude').value = lat;
            document.getElementById('longitude').value = lng;
        });
    }

    // Search location by city and area
    async function searchLocation() {
        const city = document.getElementById('city').value.trim();
        const area = document.getElementById('area').value.trim();
        
        if (!city) {
            alert('Please enter a city name');
            return;
        }

        const searchQuery = area ? `${area}, ${city}, India` : `${city}, India`;
        
        try {
            const response = await fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(searchQuery)}&limit=1`);
            const results = await response.json();
            
            if (results && results.length > 0) {
                const { lat, lon, display_name } = results[0];
                const latitude = parseFloat(lat);
                const longitude = parseFloat(lon);
                
                map.setView([latitude, longitude], 15);
                
                if (marker) {
                    marker.setLatLng([latitude, longitude]);
                } else {
                    marker = L.marker([latitude, longitude], { draggable: true }).addTo(map);
                    marker.on('dragend', function(e) {
                        const pos = marker.getLatLng();
                        document.getElementById('latitude').value = pos.lat;
                        document.getElementById('longitude').value = pos.lng;
                    });
                }
                
                document.getElementById('latitude').value = latitude;
                document.getElementById('longitude').value = longitude;
                
                marker.bindPopup(`<b>${display_name}</b><br>Click map to adjust position`).openPopup();
            } else {
                alert('Location not found. Please try a different search term.');
            }
        } catch (error) {
            console.error('Geocoding error:', error);
            alert('Failed to search location. Please try again.');
        }
    }

    function toggleAmenityCheck(element, event) {
        if (event) event.preventDefault();
        const checkbox = element.querySelector('input[type="checkbox"]');
        checkbox.checked = !checkbox.checked;
        element.classList.toggle('checked', checkbox.checked);
    }

    function handleImageUpload(event) {
        const files = event.target.files;
        const previewGrid = document.getElementById('imagePreviewGrid');

        Array.from(files).forEach((file, index) => {
            if (uploadedImages.length >= 10) {
                alert('Maximum 10 images allowed');
                return;
            }

            const reader = new FileReader();
            reader.onload = function(e) {
                const imageUrl = e.target.result;
                uploadedImages.push(imageUrl);
                renderImagePreviews();
            };
            reader.readAsDataURL(file);
        });
    }

    function removeImage(index) {
        uploadedImages.splice(index, 1);
        renderImagePreviews();
    }

    function renderImagePreviews() {
        const previewGrid = document.getElementById('imagePreviewGrid');
        previewGrid.innerHTML = uploadedImages.map((url, index) => `
            <div class="image-preview">
                <img src="${url}" alt="Preview ${index + 1}" />
                <button type="button" class="remove-btn" onclick="removeImage(${index})">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        `).join('');
    }

    async function updateProperty(event) {
        event.preventDefault();

        const submitBtn = document.getElementById('submitBtn');
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<div class="spinner"></div><span>Saving...</span>';

        // Gather amenities
        const amenities = [];
        document.querySelectorAll('#amenitiesGrid input:checked').forEach(cb => {
            amenities.push(cb.value);
        });

        const data = {
            title: document.getElementById('title').value,
            description: document.getElementById('description').value,
            houseType: parseInt(document.getElementById('houseType').value),
            furnishing: parseInt(document.getElementById('furnishing').value),
            rentAmount: parseFloat(document.getElementById('rentAmount').value) || 0,
            depositAmount: parseFloat(document.getElementById('depositAmount').value) || 0,
            bedrooms: parseInt(document.getElementById('bedrooms').value) || null,
            bathrooms: parseInt(document.getElementById('bathrooms').value) || null,
            squareFeet: parseInt(document.getElementById('squareFeet').value) || null,
            floorNumber: parseInt(document.getElementById('floorNumber').value) || null,
            totalFloors: parseInt(document.getElementById('totalFloors').value) || null,
            fullAddress: document.getElementById('fullAddress').value,
            city: document.getElementById('city').value,
            area: document.getElementById('area').value,
            pincode: document.getElementById('pincode').value,
            latitude: parseFloat(document.getElementById('latitude').value) || null,
            longitude: parseFloat(document.getElementById('longitude').value) || null,
            amenities: amenities,
            imageUrls: uploadedImages,
            ownerName: document.getElementById('ownerName').value,
            ownerPhone: document.getElementById('ownerPhone').value,
            ownerEmail: document.getElementById('ownerEmail').value,
            isAvailable: document.getElementById('isAvailable').checked,
            bachelorsAllowed: document.getElementById('bachelorsAllowed').checked,
            petsAllowed: document.getElementById('petsAllowed').checked
        };

        try {
            const response = await fetch(`/api/rentalapi/properties/${propertyId}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });

            const result = await response.json();

            if (response.ok && result.success) {
                document.getElementById('successModal').classList.add('active');
            } else {
                alert(result.error || 'Failed to update property. Please try again.');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Something went wrong. Please try again.');
        } finally {
            submitBtn.disabled = false;
            submitBtn.innerHTML = '<i class="fas fa-save"></i><span>Save Changes</span>';
        }
    }

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', () => {
        initMap();
        renderImagePreviews();
    });
</script>
