<style>
    .elder-monitor {
        width: 100%;
        margin: 0;
        padding: 20px 30px;
    }
    
    .back-nav {
        margin-bottom: 20px;
    }
    
    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #666;
        text-decoration: none;
        font-size: 1rem;
    }
    
    .back-link:hover {
        color: #333;
    }
    
    .elder-header {
