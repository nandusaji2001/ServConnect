@model List<ServConnect.ViewModels.ElderRequestViewModel>
@{
    ViewData["Title"] = "Guardian Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: #f5f5f5;
        font-family: 'Avenir', sans-serif;
    }

    .guardian-container {
        min-height: calc(100vh - 80px);
        padding: 40px 20px;
    }

    .guardian-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        max-width: 1200px;
        width: 100%;
        margin: 0 auto;
        padding: 40px;
    }

    .guardian-header {
        margin-bottom: 32px;
    }

    .guardian-header h2 {
        font-family: 'Fraunces', serif;
        font-size: 28px;
        font-weight: 300;
        color: #1a1a1a;
        margin: 0 0 8px 0;
    }

    .guardian-header p {
        color: #9ca3af;
        font-size: 14px;
        font-weight: 300;
        margin: 0;
    }

    .requests-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    .requests-table th,
    .requests-table td {
        padding: 16px;
        text-align: left;
        border-bottom: 1px solid #e5e7eb;
    }

    .requests-table th {
        background-color: #f9fafb;
        font-weight: 600;
        color: #374151;
    }

    .requests-table tr:last-child td {
        border-bottom: none;
    }

    .requests-table tr:hover {
        background-color: #f9fafb;
    }

    .status-pending {
        background-color: #fef3c7;
        color: #92400e;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 500;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
    }

    .btn-approve {
        padding: 8px 16px;
        background: linear-gradient(to right, #10b981, #059669);
        color: white;
        border: none;
        border-radius: 6px;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
        display: inline-block;
    }

    .btn-approve:hover {
        opacity: 0.9;
        transform: translateY(-1px);
        box-shadow: 0 2px 8px rgba(16, 185, 129, 0.2);
    }

    .btn-reject {
        padding: 8px 16px;
        background: #f3f4f6;
        color: #ef4444;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
        display: inline-block;
    }

    .btn-reject:hover {
        background: #fee2e2;
    }

    .no-requests {
        text-align: center;
        padding: 40px;
        color: #9ca3af;
    }

    @@media (max-width: 768px) {
        .guardian-card {
            padding: 24px;
        }

        .requests-table {
            display: block;
            overflow-x: auto;
        }

        .action-buttons {
            flex-direction: column;
        }
    }
</style>

<div class="guardian-container">
    <div class="guardian-card">
        <!-- Header -->
        <div class="guardian-header">
            <h2>Guardian Dashboard</h2>
            <p>Manage elder care requests assigned to you</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (Model.Any())
        {
            <table class="requests-table">
                <thead>
                    <tr>
                        <th>Elder Name</th>
                        <th>Elder Phone</th>
                        <th>Status</th>
                        <th>Requested On</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model)
                    {
                        <tr>
                            <td>@request.ElderName</td>
                            <td>@request.ElderPhone</td>
                            <td><span class="status-pending">@request.Status</span></td>
                            <td>@request.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td>
                                <div class="action-buttons">
                                    <form method="post" action="@Url.Action("ApproveRequest", "Guardian")" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="requestId" value="@request.Id" />
                                        <button type="submit" class="btn-approve">Approve</button>
                                    </form>
                                    <form method="post" action="@Url.Action("RejectRequest", "Guardian")" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="requestId" value="@request.Id" />
                                        <button type="submit" class="btn-reject">Reject</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="no-requests">
                <i class="bi bi-inbox" style="font-size: 3rem; margin-bottom: 16px;"></i>
                <h3>No Pending Requests</h3>
                <p>You don't have any pending elder care requests at the moment.</p>
            </div>
        }
    </div>
</div>