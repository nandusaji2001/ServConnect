<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ServConnect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ServConnect.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark mb-3" style="background: linear-gradient(135deg,#667eea,#764ba2);">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-diagram-3-fill"></i> ServConnect
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Removed Dashboard link per requirement -->

                            <!-- Common Authenticated Links -->
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Profile">
                                    <i class="bi bi-person-circle"></i> Profile
                                </a>
                            </li>

                            <!-- Admin-Specific Links -->
                            @if (User.IsInRole(RoleTypes.Admin))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-shield-lock"></i> Admin
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Users"><i class="bi bi-people"></i> Manage Users</a></li>
                                        <li><a class="dropdown-item" asp-controller="LocalDirectory" asp-action="Manage"><i class="bi bi-geo"></i> Local Services</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Settings"><i class="bi bi-gear"></i> Settings</a></li>
                                    </ul>
                                </li>
                            }

                            <!-- Service Provider-Specific Links -->
                            @if (User.IsInRole(RoleTypes.ServiceProvider))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" id="providerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-briefcase"></i> Provider
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="providerDropdown">
                                        <!-- Dashboard link removed -->
                                        <li><a class="dropdown-item" asp-controller="ServiceProvider" asp-action="Services"><i class="bi bi-list-task"></i> My Items</a></li>
                                        <li><a class="dropdown-item" asp-controller="Services" asp-action="Manage"><i class="bi bi-gear"></i> Manage My Services</a></li>
                                        <li><a class="dropdown-item" asp-controller="Services" asp-action="Browse"><i class="bi bi-shop"></i> Book Service</a></li>
                                    </ul>
                                </li>
                            }

                            <!-- Vendor-Specific Links -->
                            @if (User.IsInRole(RoleTypes.Vendor))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" id="vendorDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-bag"></i> Vendor
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="vendorDropdown">
                                        <!-- Dashboard link removed -->
                                        <li><a class="dropdown-item" asp-controller="Vendor" asp-action="Products"><i class="bi bi-box-seam"></i> My Products</a></li>
                                        <li><a class="dropdown-item" asp-controller="Vendor" asp-action="Orders"><i class="bi bi-receipt"></i> Orders</a></li>
                                        <li><a class="dropdown-item" href="/Home/Items?role=Vendor"><i class="bi bi-shop"></i> Browse Sellers</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container flex-fill">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="mt-auto">
        <div class="py-4" style="background: linear-gradient(135deg,#667eea,#764ba2); color:#fff;">
            <div class="container d-flex flex-wrap justify-content-between align-items-center gap-3">
                <div class="d-flex align-items-center gap-2">
                    <i class="bi bi-diagram-3-fill fs-4"></i>
                    <div>
                        <div class="fw-semibold">ServConnect</div>
                        <small class="opacity-75">Connecting users with trusted providers and vendors</small>
                    </div>
                </div>
                <div class="d-flex gap-3">
                    <a class="text-white text-decoration-none" asp-controller="Home" asp-action="Items"><i class="bi bi-bag"></i> Marketplace</a>
                    <a class="text-white text-decoration-none" asp-controller="Home" asp-action="Privacy"><i class="bi bi-shield-lock"></i> Privacy</a>
                    <a class="text-white text-decoration-none" asp-controller="Account" asp-action="Profile"><i class="bi bi-person"></i> Profile</a>
                </div>
                <div class="text-end">
                    <small class="opacity-75">&copy; @DateTime.Now.Year • ServConnect</small>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>