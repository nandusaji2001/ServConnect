@model List<ServConnect.Models.Advertisement>
@using ServConnect.Models
@{
    ViewData["Title"] = "Advertisements";
}
<div class="container py-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Advertisements</h3>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" asp-controller="Admin" asp-action="AdvertisementRequests"><i class="bi bi-card-list"></i> Requests</a>
            <a class="btn btn-primary" asp-controller="Admin" asp-action="CreateAd"><i class="bi bi-cloud-upload"></i> Upload Ad</a>
        </div>
    </div>

    @if (TempData["AdMessage"] != null)
    {
        <div class="alert alert-success">@TempData["AdMessage"]</div>
    }

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">No advertisements found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Preview</th>
                        <th>Type</th>
                        <th>Created</th>
                        <th>Status</th>
                        <th style="width:160px"></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var ad in Model)
                {
                    <tr>
                        <td>
                            @if (ad.Type == AdvertisementType.HeroBanner)
                            {
                                <img src="@ad.ImageUrl" alt="ad" width="120" height="36" style="object-fit:cover;border-radius:4px;" />
                            }
                            else
                            {
                                <img src="@ad.ImageUrl" alt="ad" width="364" height="45" style="object-fit:cover;border-radius:4px;" />
                            }
                        </td>
                        <td>
                            @if (ad.Type == AdvertisementType.HeroBanner)
                            {
                                <span class="badge bg-primary">Hero Banner</span>
                                <small class="d-block text-muted">600x180</small>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Bottom Page</span>
                                <small class="d-block text-muted">728x90</small>
                            }
                        </td>
                        <td>@ad.CreatedAt.ToLocalTime().ToString("g")</td>
                        <td>
                            @if (ad.IsActive) { <span class="badge bg-success">Active</span>; } else { <span class="badge bg-secondary">Inactive</span>; }
                        </td>
                        <td>
                            <form asp-controller="Admin" asp-action="DeleteAd" method="post">
                                <input type="hidden" name="id" value="@ad.Id" />
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this ad?')">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>