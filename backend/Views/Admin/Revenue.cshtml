@{
    ViewData["Title"] = "Revenue Analytics";
    var analytics = ViewBag.Analytics as ServConnect.Models.RevenueAnalytics;
    var predictions = ViewBag.Predictions as List<ServConnect.Models.RevenuePrediction>;
}

<style>
    :root {
        --primary-green: #10b981;
        --primary-green-dark: #059669;
        --primary-gradient: linear-gradient(135deg, #10b981 0%, #059669 100%);
        --card-shadow: 0 4px 20px rgba(16, 185, 129, 0.08);
        --card-shadow-hover: 0 12px 40px rgba(16, 185, 129, 0.15);
        --bg-light: #f0fdf4;
        --bg-secondary: #ecfdf5;
    }

    body {
        background: linear-gradient(135deg, #f0fdf4 0%, #ecfdf5 50%, #d1fae5 100%);
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    }

    .revenue-page {
        min-height: 100vh;
    }

    .page-header {
        background: var(--primary-gradient);
        color: white;
        padding: 2rem 2.5rem;
        border-radius: 20px;
        margin-bottom: 1.5rem;
        box-shadow: 0 10px 40px rgba(16, 185, 129, 0.3);
        position: relative;
        overflow: hidden;
    }

    .page-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -5%;
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, rgba(255, 255, 255, 0.15) 0%, transparent 70%);
        border-radius: 50%;
    }

    .header-content {
        position: relative;
        z-index: 1;
    }

    .page-header h1 {
        margin: 0;
        font-size: 2rem;
        font-weight: 800;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .page-header h1 i {
        background: rgba(255, 255, 255, 0.2);
        padding: 0.6rem;
        border-radius: 12px;
    }

    .page-header p {
        margin: 0.75rem 0 0 0;
        opacity: 0.9;
        font-size: 1rem;
    }

    .header-actions {
        display: flex;
        gap: 0.75rem;
        margin-top: 1.25rem;
    }

    .sync-button {
        background: white;
        color: var(--primary-green-dark);
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 12px;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .sync-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(255, 255, 255, 0.3);
    }

    .sync-button:disabled {
        opacity: 0.6;
        cursor: not-allowed;
        transform: none;
    }

    .btn-back {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border: none;
        padding: 0.75rem 1.25rem;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
    }

    .btn-back:hover {
        background: rgba(255, 255, 255, 0.3);
        color: white;
    }

    .error-message {
        background: #fee2e2;
        color: #dc2626;
        padding: 1rem 1.5rem;
        border-radius: 12px;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-weight: 500;
    }

    .analytics-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .analytics-card {
        background: white;
        border-radius: 20px;
        padding: 1.75rem;
        box-shadow: var(--card-shadow);
        transition: all 0.3s ease;
        border: 1px solid rgba(16, 185, 129, 0.1);
    }

    .analytics-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--card-shadow-hover);
    }

    .card-title {
        font-size: 1rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 1.25rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .card-title i {
        color: var(--primary-green);
    }

    .card-value {
        font-size: 2.25rem;
        font-weight: 800;
        color: #1e293b;
        margin-bottom: 0.5rem;
    }

    .card-subtitle {
        color: #64748b;
        font-size: 0.9rem;
        line-height: 1.6;
    }

    .breakdown-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.85rem 0;
        border-bottom: 1px solid #f1f5f9;
    }

    .breakdown-item:last-child {
        border-bottom: none;
    }

    .breakdown-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #475569;
        font-weight: 500;
    }

    .breakdown-label i {
        width: 32px;
        height: 32px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.85rem;
    }

    .breakdown-label i.service {
        background: #d1fae5;
        color: #059669;
    }

    .breakdown-label i.ad {
        background: #fef3c7;
        color: #d97706;
    }

    .breakdown-label i.booking {
        background: #e0e7ff;
        color: #4f46e5;
    }

    .breakdown-value {
        font-weight: 700;
        color: #1e293b;
        font-size: 1.1rem;
    }

    /* Predictions */
    .predictions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 1rem;
        margin-top: 1.25rem;
    }

    .prediction-card {
        background: #f0fdf4;
        border-radius: 16px;
        padding: 1.25rem;
        text-align: center;
        border: 2px solid transparent;
        transition: all 0.3s ease;
    }

    .prediction-card:hover {
        border-color: var(--primary-green);
        background: white;
        transform: translateY(-2px);
    }

    .prediction-period {
        font-size: 0.85rem;
        color: #64748b;
        margin-bottom: 0.5rem;
        font-weight: 600;
    }

    .prediction-amount {
        font-size: 1.5rem;
        font-weight: 800;
        color: #1e293b;
        margin-bottom: 0.35rem;
    }

    .prediction-confidence {
        font-size: 0.8rem;
        color: #059669;
        font-weight: 600;
    }

    .ml-note {
        margin-top: 1.25rem;
        padding: 1rem 1.25rem;
        background: linear-gradient(135deg, #f0fdf4 0%, #ecfdf5 100%);
        border-radius: 12px;
        font-size: 0.9rem;
        color: #475569;
        border-left: 4px solid var(--primary-green);
    }

    .ml-note i {
        color: #059669;
        margin-right: 0.35rem;
    }

    /* Chart placeholder */
    .chart-container {
        height: 280px;
        margin-top: 1rem;
        background: #f8fafc;
        border-radius: 12px;
        padding: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #64748b;
    }

    /* Data Table Section */
    .data-section {
        background: white;
        border-radius: 20px;
        padding: 1.75rem;
        box-shadow: var(--card-shadow);
        margin-top: 1.5rem;
        border: 1px solid rgba(16, 185, 129, 0.1);
    }

    .section-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }

    .section-header i {
        color: var(--primary-green);
    }

    .section-header h4 {
        margin: 0;
        font-weight: 700;
        color: #1e293b;
    }

    .section-subtitle {
        color: #64748b;
        font-size: 0.9rem;
        margin-bottom: 1.5rem;
    }

    .data-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.9rem;
    }

    .data-table thead tr {
        background: #f8fafc;
        border-bottom: 2px solid #e2e8f0;
    }

    .data-table th {
        padding: 0.875rem 1rem;
        text-align: left;
        font-weight: 600;
        color: #475569;
    }

    .data-table td {
        padding: 0.875rem 1rem;
        border-bottom: 1px solid #f1f5f9;
        color: #1e293b;
    }

    .data-table tbody tr:hover {
        background: #f8fafc;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        padding: 0.35rem 0.75rem;
        border-radius: 50px;
        font-size: 0.8rem;
        font-weight: 600;
    }

    .status-badge.paid {
        background: #d1fae5;
        color: #059669;
    }

    .table-summary {
        margin-top: 0.75rem;
        font-size: 0.85rem;
        color: #64748b;
    }

    .no-data {
        text-align: center;
        padding: 2rem;
        color: #64748b;
    }

    .no-data i {
        font-size: 2rem;
        color: #d1fae5;
        margin-bottom: 0.5rem;
        display: block;
    }

    .loading {
        display: inline-block;
        width: 18px;
        height: 18px;
        border: 3px solid rgba(16, 185, 129, 0.3);
        border-radius: 50%;
        border-top-color: var(--primary-green);
        animation: spin 1s ease-in-out infinite;
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

    @@media (max-width: 768px) {
        .analytics-grid {
            grid-template-columns: 1fr;
        }

        .predictions-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .data-table {
            font-size: 0.8rem;
        }

        .data-table th, .data-table td {
            padding: 0.65rem;
        }
    }
</style>

<div class="revenue-page">
    <!-- Header -->
    <div class="page-header">
        <div class="header-content">
            <h1><i class="fas fa-chart-line"></i> Revenue Analytics</h1>
            <p>Comprehensive revenue tracking with ML-powered predictions</p>
            <div class="header-actions">
                <button class="sync-button" onclick="syncRevenueData()" id="syncButton">
                    <i class="fas fa-sync-alt"></i> Sync Revenue Data
                </button>
                <a class="btn-back" asp-controller="Admin" asp-action="Dashboard">
                    <i class="fas fa-arrow-left"></i> Dashboard
                </a>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.Error as string))
    {
        <div class="error-message">
            <i class="fas fa-exclamation-triangle"></i>
            Error loading revenue data: @ViewBag.Error
        </div>
    }

    @{
        var paidServices = ViewBag.PaidServicePayments as List<ServConnect.Models.ServicePayment> ?? new List<ServConnect.Models.ServicePayment>();
        var paidAds = ViewBag.PaidAdvertisements as List<ServConnect.Models.AdvertisementRequest> ?? new List<ServConnect.Models.AdvertisementRequest>();
        decimal serviceRevenue = paidServices.Sum(p => p.AmountInRupees);
        decimal adRevenue = (paidAds.Sum(a => a.AmountInPaise) / 100m);
        decimal totalActualRevenue = serviceRevenue + adRevenue;
        int totalActualTransactions = paidServices.Count + paidAds.Count;
        decimal avgTransaction = totalActualTransactions > 0 ? totalActualRevenue / totalActualTransactions : 0;
    }

    @if (analytics != null)
    {
        <!-- Analytics Cards -->
        <div class="analytics-grid">
            <!-- Total Revenue -->
            <div class="analytics-card">
                <div class="card-title">
                    <i class="fas fa-rupee-sign"></i>
                    Total Revenue
                </div>
                <div class="card-value">₹@totalActualRevenue.ToString("N0")</div>
                <div class="card-subtitle">
                    From @totalActualTransactions paid transactions<br>
                    Average: ₹@avgTransaction.ToString("N0") per transaction
                </div>
            </div>

            <!-- Revenue Breakdown -->
            <div class="analytics-card">
                <div class="card-title">
                    <i class="fas fa-chart-pie"></i>
                    Revenue Sources
                </div>
                <div class="breakdown-item">
                    <div class="breakdown-label">
                        <i class="fas fa-cogs service"></i>
                        Service Publications
                    </div>
                    <div class="breakdown-value">₹@serviceRevenue.ToString("N0")</div>
                </div>
                <div class="breakdown-item">
                    <div class="breakdown-label">
                        <i class="fas fa-ad ad"></i>
                        Advertisements
                    </div>
                    <div class="breakdown-value">₹@adRevenue.ToString("N0")</div>
                </div>
                <div class="breakdown-item">
                    <div class="breakdown-label">
                        <i class="fas fa-percentage booking"></i>
                        Booking Commissions
                    </div>
                    <div class="breakdown-value">₹@(analytics?.BookingCommissionRevenue ?? 0).ToString("N0")</div>
                </div>
            </div>

            <!-- Monthly Trend -->
            <div class="analytics-card">
                <div class="card-title">
                    <i class="fas fa-calendar-alt"></i>
                    Monthly Revenue Trend
                </div>
                <div class="chart-container" id="monthlyChart">
                    <span><i class="fas fa-chart-area"></i> Chart visualization</span>
                </div>
            </div>
        </div>

        <!-- ML Predictions -->
        @if (predictions != null && predictions.Any())
        {
            <div class="analytics-card">
                <div class="card-title">
                    <i class="fas fa-brain"></i>
                    ML Revenue Predictions
                    <small style="color: #64748b; font-weight: 500; margin-left: 0.5rem;">(Time Series Forecasting)</small>
                </div>
                <div class="predictions-grid">
                    @foreach (var prediction in predictions)
                    {
                        <div class="prediction-card">
                            <div class="prediction-period">@prediction.Period</div>
                            <div class="prediction-amount">₹@prediction.PredictedAmount.ToString("N0")</div>
                            <div class="prediction-confidence">
                                <i class="fas fa-chart-line"></i>
                                @((prediction.ConfidenceScore * 100).ToString("F0"))% confidence
                            </div>
                        </div>
                    }
                </div>
                <div class="ml-note">
                    <i class="fas fa-check-circle"></i>
                    <strong>Based on Actual Revenue:</strong>
                    Predictions calculated from verified transactions (Services: ₹@serviceRevenue.ToString("N0"), Ads: ₹@adRevenue.ToString("N0"))
                    @if (predictions.FirstOrDefault()?.ModelFeatures.ContainsKey("Method") == true)
                    {
                        <span> | Method: @predictions.First().ModelFeatures["Method"]</span>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="analytics-card">
            <div class="card-title">
                <i class="fas fa-info-circle"></i>
                No Revenue Data
            </div>
            <p style="color: #64748b;">No revenue data available. Click "Sync Revenue Data" to load from payment sources.</p>
        </div>
    }

    <!-- Service Payments Table -->
    <div class="data-section">
        <div class="section-header">
            <i class="fas fa-cogs"></i>
            <h4>Service Publication Payments</h4>
        </div>
        <p class="section-subtitle">Direct revenue from verified paid transactions</p>

        @if (paidServices.Any())
        {
            <div style="overflow-x: auto;">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Service Name</th>
                            <th>Amount (₹)</th>
                            <th>Duration</th>
                            <th>Start Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payment in paidServices.OrderByDescending(p => p.UpdatedAt).Take(10))
                        {
                            <tr>
                                <td>@payment.ServiceName</td>
                                <td style="font-weight: 700;">₹@payment.AmountInRupees.ToString("N0")</td>
                                <td>@payment.DurationInMonths month(s)</td>
                                <td>@payment.PublicationStartDate?.ToString("MMM dd, yyyy")</td>
                                <td><span class="status-badge paid"><i class="fas fa-check"></i> Paid</span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <p class="table-summary">
                Total Service Payments: @paidServices.Count | Total: ₹@paidServices.Sum(p => p.AmountInRupees).ToString("N0")
            </p>
        }
        else
        {
            <div class="no-data">
                <i class="fas fa-receipt"></i>
                No service payments found.
            </div>
        }
    </div>

    <!-- Advertisement Payments Table -->
    <div class="data-section">
        <div class="section-header">
            <i class="fas fa-ad"></i>
            <h4>Advertisement Payments</h4>
        </div>
        <p class="section-subtitle">Revenue from approved paid advertisements</p>

        @if (paidAds.Any())
        {
            <div style="overflow-x: auto;">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>Amount (₹)</th>
                            <th>Requested By</th>
                            <th>Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ad in paidAds.OrderByDescending(a => a.CreatedAt).Take(10))
                        {
                            <tr>
                                <td>@(ad.Type == ServConnect.Models.AdvertisementType.HeroBanner ? "Hero Banner" : "Bottom Page")</td>
                                <td style="font-weight: 700;">₹@((ad.AmountInPaise / 100m).ToString("N0"))</td>
                                <td>@ad.RequestedByUserId.ToString().Substring(0, 8)...</td>
                                <td>@ad.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</td>
                                <td><span class="status-badge paid"><i class="fas fa-check"></i> Paid</span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <p class="table-summary">
                Total Ad Payments: @paidAds.Count | Total: ₹@((paidAds.Sum(a => a.AmountInPaise) / 100m).ToString("N0"))
            </p>
        }
        else
        {
            <div class="no-data">
                <i class="fas fa-image"></i>
                No advertisement payments found.
            </div>
        }
    </div>
</div>

<script>
    async function syncRevenueData() {
        const button = document.getElementById('syncButton');
        const originalHtml = button.innerHTML;

        button.disabled = true;
        button.innerHTML = '<span class="loading"></span> Syncing...';

        try {
            const response = await fetch('/api/Admin/SyncRevenueData', { method: 'POST' });
            if (response.ok) {
                location.reload();
            } else {
                alert('Failed to sync revenue data');
                button.innerHTML = originalHtml;
                button.disabled = false;
            }
        } catch (error) {
            alert('Error syncing data: ' + error.message);
            button.innerHTML = originalHtml;
            button.disabled = false;
        }
    }
</script>
