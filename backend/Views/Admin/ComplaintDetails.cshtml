@model ServConnect.ViewModels.ComplaintDetailViewModel
@{
    ViewData["Title"] = "Complaint Details";
    var c = Model.Complaint;
    
    var categoryName = c.Category switch
    {
        "ServiceProviderIssue" => "Service Provider Issue",
        "VendorIssue" => "Vendor Issue",
        "TechnicalIssue" => "Technical Issue",
        "SafetyEmergency" => "Safety / Emergency",
        _ => c.Category
    };
}

<style>
    .details-page {
        padding: 25px;
        background: #f5f5f5;
        min-height: 100vh;
    }
    
    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #6b7280;
        text-decoration: none;
        margin-bottom: 20px;
        font-size: 0.95rem;
        transition: color 0.2s ease;
    }
    
    .back-link:hover {
        color: #10b981;
    }
    
    .details-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 25px;
    }
    
    @@media (max-width: 1024px) {
        .details-grid {
            grid-template-columns: 1fr;
        }
    }
    
    .main-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
    }
    
    .card-header {
        background: linear-gradient(135deg, #065f46 0%, #047857 100%);
        color: white;
        padding: 25px 30px;
    }
    
    .card-header h1 {
        font-size: 1.5rem;
        margin: 0 0 10px 0;
    }
    
    .header-meta {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        font-size: 0.9rem;
        opacity: 0.9;
    }
    
    .complaint-id {
        background: rgba(255, 255, 255, 0.2);
        padding: 4px 12px;
        border-radius: 6px;
        font-family: monospace;
    }
    
    .card-body {
        padding: 30px;
    }
    
    .info-section {
        margin-bottom: 25px;
    }
    
    .section-title {
        font-size: 1rem;
        font-weight: 600;
        color: #065f46;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
        padding-bottom: 10px;
        border-bottom: 2px solid #e5e7eb;
    }
    
    .section-title i {
        color: #10b981;
    }
    
    .info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 15px;
    }
    
    .info-item {
        background: #f9fafb;
        padding: 15px;
        border-radius: 10px;
    }
    
    .info-item label {
        display: block;
        font-size: 0.75rem;
        color: #6b7280;
        margin-bottom: 5px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .info-item span {
        font-size: 1rem;
        color: #111827;
        font-weight: 500;
    }
    
    .description-box {
        background: #f9fafb;
        padding: 20px;
        border-radius: 12px;
        line-height: 1.7;
        color: #374151;
    }
    
    .evidence-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
    }
    
    .evidence-item {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: #f3f4f6;
        padding: 10px 16px;
        border-radius: 8px;
        color: #374151;
        text-decoration: none;
        transition: all 0.2s ease;
    }
    
    .evidence-item:hover {
        background: #10b981;
        color: white;
    }
    
    .sidebar-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        padding: 25px;
        height: fit-content;
    }
    
    .sidebar-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #111827;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .sidebar-title i {
        color: #10b981;
    }
    
    .status-display {
        text-align: center;
        padding: 20px;
        background: #f9fafb;
        border-radius: 12px;
        margin-bottom: 20px;
    }
    
    .status-badge-large {
        display: inline-block;
        padding: 10px 24px;
        border-radius: 25px;
        font-size: 1rem;
        font-weight: 600;
    }
    
    .status-pending { background: #fef3c7; color: #92400e; }
    .status-inprogress { background: #dbeafe; color: #1e40af; }
    .status-resolved { background: #d1fae5; color: #065f46; }
    .status-rejected { background: #fee2e2; color: #991b1b; }
    
    .priority-display {
        text-align: center;
        margin-bottom: 20px;
    }
    
    .priority-badge-large {
        display: inline-block;
        padding: 8px 20px;
        border-radius: 8px;
        font-size: 0.9rem;
        font-weight: 600;
    }
    
    .priority-normal { background: #f3f4f6; color: #6b7280; }
    .priority-high { background: #fef3c7; color: #92400e; }
    .priority-critical { background: #fee2e2; color: #dc2626; }
    
    .action-section {
        margin-bottom: 20px;
        padding-bottom: 20px;
        border-bottom: 1px solid #e5e7eb;
    }
    
    .action-section:last-child {
        border-bottom: none;
        margin-bottom: 0;
        padding-bottom: 0;
    }
    
    .action-title {
        font-size: 0.9rem;
        font-weight: 600;
        color: #374151;
        margin-bottom: 12px;
    }
    
    .form-control, .form-select {
        width: 100%;
        padding: 10px 14px;
        border: 2px solid #e5e7eb;
        border-radius: 10px;
        font-size: 0.95rem;
        margin-bottom: 10px;
        transition: all 0.2s ease;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #10b981;
        outline: none;
        box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.15);
    }
    
    .btn-action {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }
    
    .btn-resolve {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
    }
    
    .btn-resolve:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    }
    
    .btn-reject {
        background: #fee2e2;
        color: #dc2626;
    }
    
    .btn-reject:hover {
        background: #fecaca;
    }
    
    .btn-escalate {
        background: #fef3c7;
        color: #92400e;
    }
    
    .btn-escalate:hover {
        background: #fde68a;
    }
    
    .btn-suspend {
        background: #ef4444;
        color: white;
    }
    
    .btn-suspend:hover {
        background: #dc2626;
    }
    
    .btn-unsuspend {
        background: #10b981;
        color: white;
    }
    
    .btn-unsuspend:hover {
        background: #059669;
    }
    
    .btn-assign {
        background: #dbeafe;
        color: #1e40af;
    }
    
    .btn-assign:hover {
        background: #bfdbfe;
    }
    
    .timeline-section {
        margin-top: 30px;
    }
    
    .timeline {
        position: relative;
        padding-left: 30px;
    }
    
    .timeline::before {
        content: '';
        position: absolute;
        left: 8px;
        top: 0;
        bottom: 0;
        width: 2px;
        background: #e5e7eb;
    }
    
    .timeline-item {
        position: relative;
        padding-bottom: 20px;
    }
    
    .timeline-item:last-child {
        padding-bottom: 0;
    }
    
    .timeline-dot {
        position: absolute;
        left: -26px;
        top: 4px;
        width: 14px;
        height: 14px;
        border-radius: 50%;
        background: #10b981;
        border: 3px solid #d1fae5;
    }
    
    .timeline-content {
        background: #f9fafb;
        padding: 15px;
        border-radius: 10px;
    }
    
    .timeline-status {
        font-weight: 600;
        color: #111827;
        margin-bottom: 5px;
    }
    
    .timeline-note {
        font-size: 0.9rem;
        color: #6b7280;
        margin-bottom: 5px;
    }
    
    .timeline-meta {
        font-size: 0.8rem;
        color: #9ca3af;
    }
    
    .alert-success {
        background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
        border: 1px solid #10b981;
        color: #065f46;
        border-radius: 12px;
        padding: 16px 20px;
        margin-bottom: 20px;
    }
    
    .alert-danger {
        background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
        border: 1px solid #f87171;
        color: #991b1b;
        border-radius: 12px;
        padding: 16px 20px;
        margin-bottom: 20px;
    }
    
    .suspended-alert {
        background: #fee2e2;
        border: 2px solid #ef4444;
        border-radius: 12px;
        padding: 15px;
        margin-bottom: 20px;
        text-align: center;
    }
    
    .suspended-alert i {
        color: #dc2626;
        font-size: 1.5rem;
        margin-bottom: 8px;
    }
    
    .suspended-alert p {
        margin: 0;
        color: #991b1b;
        font-weight: 600;
    }
    
    .elderly-badge {
        background: #e0e7ff;
        color: #4f46e5;
        padding: 6px 14px;
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }
</style>

<div class="details-page">
    <a asp-action="Complaints" class="back-link">
        <i class="fas fa-arrow-left"></i>
        Back to Complaints
    </a>
    
    @if (TempData["ComplaintMessage"] != null)
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle me-2"></i>@TempData["ComplaintMessage"]
        </div>
    }
    
    @if (TempData["ComplaintError"] != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ComplaintError"]
        </div>
    }
    
    <div class="details-grid">
        <!-- Main Content -->
        <div class="main-card">
            <div class="card-header">
                <h1>@categoryName</h1>
                <div class="header-meta">
                    <span class="complaint-id">#@c.Id[^6..]</span>
                    <span><i class="fas fa-user me-1"></i>@c.ComplainantName</span>
                    <span><i class="fas fa-envelope me-1"></i>@c.ComplainantEmail</span>
                    @if (c.IsElderly)
                    {
                        <span class="elderly-badge"><i class="fas fa-user-clock"></i>Elderly User</span>
                    }
                </div>
            </div>
            
            <div class="card-body">
                <!-- Category Info -->
                <div class="info-section">
                    <div class="section-title">
                        <i class="fas fa-folder"></i>
                        Category Information
                    </div>
                    <div class="info-grid">
                        <div class="info-item">
                            <label>Category</label>
                            <span>@categoryName</span>
                        </div>
                        @if (!string.IsNullOrEmpty(c.SubCategory))
                        {
                            <div class="info-item">
                                <label>Issue Type</label>
                                <span>@c.SubCategory</span>
                            </div>
                        }
                    </div>
                </div>
                
                <!-- Target Info -->
                @if (!string.IsNullOrEmpty(c.ServiceProviderName) || !string.IsNullOrEmpty(c.VendorName))
                {
                    <div class="info-section">
                        <div class="section-title">
                            <i class="fas fa-user-tag"></i>
                            @(c.Category == "ServiceProviderIssue" ? "Service Provider Details" : "Vendor Details")
                        </div>
                        <div class="info-grid">
                            @if (!string.IsNullOrEmpty(c.ServiceProviderName))
                            {
                                <div class="info-item">
                                    <label>Service Provider</label>
                                    <span>@c.ServiceProviderName</span>
                                </div>
                                @if (!string.IsNullOrEmpty(c.BookingServiceName))
                                {
                                    <div class="info-item">
                                        <label>Service</label>
                                        <span>@c.BookingServiceName</span>
                                    </div>
                                }
                            }
                            @if (!string.IsNullOrEmpty(c.VendorName))
                            {
                                <div class="info-item">
                                    <label>Vendor</label>
                                    <span>@c.VendorName</span>
                                </div>
                                @if (!string.IsNullOrEmpty(c.OrderItemName))
                                {
                                    <div class="info-item">
                                        <label>Product</label>
                                        <span>@c.OrderItemName</span>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                }
                
                <!-- Description -->
                <div class="info-section">
                    <div class="section-title">
                        <i class="fas fa-align-left"></i>
                        Description
                    </div>
                    <div class="description-box">
                        @c.Description
                    </div>
                </div>
                
                <!-- Evidence -->
                @if (c.EvidenceFiles?.Count > 0)
                {
                    <div class="info-section">
                        <div class="section-title">
                            <i class="fas fa-paperclip"></i>
                            Evidence Files
                        </div>
                        <div class="evidence-grid">
                            @foreach (var file in c.EvidenceFiles)
                            {
                                <a href="@file" target="_blank" class="evidence-item">
                                    <i class="fas fa-file"></i>
                                    @System.IO.Path.GetFileName(file)
                                </a>
                            }
                        </div>
                    </div>
                }
                
                <!-- Submission Info -->
                <div class="info-section">
                    <div class="section-title">
                        <i class="fas fa-info-circle"></i>
                        Submission Details
                    </div>
                    <div class="info-grid">
                        <div class="info-item">
                            <label>Submitted On</label>
                            <span>@c.CreatedAt.ToLocalTime().ToString("dd MMM yyyy, h:mm tt")</span>
                        </div>
                        <div class="info-item">
                            <label>Last Updated</label>
                            <span>@c.UpdatedAt.ToLocalTime().ToString("dd MMM yyyy, h:mm tt")</span>
                        </div>
                        @if (!string.IsNullOrEmpty(c.ComplainantPhone))
                        {
                            <div class="info-item">
                                <label>Contact Phone</label>
                                <span>@c.ComplainantPhone</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(c.AssignedToName))
                        {
                            <div class="info-item">
                                <label>Assigned To</label>
                                <span>@c.AssignedToName</span>
                            </div>
                        }
                    </div>
                </div>
                
                <!-- Status History -->
                @if (c.StatusHistory?.Count > 0)
                {
                    <div class="timeline-section">
                        <div class="section-title">
                            <i class="fas fa-history"></i>
                            Status History
                        </div>
                        <div class="timeline">
                            @foreach (var history in c.StatusHistory.OrderByDescending(h => h.ChangedAt))
                            {
                                <div class="timeline-item">
                                    <div class="timeline-dot"></div>
                                    <div class="timeline-content">
                                        <div class="timeline-status">@history.Status</div>
                                        @if (!string.IsNullOrEmpty(history.Note))
                                        {
                                            <div class="timeline-note">@history.Note</div>
                                        }
                                        <div class="timeline-meta">
                                            @history.ChangedAt.ToLocalTime().ToString("dd MMM yyyy, h:mm tt")
                                            @if (!string.IsNullOrEmpty(history.ChangedBy))
                                            {
                                                <span>â€¢ by @history.ChangedBy</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
        
        <!-- Sidebar Actions -->
        <div>
            <div class="sidebar-card">
                <div class="sidebar-title">
                    <i class="fas fa-cogs"></i>
                    Actions
                </div>
                
                <!-- Current Status -->
                <div class="status-display">
                    <div class="status-badge-large status-@c.Status.ToLower()">
                        @(c.Status switch
                        {
                            "Pending" => "â³ Pending",
                            "InProgress" => "ðŸ”„ In Progress",
                            "Resolved" => "âœ… Resolved",
                            "Rejected" => "âŒ Rejected",
                            _ => c.Status
                        })
                    </div>
                </div>
                
                <div class="priority-display">
                    <span class="priority-badge-large priority-@c.Priority.ToLower()">
                        @c.Priority Priority
                    </span>
                </div>
                
                @if (c.TargetSuspended)
                {
                    <div class="suspended-alert">
                        <i class="fas fa-ban d-block"></i>
                        <p>Target is Suspended</p>
                    </div>
                }
                
                @if (c.Status != "Resolved" && c.Status != "Rejected")
                {
                    <!-- Resolve -->
                    <div class="action-section">
                        <div class="action-title">Resolve Complaint</div>
                        <form asp-action="ResolveComplaint" method="post">
                            <input type="hidden" name="id" value="@c.Id" />
                            <textarea name="resolution" class="form-control" rows="3" placeholder="Enter resolution details..." required></textarea>
                            <button type="submit" class="btn-action btn-resolve">
                                <i class="fas fa-check-circle"></i>
                                Mark as Resolved
                            </button>
                        </form>
                    </div>
                    
                    <!-- Reject -->
                    <div class="action-section">
                        <div class="action-title">Reject Complaint</div>
                        <form asp-action="RejectComplaint" method="post">
                            <input type="hidden" name="id" value="@c.Id" />
                            <textarea name="rejectionReason" class="form-control" rows="2" placeholder="Enter rejection reason..." required></textarea>
                            <button type="submit" class="btn-action btn-reject">
                                <i class="fas fa-times-circle"></i>
                                Reject Complaint
                            </button>
                        </form>
                    </div>
                    
                    <!-- Assign -->
                    <div class="action-section">
                        <div class="action-title">Assign to Admin</div>
                        <form asp-action="AssignComplaint" method="post">
                            <input type="hidden" name="id" value="@c.Id" />
                            <select name="assignedTo" class="form-select" required>
                                <option value="">Select admin...</option>
                                @foreach (var admin in Model.AdminUsers)
                                {
                                    if (c.AssignedTo == admin.Id.ToString())
                                    {
                                        <option value="@admin.Id" selected>@admin.FullName (@admin.Email)</option>
                                    }
                                    else
                                    {
                                        <option value="@admin.Id">@admin.FullName (@admin.Email)</option>
                                    }
                                }
                            </select>
                            <button type="submit" class="btn-action btn-assign">
                                <i class="fas fa-user-check"></i>
                                Assign
                            </button>
                        </form>
                    </div>
                    
                    <!-- Escalate -->
                    <div class="action-section">
                        <div class="action-title">Escalate Priority</div>
                        <form asp-action="EscalateComplaint" method="post">
                            <input type="hidden" name="id" value="@c.Id" />
                            <select name="priority" class="form-select" required>
                                @if (c.Priority == "Normal") { <option value="Normal" selected>Normal</option> } else { <option value="Normal">Normal</option> }
                                @if (c.Priority == "High") { <option value="High" selected>High</option> } else { <option value="High">High</option> }
                                @if (c.Priority == "Critical") { <option value="Critical" selected>Critical</option> } else { <option value="Critical">Critical</option> }
                            </select>
                            <input type="text" name="note" class="form-control" placeholder="Escalation note (optional)" />
                            <button type="submit" class="btn-action btn-escalate">
                                <i class="fas fa-arrow-up"></i>
                                Update Priority
                            </button>
                        </form>
                    </div>
                    
                    <!-- Suspend/Unsuspend Target -->
                    @if (c.ServiceProviderId.HasValue || c.VendorId.HasValue)
                    {
                        <div class="action-section">
                            <div class="action-title">
                                @(c.Category == "ServiceProviderIssue" ? "Service Provider" : "Vendor") Suspension
                            </div>
                            @if (c.TargetSuspended)
                            {
                                <form asp-action="UnsuspendComplaintTarget" method="post">
                                    <input type="hidden" name="id" value="@c.Id" />
                                    <button type="submit" class="btn-action btn-unsuspend">
                                        <i class="fas fa-user-check"></i>
                                        Lift Suspension
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-action="SuspendComplaintTarget" method="post">
                                    <input type="hidden" name="id" value="@c.Id" />
                                    <textarea name="reason" class="form-control" rows="2" placeholder="Suspension reason..." required></textarea>
                                    <button type="submit" class="btn-action btn-suspend">
                                        <i class="fas fa-ban"></i>
                                        Suspend @(c.Category == "ServiceProviderIssue" ? "Provider" : "Vendor")
                                    </button>
                                </form>
                            }
                        </div>
                    }
                }
                else
                {
                    <!-- Show resolution/rejection info -->
                    @if (c.Status == "Resolved" && !string.IsNullOrEmpty(c.Resolution))
                    {
                        <div class="action-section">
                            <div class="action-title">Resolution</div>
                            <div class="description-box" style="background: #ecfdf5; border: 1px solid #10b981;">
                                @c.Resolution
                                <div class="mt-2 text-muted small">
                                    Resolved on @c.ResolvedAt?.ToLocalTime().ToString("dd MMM yyyy, h:mm tt")
                                </div>
                            </div>
                        </div>
                    }
                    
                    @if (c.Status == "Rejected" && !string.IsNullOrEmpty(c.RejectionReason))
                    {
                        <div class="action-section">
                            <div class="action-title">Rejection Reason</div>
                            <div class="description-box" style="background: #fef2f2; border: 1px solid #f87171;">
                                @c.RejectionReason
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
