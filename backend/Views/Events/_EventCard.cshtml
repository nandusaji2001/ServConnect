@model ServConnect.Models.Event

<div class="event-card">
    <div class="event-image">
        @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
        {
            <img src="@Model.CoverImageUrl" alt="@Model.Title" />
        }
        else
        {
            <i class="fas fa-calendar-day placeholder"></i>
        }
        @if (Model.IsFeatured)
        {
            <span class="event-badge badge-featured"><i class="fas fa-star me-1"></i>Featured</span>
        }
        else if (Model.IsFreeEvent)
        {
            <span class="event-badge badge-free">Free</span>
        }
        else
        {
            <span class="event-badge badge-paid">₹@Model.TicketPrice</span>
        }
    </div>
    <div class="event-content">
        <div class="event-category">@Model.Category</div>
        <h3 class="event-title">@Model.Title</h3>
        <div class="event-meta">
            <div class="event-meta-item">
                <i class="fas fa-calendar"></i>
                <span>@Model.StartDateTime.ToLocalTime().ToString("ddd, MMM dd, yyyy")</span>
            </div>
            <div class="event-meta-item">
                <i class="fas fa-clock"></i>
                <span>@Model.StartDateTime.ToLocalTime().ToString("hh:mm tt")</span>
            </div>
            <div class="event-meta-item">
                <i class="fas fa-map-marker-alt"></i>
                <span>@Model.Venue</span>
            </div>
        </div>
        <div class="event-footer">
            <div>
                @if (Model.IsFreeEvent)
                {
                    <span class="event-price">Free Entry</span>
                }
                else
                {
                    <span class="event-price">₹@Model.TicketPrice</span>
                }
                <div class="event-seats @(Model.RemainingSeats < 10 ? "low" : "")">
                    @if (Model.IsSoldOut)
                    {
                        <span class="text-danger"><i class="fas fa-times-circle"></i> Sold Out</span>
                    }
                    else
                    {
                        <span>@Model.RemainingSeats seats left</span>
                    }
                </div>
            </div>
            <a href="@Url.Action("Details", "Events", new { id = Model.Id })" class="btn-view">
                View <i class="fas fa-arrow-right ms-1"></i>
            </a>
        </div>
    </div>
</div>
