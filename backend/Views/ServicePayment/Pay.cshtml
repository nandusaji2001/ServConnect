@{
    ViewData["Title"] = "Service Publication Payment";
    var payment = ViewBag.Payment as ServConnect.Models.ServicePayment;
    var razorpayKey = ViewBag.RazorpayKey as string;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0"><i class="fas fa-credit-card me-2"></i>Service Publication Payment</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Payment Details</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Service:</strong></td>
                                    <td>@payment?.ServiceName</td>
                                </tr>
                                <tr>
                                    <td><strong>Plan:</strong></td>
                                    <td>@payment?.PlanName</td>
                                </tr>
                                <tr>
                                    <td><strong>Duration:</strong></td>
                                    <td>@payment?.DurationInMonths month(s)</td>
                                </tr>
                                <tr>
                                    <td><strong>Amount:</strong></td>
                                    <td><span class="h5 text-success">₹@payment?.AmountInRupees</span></td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <div class="alert alert-info">
                                <h6><i class="fas fa-info-circle me-2"></i>What happens after payment?</h6>
                                <ul class="mb-0">
                                    <li>Your service will be published immediately</li>
                                    <li>Service will be visible to customers</li>
                                    <li>You can start receiving bookings</li>
                                    <li>Service expires after @payment?.DurationInMonths month(s)</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <button id="payBtn" class="btn btn-success btn-lg">
                            <i class="fas fa-lock me-2"></i>Pay ₹@payment?.AmountInRupees Securely
                        </button>
                        <div class="mt-2">
                            <small class="text-muted">
                                <i class="fas fa-shield-alt me-1"></i>
                                Secured by Razorpay
                            </small>
                        </div>
                    </div>

                    <div id="paymentStatus" class="mt-3" style="display: none;">
                        <div class="alert alert-info">
                            <i class="fas fa-spinner fa-spin me-2"></i>Processing payment...
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <a href="/Services/Manage" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Services
                </a>
            </div>
        </div>
    </div>
</div>

<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
    document.getElementById('payBtn').addEventListener('click', function() {
        const paymentId = '@payment?.Id';
        const amount = @payment?.AmountInPaise;
        
        const options = {
            key: '@razorpayKey',
            amount: amount,
            currency: 'INR',
            name: 'ServConnect',
            description: 'Service Publication - @payment?.ServiceName (@payment?.PlanName)',
            handler: function(response) {
                document.getElementById('paymentStatus').style.display = 'block';
                document.getElementById('payBtn').disabled = true;
                
                // Verify payment
                fetch('/api/service-payment/verify', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    credentials: 'same-origin',
                    body: JSON.stringify({
                        paymentId: paymentId,
                        razorpayOrderId: response.razorpay_order_id || '',
                        razorpayPaymentId: response.razorpay_payment_id,
                        razorpaySignature: response.razorpay_signature || ''
                    })
                })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        document.getElementById('paymentStatus').innerHTML = 
                            '<div class="alert alert-success"><i class="fas fa-check-circle me-2"></i>Payment successful! Activating your service...</div>';
                        
                        // Activate the service
                        const serviceId = sessionStorage.getItem('pendingServiceId');
                        if(serviceId) {
                            return fetch('/api/service-payment/activate', {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                credentials: 'same-origin',
                                body: JSON.stringify({
                                    paymentId: paymentId,
                                    providerServiceId: serviceId
                                })
                            });
                        }
                        return Promise.resolve({ ok: true });
                    } else {
                        throw new Error(data.message || 'Payment verification failed');
                    }
                })
                .then(activationRes => {
                    if(activationRes && activationRes.ok) {
                        document.getElementById('paymentStatus').innerHTML = 
                            '<div class="alert alert-success"><i class="fas fa-check-circle me-2"></i>Payment successful! Service activated. Redirecting...</div>';
                        
                        setTimeout(() => {
                            window.location.href = '/Services/Manage?payment=success';
                        }, 2000);
                    } else {
                        throw new Error('Service activation failed');
                    }
                })
                .catch(err => {
                    document.getElementById('paymentStatus').innerHTML = 
                        '<div class="alert alert-danger"><i class="fas fa-exclamation-triangle me-2"></i>Payment verification failed: ' + err.message + '</div>';
                    document.getElementById('payBtn').disabled = false;
                });
            },
            prefill: {
                name: 'Service Provider',
                email: '',
                contact: ''
            },
            theme: {
                color: '#0d6efd'
            },
            modal: {
                ondismiss: function() {
                    document.getElementById('paymentStatus').style.display = 'none';
                    document.getElementById('payBtn').disabled = false;
                }
            }
        };
        
        const rzp = new Razorpay(options);
        rzp.open();
    });
</script>

@Html.AntiForgeryToken()
