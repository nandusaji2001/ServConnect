@{
    ViewData["Title"] = "Explore Services - ServConnect";
}

<style>
    /* Base styles */
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #e4e8ec 100%);
        min-height: 100vh;
    }

    .explore-container {
        padding: 40px 20px;
        max-width: 1400px;
        margin: 0 auto;
    }

    /* Hero header with animation */
    .explore-header {
        text-align: center;
        margin-bottom: 60px;
        animation: fadeInDown 0.8s ease-out;
    }

    .explore-header h1 {
        font-size: 3.5rem;
        font-weight: 800;
        background: linear-gradient(135deg, #10B981 0%, #059669 50%, #047857 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 16px;
        text-shadow: 0 4px 30px rgba(16, 185, 129, 0.2);
    }

    .explore-header p {
        font-size: 1.25rem;
        color: #6b7280;
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.8;
    }

    /* Animated search bar */
    .explore-search {
        max-width: 700px;
        margin: 0 auto 50px;
        animation: fadeInUp 0.8s ease-out 0.2s both;
    }

    .search-wrapper {
        position: relative;
        display: flex;
        gap: 12px;
        background: white;
        padding: 10px;
        border-radius: 60px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .search-wrapper:focus-within {
        box-shadow: 0 25px 80px rgba(16, 185, 129, 0.15);
        transform: translateY(-2px);
    }

    .search-wrapper input {
        flex: 1;
        border: none;
        padding: 18px 28px;
        font-size: 1.1rem;
        border-radius: 50px;
        background: transparent;
        outline: none;
    }

    .search-wrapper button {
        background: linear-gradient(135deg, #10B981 0%, #059669 100%);
        border: none;
        padding: 18px 36px;
        border-radius: 50px;
        color: white;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
    }

    .search-wrapper button:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 30px rgba(16, 185, 129, 0.4);
    }

    /* Category filter pills */
    .category-filters {
        display: flex;
        justify-content: center;
        gap: 12px;
        flex-wrap: wrap;
        margin-bottom: 50px;
        animation: fadeInUp 0.8s ease-out 0.4s both;
    }

    .filter-pill {
        padding: 12px 24px;
        border-radius: 50px;
        border: 2px solid #e5e7eb;
        background: white;
        color: #4b5563;
        font-weight: 500;
        font-size: 0.95rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .filter-pill:hover, .filter-pill.active {
        background: linear-gradient(135deg, #10B981 0%, #059669 100%);
        border-color: transparent;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(16, 185, 129, 0.3);
    }

    /* Services grid */
    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 30px;
        animation: fadeInUp 0.8s ease-out 0.6s both;
    }

    /* Modern service card */
    .service-card {
        background: white;
        border-radius: 24px;
        overflow: hidden;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        cursor: pointer;
        position: relative;
    }

    .service-card:hover {
        transform: translateY(-12px) scale(1.02);
        box-shadow: 0 30px 60px rgba(0, 0, 0, 0.15);
    }

    .service-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #10B981, #3B82F6, #EC4899, #F59E0B);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .service-card:hover::before {
        opacity: 1;
    }

    .card-image {
        height: 200px;
        background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .service-card:hover .card-image img {
        transform: scale(1.1);
    }

    .card-image .icon-placeholder {
        font-size: 4rem;
        color: #10B981;
        opacity: 0.3;
    }

    .card-badge {
        position: absolute;
        top: 16px;
        right: 16px;
        background: rgba(16, 185, 129, 0.9);
        color: white;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        backdrop-filter: blur(10px);
    }

    .card-content {
        padding: 28px;
    }

    .card-category {
        color: #10B981;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 8px;
    }

    .card-title {
        font-size: 1.4rem;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 12px;
        line-height: 1.3;
    }

    .card-description {
        color: #6b7280;
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 20px;
    }

    .card-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 20px;
        border-top: 1px solid #f3f4f6;
    }

    .card-rating {
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .card-rating i {
        color: #F59E0B;
    }

    .card-rating span {
        font-weight: 600;
        color: #374151;
    }

    .card-price {
        background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 700;
        color: #059669;
    }

    .card-btn {
        width: 100%;
        background: linear-gradient(135deg, #10B981 0%, #059669 100%);
        border: none;
        padding: 16px;
        border-radius: 14px;
        color: white;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        margin-top: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        transition: all 0.3s ease;
    }

    .card-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(16, 185, 129, 0.4);
    }

    /* Loading animation */
    .loading-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 300px;
    }

    .loading-spinner {
        width: 60px;
        height: 60px;
        border: 4px solid #e5e7eb;
        border-top-color: #10B981;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    /* Empty state */
    .empty-state {
        text-align: center;
        padding: 80px 20px;
        animation: fadeIn 0.6s ease;
    }

    .empty-state i {
        font-size: 5rem;
        color: #d1d5db;
        margin-bottom: 24px;
    }

    .empty-state h3 {
        font-size: 1.5rem;
        color: #4b5563;
        margin-bottom: 12px;
    }

    .empty-state p {
        color: #9ca3af;
        max-width: 400px;
        margin: 0 auto;
    }

    /* Back button */
    .back-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background: white;
        color: #374151;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 500;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        margin-bottom: 30px;
    }

    .back-btn:hover {
        transform: translateX(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
        color: #10B981;
    }

    /* Featured Module - House Rentals */
    .featured-module {
        margin-bottom: 50px;
        animation: fadeInUp 0.8s ease-out 0.3s both;
    }

    .module-card {
        display: flex;
        align-items: center;
        gap: 28px;
        padding: 32px 40px;
        background: white;
        border-radius: 24px;
        text-decoration: none;
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.1);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        position: relative;
        overflow: hidden;
    }

    .module-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(99, 102, 241, 0.03) 0%, rgba(139, 92, 246, 0.05) 100%);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .module-card:hover {
        transform: translateY(-8px) scale(1.01);
        box-shadow: 0 30px 70px rgba(99, 102, 241, 0.2);
    }

    .module-card:hover::before {
        opacity: 1;
    }

    .rental-card .module-icon {
        width: 90px;
        height: 90px;
        background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
        border-radius: 22px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        color: white;
        box-shadow: 0 15px 40px rgba(99, 102, 241, 0.35);
        transition: all 0.3s ease;
        flex-shrink: 0;
    }

    .module-card:hover .module-icon {
        transform: scale(1.1) rotate(-5deg);
    }

    .module-content {
        flex: 1;
    }

    .module-content h3 {
        font-size: 1.75rem;
        font-weight: 800;
        color: #1f2937;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .module-content h3::after {
        content: 'New';
        font-size: 0.7rem;
        padding: 4px 10px;
        background: linear-gradient(135deg, #10B981 0%, #059669 100%);
        color: white;
        border-radius: 50px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .module-content p {
        color: #6b7280;
        font-size: 1.1rem;
        margin-bottom: 16px;
        line-height: 1.6;
    }

    .module-features {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
    }

    .module-features span {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 0.9rem;
        color: #6366F1;
        font-weight: 500;
    }

    .module-features span i {
        font-size: 0.8rem;
    }

    .module-arrow {
        width: 56px;
        height: 56px;
        background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        color: #6366F1;
        transition: all 0.3s ease;
        flex-shrink: 0;
    }

    .module-card:hover .module-arrow {
        background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
        color: white;
        transform: translateX(5px);
    }

    @@media (max-width: 768px) {
        .module-card {
            flex-direction: column;
            text-align: center;
            padding: 32px 24px;
        }

        .module-content h3 {
            justify-content: center;
        }

        .module-features {
            justify-content: center;
        }

        .module-arrow {
            display: none;
        }
    }

    /* Animations */
    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

    /* Featured services section */
    .featured-section {
        margin-bottom: 60px;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .section-header h2 {
        font-size: 2rem;
        font-weight: 700;
        color: #1f2937;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .section-header h2 i {
        color: #10B981;
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .explore-header h1 {
            font-size: 2.5rem;
        }

        .explore-header p {
            font-size: 1.1rem;
        }

        .search-wrapper {
            flex-direction: column;
            border-radius: 24px;
            padding: 16px;
        }

        .search-wrapper input {
            padding: 16px 20px;
        }

        .search-wrapper button {
            width: 100%;
            justify-content: center;
        }

        .services-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .category-filters {
            gap: 8px;
        }

        .filter-pill {
            padding: 10px 18px;
            font-size: 0.85rem;
        }
    }

    @@media (max-width: 480px) {
        .explore-container {
            padding: 20px 16px;
        }

        .explore-header h1 {
            font-size: 2rem;
        }

        .card-content {
            padding: 20px;
        }
    }
</style>

<div class="explore-container">
    <a href="/" class="back-btn">
        <i class="fas fa-arrow-left"></i> Back to Home
    </a>

    <div class="explore-header">
        <h1>Explore All Services</h1>
        <p>Discover amazing services from trusted providers in your area. Find exactly what you need!</p>
    </div>

    <div class="explore-search">
        <div class="search-wrapper">
            <input type="text" id="searchInput" placeholder="Search for services..." />
            <button id="searchBtn">
                <i class="fas fa-search"></i>
                Search
            </button>
        </div>
    </div>

    <!-- Featured Module - House Rentals -->
    <div class="featured-module">
        <a href="/Rental" class="module-card rental-card">
            <div class="module-icon">
                <i class="fas fa-building"></i>
            </div>
            <div class="module-content">
                <h3>House Rentals</h3>
                <p>Find your perfect home! Browse 1BHK, 2BHK, PG rooms & more with verified listings</p>
                <div class="module-features">
                    <span><i class="fas fa-check"></i> Verified Properties</span>
                    <span><i class="fas fa-check"></i> Direct Owner Contact</span>
                    <span><i class="fas fa-check"></i> Map Location</span>
                </div>
            </div>
            <div class="module-arrow">
                <i class="fas fa-arrow-right"></i>
            </div>
        </a>
    </div>

    <div class="category-filters">
        <button class="filter-pill active" data-category="all">All Services</button>
        <button class="filter-pill" data-category="home">Home Services</button>
        <button class="filter-pill" data-category="tech">Tech & IT</button>
        <button class="filter-pill" data-category="beauty">Beauty & Wellness</button>
        <button class="filter-pill" data-category="business">Business</button>
        <button class="filter-pill" data-category="health">Health & Care</button>
    </div>

    <div id="servicesContainer" class="services-grid">
        <div class="loading-container">
            <div class="loading-spinner"></div>
        </div>
    </div>
</div>

<script>
    let allServices = [];
    let currentCategory = 'all';

    // Category icon mapping
    const categoryIcons = {
        'home': 'fas fa-home',
        'tech': 'fas fa-laptop-code',
        'beauty': 'fas fa-spa',
        'business': 'fas fa-briefcase',
        'health': 'fas fa-heartbeat',
        'default': 'fas fa-concierge-bell'
    };

    // Category keywords for filtering
    const categoryKeywords = {
        'home': ['plumber', 'electrician', 'carpenter', 'cleaner', 'painting', 'home', 'repair', 'maintenance', 'ac', 'appliance'],
        'tech': ['tech', 'computer', 'laptop', 'software', 'web', 'mobile', 'it', 'network', 'cctv', 'camera'],
        'beauty': ['beauty', 'salon', 'spa', 'hair', 'makeup', 'facial', 'massage', 'wellness', 'grooming'],
        'business': ['business', 'consulting', 'legal', 'finance', 'accounting', 'marketing', 'photography', 'event'],
        'health': ['health', 'doctor', 'nurse', 'care', 'elder', 'medical', 'therapy', 'physio', 'dental']
    };

    // Get category from service name
    function getServiceCategory(serviceName) {
        const name = serviceName.toLowerCase();
        for (const [category, keywords] of Object.entries(categoryKeywords)) {
            if (keywords.some(keyword => name.includes(keyword))) {
                return category;
            }
        }
        return 'default';
    }

    // Get icon for category
    function getCategoryIcon(category) {
        return categoryIcons[category] || categoryIcons['default'];
    }

    // Load services from API
    async function loadServices() {
        const container = document.getElementById('servicesContainer');
        
        try {
            const response = await fetch('/api/services/with-images');
            if (!response.ok) throw new Error('Failed to fetch services');
            
            const data = await response.json();
            allServices = data.map(item => ({
                id: item.serviceId || item.id,
                name: item.serviceName || item.name,
                description: item.description || 'Professional service available for booking',
                imageUrl: item.imageUrl || null,
                basePrice: item.basePrice || 0,
                rating: item.rating || (Math.random() * 2 + 3).toFixed(1),
                category: getServiceCategory(item.serviceName || item.name || '')
            }));
            
            renderServices(allServices);
        } catch (error) {
            console.error('Error loading services:', error);
            container.innerHTML = `
                <div class="empty-state" style="grid-column: 1 / -1;">
                    <i class="fas fa-exclamation-circle"></i>
                    <h3>Oops! Something went wrong</h3>
                    <p>We couldn't load the services. Please try again later.</p>
                </div>
            `;
        }
    }

    // Render services to the grid
    function renderServices(services) {
        const container = document.getElementById('servicesContainer');
        
        if (!services || services.length === 0) {
            container.innerHTML = `
                <div class="empty-state" style="grid-column: 1 / -1;">
                    <i class="fas fa-search"></i>
                    <h3>No services found</h3>
                    <p>Try adjusting your search or filter criteria.</p>
                </div>
            `;
            return;
        }

        container.innerHTML = services.map((service, index) => {
            const category = service.category || 'default';
            const categoryLabel = category.charAt(0).toUpperCase() + category.slice(1);
            const icon = getCategoryIcon(category);
            const imageHtml = service.imageUrl 
                ? `<img src="${service.imageUrl}" alt="${service.name}" onerror="this.parentElement.innerHTML='<i class=\\'icon-placeholder ${icon}\\'></i>';" loading="lazy">`
                : `<i class="icon-placeholder ${icon}"></i>`;
            
            const priceDisplay = service.basePrice > 0 
                ? `â‚¹${service.basePrice.toLocaleString()}`
                : 'Get Quote';

            return `
                <div class="service-card" style="animation-delay: ${index * 0.1}s" onclick="bookService('${service.name}')">
                    <div class="card-image">
                        ${imageHtml}
                        <span class="card-badge">${categoryLabel}</span>
                    </div>
                    <div class="card-content">
                        <div class="card-category">${categoryLabel} Services</div>
                        <h3 class="card-title">${service.name}</h3>
                        <p class="card-description">${service.description}</p>
                        <div class="card-meta">
                            <div class="card-rating">
                                <i class="fas fa-star"></i>
                                <span>${service.rating}</span>
                            </div>
                            <div class="card-price">${priceDisplay}</div>
                        </div>
                        <button class="card-btn">
                            <i class="fas fa-calendar-check"></i>
                            Book Now
                        </button>
                    </div>
                </div>
            `;
        }).join('');
    }

    // Filter services by category
    function filterByCategory(category) {
        currentCategory = category;
        
        // Update active pill
        document.querySelectorAll('.filter-pill').forEach(pill => {
            pill.classList.toggle('active', pill.dataset.category === category);
        });

        // Filter services
        let filtered = allServices;
        if (category !== 'all') {
            filtered = allServices.filter(service => service.category === category);
        }

        // Apply search filter if exists
        const searchQuery = document.getElementById('searchInput').value.trim().toLowerCase();
        if (searchQuery) {
            filtered = filtered.filter(service => 
                service.name.toLowerCase().includes(searchQuery) ||
                service.description.toLowerCase().includes(searchQuery)
            );
        }

        renderServices(filtered);
    }

    // Search services
    function searchServices() {
        const query = document.getElementById('searchInput').value.trim().toLowerCase();
        
        let filtered = allServices;
        
        // Apply category filter
        if (currentCategory !== 'all') {
            filtered = filtered.filter(service => service.category === currentCategory);
        }
        
        // Apply search filter
        if (query) {
            filtered = filtered.filter(service => 
                service.name.toLowerCase().includes(query) ||
                service.description.toLowerCase().includes(query)
            );
        }

        renderServices(filtered);
    }

    // Book service - redirect to browse with service name
    function bookService(serviceName) {
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <text>
            window.location.href = `/Services/Browse?q=${encodeURIComponent(serviceName)}`;
            </text>
        }
        else
        {
            <text>
            window.location.href = `/Account/Login?returnUrl=${encodeURIComponent('/Services/Browse?q=' + serviceName)}`;
            </text>
        }
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
        loadServices();

        // Search button click
        document.getElementById('searchBtn').addEventListener('click', searchServices);

        // Search on Enter
        document.getElementById('searchInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') searchServices();
        });

        // Filter pills click
        document.querySelectorAll('.filter-pill').forEach(pill => {
            pill.addEventListener('click', () => {
                filterByCategory(pill.dataset.category);
            });
        });
    });
</script>
