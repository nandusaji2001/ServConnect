@{
    ViewData["Title"] = "Explore Services - ServConnect";
}

<style>
    /* CSS Variables - Modern Design System */
    :root {
        --primary: #10B981;
        --primary-dark: #059669;
        --primary-light: #34D399;
        --accent: #3B82F6;
        --accent-purple: #8B5CF6;
        --accent-orange: #F59E0B;
        --accent-pink: #EC4899;
        --bg-light: #ffffff;
        --bg-section: #f8fafc;
        --bg-card: #ffffff;
        --bg-card-hover: #f9fafb;
        --text-primary: #1f2937;
        --text-secondary: #6b7280;
        --text-muted: #9ca3af;
        --border-color: #e5e7eb;
        --gradient-primary: linear-gradient(135deg, #10B981 0%, #059669 100%);
        --gradient-blue: linear-gradient(135deg, #3B82F6 0%, #1D4ED8 100%);
        --gradient-purple: linear-gradient(135deg, #8B5CF6 0%, #7C3AED 100%);
        --gradient-orange: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
        --gradient-pink: linear-gradient(135deg, #EC4899 0%, #DB2777 100%);
        --shadow-sm: 0 4px 6px rgba(0, 0, 0, 0.05);
        --shadow-md: 0 10px 25px rgba(0, 0, 0, 0.1);
        --shadow-lg: 0 25px 50px rgba(0, 0, 0, 0.15);
        --shadow-glow: 0 10px 40px rgba(16, 185, 129, 0.3);
        --shadow-card: 0 4px 20px rgba(0, 0, 0, 0.08);
        --shadow-card-hover: 0 20px 40px rgba(0, 0, 0, 0.12);
    }

    /* Base styles */
    body {
        background: linear-gradient(180deg, #f0fdf4 0%, #ecfdf5 30%, #ffffff 100%);
        min-height: 100vh;
    }

    .explore-container {
        padding: 40px 20px 80px;
        max-width: 1400px;
        margin: 0 auto;
    }

    /* Hero header with animation */
    .explore-header {
        text-align: center;
        margin-bottom: 50px;
        animation: fadeInDown 0.8s ease-out;
    }

    .explore-header h1 {
        font-size: 3.5rem;
        font-weight: 800;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 16px;
        letter-spacing: -0.02em;
    }

    .explore-header p {
        font-size: 1.2rem;
        color: var(--text-secondary);
        max-width: 650px;
        margin: 0 auto;
        line-height: 1.8;
    }

    /* Feature Cards Grid - 3 columns */
    .feature-cards-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 24px;
        margin-bottom: 50px;
        animation: fadeInUp 0.8s ease-out 0.3s both;
    }

    /* Modern Feature Card */
    .feature-card {
        background: var(--bg-card);
        border-radius: 24px;
        padding: 0;
        text-decoration: none;
        box-shadow: var(--shadow-card);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        position: relative;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        border: 1px solid transparent;
    }

    .feature-card:hover {
        transform: translateY(-10px);
        box-shadow: var(--shadow-card-hover);
        border-color: var(--primary);
    }

    .feature-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--gradient-primary);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .feature-card:hover::before {
        opacity: 1;
    }

    /* Card Header with Gradient Background */
    .card-header-bg {
        height: 140px;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .card-header-bg::before {
        content: '';
        position: absolute;
        inset: 0;
        opacity: 0.1;
        background: radial-gradient(circle at 30% 30%, currentColor 0%, transparent 50%);
    }

    .card-header-bg.green { background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%); color: #10B981; }
    .card-header-bg.blue { background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%); color: #3B82F6; }
    .card-header-bg.purple { background: linear-gradient(135deg, #ede9fe 0%, #ddd6fe 100%); color: #8B5CF6; }
    .card-header-bg.orange { background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%); color: #F59E0B; }
    .card-header-bg.pink { background: linear-gradient(135deg, #fce7f3 0%, #fbcfe8 100%); color: #EC4899; }
    .card-header-bg.teal { background: linear-gradient(135deg, #ccfbf1 0%, #99f6e4 100%); color: #14B8A6; }

    .card-icon-wrapper {
        width: 80px;
        height: 80px;
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: white;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        transition: all 0.4s ease;
    }

    .feature-card:hover .card-icon-wrapper {
        transform: scale(1.1) rotate(-5deg);
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
    }

    .card-icon-wrapper i {
        font-size: 2rem;
        transition: transform 0.3s ease;
    }

    .feature-card:hover .card-icon-wrapper i {
        transform: scale(1.1);
    }

    /* Card Body */
    .card-body-content {
        padding: 24px;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .card-body-content h3 {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 8px;
    }

    .card-body-content p {
        color: var(--text-secondary);
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 16px;
        flex: 1;
    }

    /* Feature Tags */
    .feature-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-bottom: 20px;
    }

    .feature-tag {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 6px 12px;
        background: #f3f4f6;
        border-radius: 50px;
        font-size: 0.8rem;
        font-weight: 500;
        color: var(--text-secondary);
        transition: all 0.3s ease;
    }

    .feature-card:hover .feature-tag {
        background: #e5e7eb;
    }

    .feature-tag i {
        font-size: 0.7rem;
        color: var(--primary);
    }

    /* Card Action Button */
    .card-action {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding-top: 16px;
        border-top: 1px solid var(--border-color);
    }

    .card-action-text {
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--primary);
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .card-action-arrow {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--primary);
        transition: all 0.3s ease;
    }

    .feature-card:hover .card-action-arrow {
        background: var(--gradient-primary);
        color: white;
        transform: translateX(5px);
    }

    /* Local Directory - Featured Card */
    .featured-directory-card {
        grid-column: span 3;
        background: linear-gradient(135deg, #10B981 0%, #059669 50%, #047857 100%);
        border-radius: 24px;
        padding: 40px;
        display: flex;
        align-items: center;
        gap: 30px;
        text-decoration: none;
        box-shadow: var(--shadow-md);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        position: relative;
        overflow: hidden;
        margin-bottom: 10px;
    }

    .featured-directory-card::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -20%;
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, transparent 60%);
        pointer-events: none;
    }

    .featured-directory-card::after {
        content: '';
        position: absolute;
        bottom: -30%;
        left: -10%;
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 50%);
        pointer-events: none;
    }

    .featured-directory-card:hover {
        transform: translateY(-8px) scale(1.01);
        box-shadow: 0 30px 60px rgba(16, 185, 129, 0.35);
    }

    .featured-icon {
        width: 90px;
        height: 90px;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        color: white;
        flex-shrink: 0;
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .featured-directory-card:hover .featured-icon {
        transform: scale(1.1) rotate(5deg);
        background: rgba(255, 255, 255, 0.3);
    }

    .featured-content {
        flex: 1;
        position: relative;
        z-index: 1;
    }

    .featured-content h3 {
        font-size: 1.8rem;
        font-weight: 700;
        color: white;
        margin-bottom: 8px;
    }

    .featured-content p {
        color: rgba(255, 255, 255, 0.9);
        font-size: 1.05rem;
        line-height: 1.6;
        margin: 0;
    }

    .featured-arrow {
        width: 50px;
        height: 50px;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
        flex-shrink: 0;
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .featured-directory-card:hover .featured-arrow {
        background: white;
        color: var(--primary);
        transform: translateX(8px);
    }

    /* Back button */
    .back-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(12px);
        color: var(--text-primary);
        border-radius: 50px;
        text-decoration: none;
        font-weight: 500;
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--border-color);
        transition: all 0.3s ease;
        margin-bottom: 30px;
    }

    .back-btn:hover {
        transform: translateX(-5px);
        box-shadow: var(--shadow-md);
        color: var(--primary);
        border-color: var(--primary);
        text-decoration: none;
    }

    /* Animations */
    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    @@keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }

    /* Responsive design */
    @@media (max-width: 1024px) {
        .feature-cards-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .featured-directory-card {
            grid-column: span 2;
        }

        .services-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 768px) {
        .explore-header h1 {
            font-size: 2.5rem;
        }

        .explore-header p {
            font-size: 1rem;
        }

        .feature-cards-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .featured-directory-card {
            grid-column: span 1;
            flex-direction: column;
            text-align: center;
            padding: 30px 24px;
        }

        .featured-content h3 {
            font-size: 1.5rem;
        }

        .featured-arrow {
            display: none;
        }

        .services-grid {
            grid-template-columns: 1fr;
            gap: 16px;
        }
    }

    @@media (max-width: 480px) {
        .explore-container {
            padding: 20px 16px 60px;
        }

        .explore-header h1 {
            font-size: 2rem;
        }

        .card-body-content {
            padding: 20px;
        }

        .card-header-bg {
            height: 120px;
        }

        .card-icon-wrapper {
            width: 70px;
            height: 70px;
        }

        .card-icon-wrapper i {
            font-size: 1.75rem;
        }
    }
</style>

<div class="explore-container">
    <a href="/" class="back-btn">
        <i class="fas fa-arrow-left"></i> Back to Home
    </a>

    <div class="explore-header">
        <h1>Explore All Services</h1>
        <p>Discover amazing services from trusted providers in your area. Find exactly what you need!</p>
    </div>

    <!-- Feature Cards Grid -->
    <div class="feature-cards-grid">
        <!-- Featured Local Directory Banner -->
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <a href="/LocalDirectory/Discover" class="featured-directory-card">
                <div class="featured-icon">
                    <i class="fas fa-search-location"></i>
                </div>
                <div class="featured-content">
                    <h3>Search Local Services</h3>
                    <p>Find local businesses and services near you - restaurants, shops, doctors, healthcare and more</p>
                </div>
                <div class="featured-arrow">
                    <i class="fas fa-arrow-right"></i>
                </div>
            </a>
        }
        else
        {
            <a href="/Account/Login?returnUrl=/LocalDirectory/Discover" class="featured-directory-card">
                <div class="featured-icon">
                    <i class="fas fa-search-location"></i>
                </div>
                <div class="featured-content">
                    <h3>Search Local Services</h3>
                    <p>Find local businesses and services near you - restaurants, shops, doctors, healthcare and more</p>
                </div>
                <div class="featured-arrow">
                    <i class="fas fa-arrow-right"></i>
                </div>
            </a>
        }

        <!-- House Rentals Card -->
        <a href="/Rental" class="feature-card">
            <div class="card-header-bg green">
                <div class="card-icon-wrapper">
                    <i class="fas fa-building" style="color: #10B981;"></i>
                </div>
            </div>
            <div class="card-body-content">
                <h3>House Rentals</h3>
                <p>Find your perfect home! Browse 1BHK, 2BHK, PG rooms & more with verified listings</p>
                <div class="feature-tags">
                    <span class="feature-tag"><i class="fas fa-check-circle"></i> Verified</span>
                    <span class="feature-tag"><i class="fas fa-phone"></i> Direct Contact</span>
                    <span class="feature-tag"><i class="fas fa-map-marker-alt"></i> Map View</span>
                </div>
                <div class="card-action">
                    <span class="card-action-text">Explore Properties</span>
                    <div class="card-action-arrow">
                        <i class="fas fa-arrow-right"></i>
                    </div>
                </div>
            </div>
        </a>

        <!-- Local Events Card -->
        <a href="/Events" class="feature-card">
            <div class="card-header-bg purple">
                <div class="card-icon-wrapper">
                    <i class="fas fa-calendar-alt" style="color: #8B5CF6;"></i>
                </div>
            </div>
            <div class="card-body-content">
                <h3>Local Events</h3>
                <p>Discover & create local events! Music, sports, community gatherings & more</p>
                <div class="feature-tags">
                    <span class="feature-tag"><i class="fas fa-plus-circle"></i> Create Events</span>
                    <span class="feature-tag"><i class="fas fa-ticket-alt"></i> Book Tickets</span>
                    <span class="feature-tag"><i class="fas fa-calendar"></i> Calendar</span>
                </div>
                <div class="card-action">
                    <span class="card-action-text">Browse Events</span>
                    <div class="card-action-arrow">
                        <i class="fas fa-arrow-right"></i>
                    </div>
                </div>
            </div>
        </a>

        <!-- Community Card -->
        <a href="/Community" class="feature-card">
            <div class="card-header-bg blue">
                <div class="card-icon-wrapper">
                    <i class="fas fa-users" style="color: #3B82F6;"></i>
                </div>
            </div>
            <div class="card-body-content">
                <h3>Community</h3>
                <p>Connect with your neighbors! Share updates, find local recommendations & build connections</p>
                <div class="feature-tags">
                    <span class="feature-tag"><i class="fas fa-newspaper"></i> Updates</span>
                    <span class="feature-tag"><i class="fas fa-comments"></i> Messaging</span>
                    <span class="feature-tag"><i class="fas fa-share-alt"></i> Posts</span>
                </div>
                <div class="card-action">
                    <span class="card-action-text">Join Community</span>
                    <div class="card-action-arrow">
                        <i class="fas fa-arrow-right"></i>
                    </div>
                </div>
            </div>
        </a>

        <!-- Lost & Found Card -->
        <a href="/LostAndFound" class="feature-card">
            <div class="card-header-bg orange">
                <div class="card-icon-wrapper">
                    <i class="fas fa-search" style="color: #F59E0B;"></i>
                </div>
            </div>
            <div class="card-body-content">
                <h3>Lost & Found</h3>
                <p>Lost something? Found an item? Help reunite lost items with their owners</p>
                <div class="feature-tags">
                    <span class="feature-tag"><i class="fas fa-flag"></i> Report Items</span>
                    <span class="feature-tag"><i class="fas fa-hand-holding"></i> Claim</span>
                    <span class="feature-tag"><i class="fas fa-shield-alt"></i> Verified</span>
                </div>
                <div class="card-action">
                    <span class="card-action-text">View Items</span>
                    <div class="card-action-arrow">
                        <i class="fas fa-arrow-right"></i>
                    </div>
                </div>
            </div>
        </a>

        <!-- Mental Health & Wellbeing Card -->
        <a href="/MentalHealth" class="feature-card">
            <div class="card-header-bg pink">
                <div class="card-icon-wrapper">
                    <i class="fas fa-brain" style="color: #EC4899;"></i>
                </div>
            </div>
            <div class="card-body-content">
                <h3>Mental Health & Wellbeing</h3>
                <p>Take care of your mind! Access resources, counseling support & wellness tools</p>
                <div class="feature-tags">
                    <span class="feature-tag"><i class="fas fa-spa"></i> Wellness</span>
                    <span class="feature-tag"><i class="fas fa-hands-helping"></i> Support</span>
                    <span class="feature-tag"><i class="fas fa-book-medical"></i> Resources</span>
                </div>
                <div class="card-action">
                    <span class="card-action-text">Explore</span>
                    <div class="card-action-arrow">
                        <i class="fas fa-arrow-right"></i>
                    </div>
                </div>
            </div>
        </a>

        <!-- Daily Essentials Card -->
        <a href="/Home/DailyEssentials" class="feature-card">
            <div class="card-header-bg teal">
                <div class="card-icon-wrapper">
                    <i class="fas fa-box-open" style="color: #14B8A6;"></i>
                </div>
            </div>
            <div class="card-body-content">
                <h3>Daily Essentials</h3>
                <p>Subscribe to daily essentials like Milk, Newspaper, and Gas. Never run out!</p>
                <div class="feature-tags">
                    <span class="feature-tag"><i class="fas fa-glass-whiskey"></i> Milk</span>
                    <span class="feature-tag"><i class="fas fa-newspaper"></i> Newspaper</span>
                    <span class="feature-tag"><i class="fas fa-fire"></i> Gas</span>
                </div>
                <div class="card-action">
                    <span class="card-action-text">Subscribe Now</span>
                    <div class="card-action-arrow">
                        <i class="fas fa-arrow-right"></i>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>
