<script>
    let allServices = [];

    // Category icon mapping
    const categoryIcons = {
        'home': 'fas fa-home',
        'tech': 'fas fa-laptop-code',
        'beauty': 'fas fa-spa',
        'business': 'fas fa-briefcase',
        'health': 'fas fa-heartbeat',
        'default': 'fas fa-concierge-bell'
    };

    // Category keywords for filtering
    const categoryKeywords = {
        'home': ['plumber', 'electrician', 'carpenter', 'cleaner', 'painting', 'home', 'repair', 'maintenance', 'ac', 'appliance'],
        'tech': ['tech', 'computer', 'laptop', 'software', 'web', 'mobile', 'it', 'network', 'cctv', 'camera'],
        'beauty': ['beauty', 'salon', 'spa', 'hair', 'makeup', 'facial', 'massage', 'wellness', 'grooming'],
        'business': ['business', 'consulting', 'legal', 'finance', 'accounting', 'marketing', 'photography', 'event'],
        'health': ['health', 'doctor', 'nurse', 'care', 'elder', 'medical', 'therapy', 'physio', 'dental']
    };

    // Get category from service name
    function getServiceCategory(serviceName) {
        const name = serviceName.toLowerCase();
        for (const [category, keywords] of Object.entries(categoryKeywords)) {
            if (keywords.some(keyword => name.includes(keyword))) {
                return category;
            }
        }
        return 'default';
    }

    // Get icon for category
    function getCategoryIcon(category) {
        return categoryIcons[category] || categoryIcons['default'];
    }

    // Load services from API
    async function loadServices() {
        const container = document.getElementById('servicesContainer');
        
        try {
            const response = await fetch('/api/services/with-images');
            if (!response.ok) throw new Error('Failed to fetch services');
            
            const data = await response.json();
            allServices = data.map(item => ({
                id: item.serviceId || item.id,
                name: item.serviceName || item.name,
                description: item.description || 'Professional service available for booking',
                imageUrl: item.imageUrl || null,
                basePrice: item.basePrice || 0,
                rating: item.rating || (Math.random() * 2 + 3).toFixed(1),
                category: getServiceCategory(item.serviceName || item.name || '')
            }));
            
            renderServices(allServices);
        } catch (error) {
            console.error('Error loading services:', error);
            // Don't show error message since featured modules are already displayed
        }
    }

    // Render services to the grid
    function renderServices(services) {
        const container = document.getElementById('servicesContainer');
        
        if (!services || services.length === 0) {
            container.innerHTML = `
                <div class="empty-state">
                    <i class="fas fa-search"></i>
                    <h3>No services found</h3>
                    <p>Try adjusting your search criteria.</p>
                </div>
            `;
            return;
        }

        container.innerHTML = services.map((service, index) => {
            const category = service.category || 'default';
            const categoryLabel = category.charAt(0).toUpperCase() + category.slice(1);
            const icon = getCategoryIcon(category);
            const imageHtml = service.imageUrl 
                ? `<img src="${service.imageUrl}" alt="${service.name}" onerror="this.parentElement.innerHTML='<i class=\\'icon-placeholder ${icon}\\'></i>';" loading="lazy">`
                : `<i class="icon-placeholder ${icon}"></i>`;
            
            const priceDisplay = service.basePrice > 0 
                ? `â‚¹${service.basePrice.toLocaleString()}`
                : 'Get Quote';

            return `
                <div class="service-card" style="animation-delay: ${index * 0.05}s" onclick="bookService('${service.name}')">
                    <div class="card-image">
                        ${imageHtml}
                        <span class="card-badge">${categoryLabel}</span>
                    </div>
                    <div class="card-content">
                        <div class="card-category">${categoryLabel} Services</div>
                        <h3 class="card-title">${service.name}</h3>
                        <p class="card-description">${service.description}</p>
                        <div class="card-meta">
                            <div class="card-rating">
                                <i class="fas fa-star"></i>
                                <span>${service.rating}</span>
                            </div>
                            <div class="card-price">${priceDisplay}</div>
                        </div>
                        <button class="card-btn">
                            <i class="fas fa-calendar-check"></i>
                            Book Now
                        </button>
                    </div>
                </div>
            `;
        }).join('');
    }

    // Book service - redirect to browse with service name
    function bookService(serviceName) {
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <text>
            window.location.href = `/Services/Browse?q=${encodeURIComponent(serviceName)}`;
            </text>
        }
        else
        {
            <text>
            window.location.href = `/Account/Login?returnUrl=${encodeURIComponent('/Services/Browse?q=' + serviceName)}`;
            </text>
        }
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
        loadServices();
    });
</script>
