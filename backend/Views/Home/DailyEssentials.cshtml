@{
    ViewData["Title"] = "Daily Essentials";
}

<style>
    /* Modern Daily Essentials Selection Page */
    .essentials-hero {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 60px 20px;
        text-align: center;
        color: white;
        margin-bottom: 50px;
        border-radius: 0 0 50px 50px;
        position: relative;
        overflow: hidden;
    }

    .essentials-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Ccircle cx='30' cy='30' r='4'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    }

    .essentials-hero h1 {
        font-size: 2.8rem;
        font-weight: 700;
        margin-bottom: 15px;
        position: relative;
        z-index: 1;
    }

    .essentials-hero p {
        font-size: 1.2rem;
        opacity: 0.9;
        max-width: 600px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
    }

    .essentials-container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 20px 60px;
    }

    .essentials-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
        margin-top: -80px;
        position: relative;
        z-index: 2;
    }

    .essential-card {
        background: white;
        border-radius: 24px;
        padding: 40px 30px;
        text-align: center;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        cursor: pointer;
        text-decoration: none;
        color: inherit;
        display: block;
        position: relative;
        overflow: hidden;
        border: 2px solid transparent;
    }

    .essential-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 6px;
        transition: height 0.3s ease;
    }

    .essential-card.milk-card::before {
        background: linear-gradient(90deg, #00c6ff, #0072ff);
    }

    .essential-card.newspaper-card::before {
        background: linear-gradient(90deg, #f093fb, #f5576c);
    }

    .essential-card.gas-card::before {
        background: linear-gradient(90deg, #ff9a44, #fc6076);
    }

    .essential-card:hover {
        transform: translateY(-15px) scale(1.02);
        box-shadow: 0 30px 80px rgba(0, 0, 0, 0.15);
    }

    .essential-card:hover::before {
        height: 100%;
        opacity: 0.08;
    }

    .essential-icon {
        width: 120px;
        height: 120px;
        margin: 0 auto 25px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3.5rem;
        position: relative;
        z-index: 1;
        transition: transform 0.3s ease;
    }

    .essential-card:hover .essential-icon {
        transform: scale(1.1) rotate(5deg);
    }

    .milk-card .essential-icon {
        background: linear-gradient(135deg, #e3f2fd, #bbdefb);
        color: #0072ff;
    }

    .newspaper-card .essential-icon {
        background: linear-gradient(135deg, #fce4ec, #f8bbd9);
        color: #f5576c;
    }

    .gas-card .essential-icon {
        background: linear-gradient(135deg, #fff3e0, #ffcc80);
        color: #ff6d00;
    }

    .essential-card h3 {
        font-size: 1.8rem;
        font-weight: 700;
        margin-bottom: 12px;
        color: #1a1a2e;
        position: relative;
        z-index: 1;
    }

    .essential-card p {
        font-size: 1rem;
        color: #666;
        margin-bottom: 25px;
        line-height: 1.6;
        position: relative;
        z-index: 1;
    }

    .essential-features {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: center;
        margin-bottom: 25px;
        position: relative;
        z-index: 1;
    }

    .feature-tag {
        background: #f8f9fa;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 0.85rem;
        color: #555;
        display: flex;
        align-items: center;
        gap: 6px;
        transition: all 0.3s ease;
    }

    .feature-tag i {
        font-size: 0.9rem;
    }

    .milk-card .feature-tag:hover {
        background: #e3f2fd;
        color: #0072ff;
    }

    .newspaper-card .feature-tag:hover {
        background: #fce4ec;
        color: #f5576c;
    }

    .gas-card .feature-tag:hover {
        background: #fff3e0;
        color: #ff6d00;
    }

    .essential-btn {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 15px 35px;
        border-radius: 50px;
        font-size: 1rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        position: relative;
        z-index: 1;
        border: none;
    }

    .milk-card .essential-btn {
        background: linear-gradient(135deg, #00c6ff, #0072ff);
        color: white;
    }

    .newspaper-card .essential-btn {
        background: linear-gradient(135deg, #f093fb, #f5576c);
        color: white;
    }

    .gas-card .essential-btn {
        background: linear-gradient(135deg, #ff9a44, #fc6076);
        color: white;
    }

    .essential-btn:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

    .essential-btn i {
        transition: transform 0.3s ease;
    }

    .essential-card:hover .essential-btn i {
        transform: translateX(5px);
    }

    .status-badge {
        position: absolute;
        top: 20px;
        right: 20px;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .status-active {
        background: linear-gradient(135deg, #00c853, #69f0ae);
        color: white;
    }

    .status-coming-soon {
        background: linear-gradient(135deg, #ffc107, #ffeb3b);
        color: #333;
    }

    /* Back button */
    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: rgba(255, 255, 255, 0.9);
        text-decoration: none;
        font-size: 1rem;
        margin-bottom: 20px;
        transition: all 0.3s ease;
        position: relative;
        z-index: 1;
    }

    .back-link:hover {
        color: white;
        transform: translateX(-5px);
    }

    /* Info Banner */
    .info-banner {
        background: linear-gradient(135deg, #e8f5e9, #c8e6c9);
        border-radius: 16px;
        padding: 25px 30px;
        display: flex;
        align-items: center;
        gap: 20px;
        margin-top: 40px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    }

    .info-banner i {
        font-size: 2.5rem;
        color: #2e7d32;
    }

    .info-banner-content h4 {
        font-size: 1.2rem;
        font-weight: 600;
        color: #1b5e20;
        margin-bottom: 5px;
    }

    .info-banner-content p {
        color: #388e3c;
        margin: 0;
        font-size: 0.95rem;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .essentials-hero {
            padding: 40px 15px;
            border-radius: 0 0 30px 30px;
        }

        .essentials-hero h1 {
            font-size: 2rem;
        }

        .essentials-grid {
            margin-top: -60px;
            gap: 20px;
        }

        .essential-card {
            padding: 30px 20px;
        }

        .essential-icon {
            width: 100px;
            height: 100px;
            font-size: 2.8rem;
        }

        .essential-card h3 {
            font-size: 1.5rem;
        }

        .info-banner {
            flex-direction: column;
            text-align: center;
        }
    }

    /* Animation */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .essential-card {
        animation: fadeInUp 0.6s ease forwards;
    }

    .essential-card:nth-child(1) { animation-delay: 0.1s; }
    .essential-card:nth-child(2) { animation-delay: 0.2s; }
    .essential-card:nth-child(3) { animation-delay: 0.3s; }
</style>

<!-- Hero Section -->
<div class="essentials-hero">
    <a href="@Url.Action("Index", "Home")" class="back-link">
        <i class="fas fa-arrow-left"></i> Back to Home
    </a>
    <h1><i class="fas fa-box-open me-3"></i>Daily Essentials</h1>
    <p>Subscribe to your daily needs and never run out. Fresh deliveries right at your doorstep!</p>
</div>

<!-- Essentials Selection -->
<div class="essentials-container">
    <div class="essentials-grid">
        <!-- Milk Subscription Card -->
        <a href="#" class="essential-card milk-card" onclick="showComingSoon('Milk Subscription'); return false;">
            <span class="status-badge status-coming-soon">Coming Soon</span>
            <div class="essential-icon">
                <i class="fas fa-glass-whiskey"></i>
            </div>
            <h3>Milk</h3>
            <p>Fresh milk delivered daily to your doorstep. Choose from various brands and quantities.</p>
            <div class="essential-features">
                <span class="feature-tag"><i class="fas fa-clock"></i> Morning Delivery</span>
                <span class="feature-tag"><i class="fas fa-calendar-check"></i> Flexible Schedule</span>
                <span class="feature-tag"><i class="fas fa-wallet"></i> Monthly Billing</span>
            </div>
            <button class="essential-btn">
                Subscribe Now <i class="fas fa-arrow-right"></i>
            </button>
        </a>

        <!-- Newspaper Subscription Card -->
        <a href="#" class="essential-card newspaper-card" onclick="showComingSoon('Newspaper Subscription'); return false;">
            <span class="status-badge status-coming-soon">Coming Soon</span>
            <div class="essential-icon">
                <i class="fas fa-newspaper"></i>
            </div>
            <h3>Newspaper</h3>
            <p>Stay informed with your favorite newspapers delivered every morning without fail.</p>
            <div class="essential-features">
                <span class="feature-tag"><i class="fas fa-sun"></i> Early Morning</span>
                <span class="feature-tag"><i class="fas fa-language"></i> Multiple Languages</span>
                <span class="feature-tag"><i class="fas fa-pause"></i> Vacation Mode</span>
            </div>
            <button class="essential-btn">
                Subscribe Now <i class="fas fa-arrow-right"></i>
