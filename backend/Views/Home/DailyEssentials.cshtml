        </a>

        <!-- Gas Subscription Card -->
        <a href="@Url.Action("Index", "GasSubscription")" class="essential-card gas-card">
            <span class="status-badge status-active">Active</span>
            <div class="essential-icon">
                <i class="fas fa-fire"></i>
            </div>
            <h3>Gas Cylinder</h3>
            <p>IoT-based smart gas monitoring. Automatic refill booking when your cylinder runs low.</p>
            <div class="essential-features">
                <span class="feature-tag"><i class="fas fa-robot"></i> Auto Booking</span>
                <span class="feature-tag"><i class="fas fa-chart-line"></i> Real-time Monitor</span>
                <span class="feature-tag"><i class="fas fa-bell"></i> Low Level Alerts</span>
            </div>
            <button class="essential-btn">
                Get Started <i class="fas fa-arrow-right"></i>
            </button>
        </a>
    </div>

    <!-- Info Banner -->
    <div class="info-banner">
        <i class="fas fa-lightbulb"></i>
        <div class="info-banner-content">
            <h4>Smart Subscriptions, Hassle-free Living</h4>
            <p>Subscribe once and forget the hassle. Our smart delivery system ensures you never run out of your daily essentials.</p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showComingSoon(serviceName) {
            // Create a modern toast notification
            const toast = document.createElement('div');
            toast.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: linear-gradient(135deg, #667eea, #764ba2);
                color: white;
                padding: 20px 30px;
                border-radius: 12px;
                box-shadow: 0 10px 40px rgba(102, 126, 234, 0.4);
                z-index: 9999;
                display: flex;
                align-items: center;
                gap: 15px;
                animation: slideIn 0.4s ease;
                max-width: 350px;
            `;
            
            toast.innerHTML = `
                <i class="fas fa-info-circle" style="font-size: 24px;"></i>
                <div>
                    <strong style="display: block; margin-bottom: 5px;">${serviceName}</strong>
                    <span style="opacity: 0.9; font-size: 0.9rem;">This feature is coming soon! Stay tuned for updates.</span>
                </div>
            `;
            
            // Add animation keyframes
            const style = document.createElement('style');
            style.textContent = `
                @@keyframes slideIn {
                    from { transform: translateX(100%); opacity: 0; }
                    to { transform: translateX(0); opacity: 1; }
                }
                @@keyframes slideOut {
                    from { transform: translateX(0); opacity: 1; }
                    to { transform: translateX(100%); opacity: 0; }
                }
            `;
            document.head.appendChild(style);
            
            document.body.appendChild(toast);
            
            // Remove after 3 seconds
            setTimeout(() => {
                toast.style.animation = 'slideOut 0.4s ease forwards';
                setTimeout(() => {
                    toast.remove();
                    style.remove();
                }, 400);
            }, 3000);
        }
    </script>
}
