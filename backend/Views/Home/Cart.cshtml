@{
    ViewData["Title"] = "Shopping Cart - ServConnect";
}

<style>
    :root {
        --shop-primary: #10B981;
        --shop-primary-dark: #059669;
        --shop-gradient: linear-gradient(135deg, #10B981 0%, #059669 100%);
        --shop-gradient-light: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
    }

    body {
        background: linear-gradient(180deg, #f0fdf4 0%, #ecfdf5 100%);
    }

    .cart-container {
        width: 100%;
        padding: 30px 40px;
    }

    .back-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background: white;
        color: #374151;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        margin-bottom: 24px;
    }

    .back-btn:hover {
        transform: translateX(-5px);
        color: var(--shop-primary);
        text-decoration: none;
    }

    .cart-header {
        background: url('/images/ecommerce_bg.png');
        background-size: cover;
        background-position: center;
        border-radius: 20px;
        padding: 30px;
        color: white;
        margin-bottom: 30px;
    }

    .cart-header h1 {
        font-size: 2rem;
        font-weight: 700;
        margin: 0;
    }

    .cart-header p {
        margin: 8px 0 0;
        opacity: 0.9;
    }
</style>

<style>
    .cart-content {
        display: grid;
        grid-template-columns: 1fr 380px;
        gap: 30px;
    }

    .cart-items {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .cart-item {
        background: white;
        border-radius: 16px;
        padding: 20px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.06);
        display: flex;
        gap: 20px;
        animation: fadeInUp 0.5s ease;
    }

    .cart-item-image {
        width: 120px;
        height: 120px;
        border-radius: 12px;
        overflow: hidden;
        flex-shrink: 0;
        background: var(--shop-gradient-light);
    }

    .cart-item-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .cart-item-image .placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .cart-item-image .placeholder i {
        font-size: 2.5rem;
        color: var(--shop-primary);
        opacity: 0.4;
    }

    .cart-item-details {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .cart-item-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #1f2937;
        margin-bottom: 6px;
    }

    .cart-item-variants {
        font-size: 0.85rem;
        color: #64748b;
        margin-bottom: 8px;
    }

    .cart-item-price {
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--shop-primary);
        margin-bottom: 12px;
    }

    .cart-item-actions {
        display: flex;
        align-items: center;
        gap: 16px;
        margin-top: auto;
    }

    .qty-controls {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .qty-btn {
        width: 32px;
        height: 32px;
        border: 2px solid #e5e7eb;
        background: white;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .qty-btn:hover {
        border-color: var(--shop-primary);
        color: var(--shop-primary);
    }

    .qty-value {
        width: 40px;
        text-align: center;
        font-weight: 600;
    }

    .remove-btn {
        color: #dc2626;
        background: none;
        border: none;
        cursor: pointer;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 6px;
        transition: all 0.3s ease;
    }

    .remove-btn:hover {
        text-decoration: underline;
    }
</style>

<style>
    /* Cart Summary */
    .cart-summary {
        background: white;
        border-radius: 20px;
        padding: 24px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.06);
        position: sticky;
        top: 20px;
        height: fit-content;
    }

    .summary-title {
        font-size: 1.2rem;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 20px;
        padding-bottom: 16px;
        border-bottom: 2px solid #f1f5f9;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        border-bottom: 1px dashed #e5e7eb;
    }

    .summary-row:last-of-type {
        border-bottom: none;
    }

    .summary-row span {
        color: #64748b;
    }

    .summary-row strong {
        color: #1f2937;
    }

    .summary-total {
        display: flex;
        justify-content: space-between;
        padding: 20px 0;
        margin-top: 16px;
        border-top: 2px solid #f1f5f9;
    }

    .summary-total span {
        font-size: 1.1rem;
        font-weight: 600;
        color: #1f2937;
    }

    .summary-total strong {
        font-size: 1.4rem;
        font-weight: 800;
        color: var(--shop-primary);
    }

    .checkout-btn {
        width: 100%;
        padding: 16px;
        background: var(--shop-gradient);
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 1rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin-top: 16px;
    }

    .checkout-btn:hover:not(:disabled) {
        transform: translateY(-3px);
        box-shadow: 0 15px 35px rgba(16, 185, 129, 0.4);
    }

    .checkout-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .continue-shopping {
        display: block;
        text-align: center;
        margin-top: 16px;
        color: var(--shop-primary);
        text-decoration: none;
        font-weight: 500;
    }

    .continue-shopping:hover {
        text-decoration: underline;
    }

    /* Empty Cart */
    .empty-cart {
        text-align: center;
        padding: 60px 20px;
        background: white;
        border-radius: 20px;
        grid-column: 1 / -1;
    }

    .empty-cart i {
        font-size: 5rem;
        color: #d1d5db;
        margin-bottom: 20px;
    }

    .empty-cart h3 {
        font-size: 1.5rem;
        color: #374151;
        margin-bottom: 12px;
    }

    .empty-cart p {
        color: #64748b;
        margin-bottom: 24px;
    }

    .empty-cart a {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 14px 28px;
        background: var(--shop-gradient);
        color: white;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .empty-cart a:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 35px rgba(16, 185, 129, 0.4);
    }

    @@keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    @@media (max-width: 992px) {
        .cart-content {
            grid-template-columns: 1fr;
        }

        .cart-summary {
            position: static;
        }
    }

    @@media (max-width: 576px) {
        .cart-item {
            flex-direction: column;
        }

        .cart-item-image {
            width: 100%;
            height: 180px;
        }
    }
</style>

<div class="cart-container">
    <a href="/Home/Items" class="back-btn">
        <i class="fas fa-arrow-left"></i> Continue Shopping
    </a>

    <div class="cart-header">
        <h1><i class="fas fa-shopping-cart"></i> Shopping Cart</h1>
        <p id="cartItemCount">0 items in your cart</p>
    </div>

    <div class="cart-content" id="cartContent">
        <div class="loading-container" style="grid-column: 1 / -1; text-align: center; padding: 60px;">
            <div class="loading-spinner" style="width: 50px; height: 50px; border: 4px solid #e5e7eb; border-top-color: var(--shop-primary); border-radius: 50%; animation: spin 1s linear infinite; margin: 0 auto 20px;"></div>
            <p>Loading cart...</p>
        </div>
    </div>
</div>

<style>
    @@keyframes spin {
        to { transform: rotate(360deg); }
    }
</style>

<script>
    let cartItems = [];
    let products = {};

    // Load cart and product details
    async function loadCart() {
        const cart = JSON.parse(localStorage.getItem('shopCart') || '[]');
        
        if (cart.length === 0) {
            renderEmptyCart();
            return;
        }

        // Fetch product details for each cart item
        try {
            const productIds = [...new Set(cart.map(item => item.itemId))];
            const productPromises = productIds.map(id => 
                fetch(`/api/items/${id}`, { credentials: 'same-origin' }).then(r => r.ok ? r.json() : null)
            );
            
            const productResults = await Promise.all(productPromises);
            productResults.forEach(product => {
                if (product) products[product.id] = product;
            });

            // Filter out items with missing products
            cartItems = cart.filter(item => products[item.itemId]);
            
            if (cartItems.length === 0) {
                localStorage.setItem('shopCart', '[]');
                renderEmptyCart();
                return;
            }

            renderCart();
        } catch (error) {
            console.error('Error loading cart:', error);
            document.getElementById('cartContent').innerHTML = `
                <div class="empty-cart">
                    <i class="fas fa-exclamation-circle"></i>
                    <h3>Error Loading Cart</h3>
                    <p>Something went wrong. Please try again.</p>
                    <a href="/Home/Items"><i class="fas fa-store"></i> Browse Products</a>
                </div>
            `;
        }
    }

    // Render empty cart
    function renderEmptyCart() {
        document.getElementById('cartItemCount').textContent = '0 items in your cart';
        document.getElementById('cartContent').innerHTML = `
            <div class="empty-cart">
                <i class="fas fa-shopping-cart"></i>
                <h3>Your Cart is Empty</h3>
                <p>Looks like you haven't added anything to your cart yet.</p>
                <a href="/Home/Items"><i class="fas fa-store"></i> Start Shopping</a>
            </div>
        `;
    }
</script>

<script>
    // Render cart
    function renderCart() {
        const totalItems = cartItems.reduce((sum, item) => sum + item.quantity, 0);
        document.getElementById('cartItemCount').textContent = `${totalItems} item${totalItems !== 1 ? 's' : ''} in your cart`;

        let subtotal = 0;
        const itemsHtml = cartItems.map((item, index) => {
            const product = products[item.itemId];
            const price = product.price || 0;
            const itemTotal = price * item.quantity;
            subtotal += itemTotal;

            const variantsText = item.selectedVariants && Object.keys(item.selectedVariants).length > 0
                ? Object.entries(item.selectedVariants).map(([k, v]) => `${k}: ${v}`).join(', ')
                : '';

            return `
                <div class="cart-item" style="animation-delay: ${index * 0.1}s">
                    <div class="cart-item-image">
                        ${product.imageUrl 
                            ? `<img src="${product.imageUrl}" alt="${product.title}" onerror="this.parentElement.innerHTML='<div class=\\'placeholder\\'><i class=\\'fas fa-box-open\\'></i></div>';">`
                            : '<div class="placeholder"><i class="fas fa-box-open"></i></div>'
                        }
                    </div>
                    <div class="cart-item-details">
                        <h4 class="cart-item-title">${product.title || 'Product'}</h4>
                        ${variantsText ? `<p class="cart-item-variants">${variantsText}</p>` : ''}
                        <div class="cart-item-price">${price.toLocaleString('en-IN', { style: 'currency', currency: 'INR' })}</div>
                        <div class="cart-item-actions">
                            <div class="qty-controls">
                                <button class="qty-btn" onclick="updateQuantity(${index}, -1)" ${item.quantity <= 1 ? 'disabled' : ''}>
                                    <i class="fas fa-minus"></i>
                                </button>
                                <span class="qty-value">${item.quantity}</span>
                                <button class="qty-btn" onclick="updateQuantity(${index}, 1)" ${item.quantity >= (product.stock || 0) ? 'disabled' : ''}>
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                            <button class="remove-btn" onclick="removeItem(${index})">
                                <i class="fas fa-trash"></i> Remove
                            </button>
                        </div>
                    </div>
                </div>
            `;
        }).join('');

        const shipping = subtotal >= 499 ? 0 : 49;
        const total = subtotal + shipping;

        document.getElementById('cartContent').innerHTML = `
            <div class="cart-items">${itemsHtml}</div>
            <div class="cart-summary">
                <h3 class="summary-title">Order Summary</h3>
                <div class="summary-row">
                    <span>Subtotal (${totalItems} items)</span>
                    <strong>${subtotal.toLocaleString('en-IN', { style: 'currency', currency: 'INR' })}</strong>
                </div>
                <div class="summary-row">
                    <span>Shipping</span>
                    <strong>${shipping === 0 ? 'FREE' : shipping.toLocaleString('en-IN', { style: 'currency', currency: 'INR' })}</strong>
                </div>
                ${shipping > 0 ? `<p class="text-muted small mt-2 mb-0">Add â‚¹${(499 - subtotal).toFixed(0)} more for free shipping</p>` : ''}
                <div class="summary-total">
                    <span>Total</span>
                    <strong>${total.toLocaleString('en-IN', { style: 'currency', currency: 'INR' })}</strong>
                </div>
                <button class="checkout-btn" onclick="proceedToCheckout()">
                    <i class="fas fa-lock"></i> Proceed to Checkout
                </button>
                <a href="/Home/Items" class="continue-shopping">
                    <i class="fas fa-arrow-left"></i> Continue Shopping
                </a>
            </div>
        `;
    }

    // Update quantity
    function updateQuantity(index, delta) {
        const item = cartItems[index];
        const product = products[item.itemId];
        const newQty = item.quantity + delta;

        if (newQty < 1 || newQty > (product.stock || 0)) return;

        cartItems[index].quantity = newQty;
        saveCart();
        renderCart();
    }

    // Remove item
    function removeItem(index) {
        cartItems.splice(index, 1);
        saveCart();
        
        if (cartItems.length === 0) {
            renderEmptyCart();
        } else {
            renderCart();
        }
        showToast('Item removed from cart', 'info');
    }

    // Save cart to localStorage
    function saveCart() {
        localStorage.setItem('shopCart', JSON.stringify(cartItems));
    }

    // Proceed to checkout
    function proceedToCheckout() {
        if (cartItems.length === 0) {
            showToast('Your cart is empty', 'warning');
            return;
        }
        // For now, redirect to first item's product page to complete order
        // In a full implementation, this would go to a multi-item checkout page
        window.location.href = `/Home/ProductDetails/${cartItems[0].itemId}`;
    }
</script>

<script>
    // Toast notification
    function showToast(message, type = 'info') {
        const existingToast = document.querySelector('.toast-notification');
        if (existingToast) existingToast.remove();

        const colors = {
            success: '#10B981',
            error: '#EF4444',
            warning: '#F59E0B',
            info: '#3B82F6'
        };

        const icons = {
            success: 'fa-check-circle',
            error: 'fa-times-circle',
            warning: 'fa-exclamation-circle',
            info: 'fa-info-circle'
        };

        const toast = document.createElement('div');
        toast.className = 'toast-notification';
        toast.innerHTML = `<i class="fas ${icons[type]}"></i> ${message}`;
        toast.style.cssText = `
            position: fixed;
            bottom: 30px;
            right: 30px;
            background: ${colors[type]};
            color: white;
            padding: 16px 24px;
            border-radius: 12px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            z-index: 10000;
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 500;
            animation: slideIn 0.3s ease;
        `;

        document.body.appendChild(toast);

        if (!document.getElementById('toast-styles')) {
            const style = document.createElement('style');
            style.id = 'toast-styles';
            style.textContent = `
                @@keyframes slideIn {
                    from { transform: translateX(100%); opacity: 0; }
                    to { transform: translateX(0); opacity: 1; }
                }
                @@keyframes slideOut {
                    from { transform: translateX(0); opacity: 1; }
                    to { transform: translateX(100%); opacity: 0; }
                }
            `;
            document.head.appendChild(style);
        }

        setTimeout(() => {
            toast.style.animation = 'slideOut 0.3s ease forwards';
            setTimeout(() => toast.remove(), 300);
        }, 3000);
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', loadCart);
</script>
