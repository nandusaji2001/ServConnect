<script>
    // Video playback control - ensure only one video plays at a time
    document.addEventListener('DOMContentLoaded', function() {
        const iframes = document.querySelectorAll('.live-news-video');
        let currentPlayer = null;
        
        // Function to pause all videos except the specified one
        function pauseOtherVideos(currentVideo) {
            iframes.forEach(iframe => {
                if (iframe !== currentVideo) {
                    // Reload iframe with autoplay disabled
                    const src = iframe.src;
                    if (src.includes('autoplay=1')) {
                        iframe.src = src.replace('autoplay=1', 'autoplay=0');
                    }
                }
            });
        }
        
        // Add click event listeners to each video
        iframes.forEach(iframe => {
            iframe.addEventListener('click', function() {
                // Pause other videos
                pauseOtherVideos(this);
                currentPlayer = this;
                
                // Ensure this video is playing
                const src = this.src;
                if (!src.includes('autoplay=1')) {
                    this.src = src + (src.includes('?') ? '&' : '?') + 'autoplay=1';
                }
            });
        });
        
        // Set the first video to autoplay by default
        if (iframes.length > 0) {
            const firstVideo = iframes[0];
            const src = firstVideo.src;
            if (!src.includes('autoplay=')) {
                firstVideo.src = src + (src.includes('?') ? '&' : '?') + 'autoplay=1';
            }
            currentPlayer = firstVideo;
        }
    });
    
    async function translateText(text, sourceLanguage = 'en', targetLanguage = 'ml') {
        console.log('Starting translation of:', text.substring(0, 50) + '...');
        try {
            const requestBody = {
                text: text,
                sourceLanguage: sourceLanguage,
                targetLanguage: targetLanguage
            };
            console.log('Request body:', JSON.stringify(requestBody));
            
            const res = await fetch('/api/news/translate', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(requestBody)
            });
            
            console.log('Response status:', res.status);
            
            if (!res.ok) {
                const errorData = await res.json();
                console.error('Translation API error:', res.status, res.statusText, errorData);
                return text;
            }
            
            const data = await res.json();
            console.log('Translation response:', data);
            
            if (data.translatedText) {
                console.log('Translated successfully to:', data.translatedText.substring(0, 50) + '...');
                return data.translatedText;
            } else {
                console.warn('No translatedText in response');
                return text;
            }
        } catch (error) {
            console.error('Translation fetch failed:', error);
            return text;
        }
    }
    
    async function handleTranslate(titleElement, descElement, button, sourceLang, targetLang) {
        button.disabled = true;
        button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Translating...';
        
        try {
            const originalTitle = titleElement.textContent;
            const originalDesc = descElement.textContent;
            
            // Store original text in data attributes
            titleElement.dataset.original = originalTitle;
            descElement.dataset.original = originalDesc;
            
            // Translate title and description
            const translatedTitle = await translateText(originalTitle, sourceLang, targetLang);
            const translatedDesc = await translateText(originalDesc, sourceLang, targetLang);
            
            // Update content
            titleElement.textContent = translatedTitle;
            descElement.textContent = translatedDesc;
            
            // Add translated class for styling
            titleElement.classList.add('translated');
            descElement.classList.add('translated');
            
            // Update button
            button.innerHTML = '<i class="fas fa-language"></i> English';
            button.dataset.translated = 'true';
        } catch (error) {
            console.error('Translation error:', error);
            alert('Failed to translate. Please try again.');
        } finally {
            button.disabled = false;
        }
    }
    
    function handleRestore(titleElement, descElement, button) {
        // Restore original content
        titleElement.textContent = titleElement.dataset.original || titleElement.textContent;
        descElement.textContent = descElement.dataset.original || descElement.textContent;
        
        // Remove translated class
        titleElement.classList.remove('translated');
        descElement.classList.remove('translated');
        
        // Update button
        button.innerHTML = '<i class="fas fa-language"></i> മലയാളം';
        button.dataset.translated = 'false';
    }
    
    async function loadNews(location, language = 'en') {
        const container = document.getElementById('newsContent');
        container.innerHTML = `
            <div class="news-placeholder">
                <div class="news-placeholder-spinner"></div>
                <p>Loading headlines...</p>
            </div>
        `;
        try {
            const res = await fetch(`/api/news?location=${encodeURIComponent(location)}&language=${encodeURIComponent(language)}`);
            const data = await res.json();
            if (!data.articles || data.articles.length === 0) {
                container.innerHTML = '<div class="news-placeholder">No headlines available for this location.</div>';
                return;
            }
            container.innerHTML = data.articles.map((article, index) => {
                const pubDate = article.pubDate ? new Date(article.pubDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) : '';
                let imageHtml = '';
                if (article.imageUrl) {
                    imageHtml = `<img src="${article.imageUrl}" alt="${article.title}" crossorigin="anonymous" onerror="this.parentElement.innerHTML='<div class=\\'news-card-image-placeholder\\'><i class=\\'fas fa-newspaper\\'></i></div>';" loading="lazy">`;
                    console.log('Image URL:', article.imageUrl);
                } else {
                    imageHtml = `<div class="news-card-image-placeholder"><i class="fas fa-newspaper"></i></div>`;
                    console.log('No image for:', article.title);
                }
                
                const showTranslateBtn = language === 'en';
                
                return `<div class="news-card">
                    <div class="news-card-image">${imageHtml}</div>
                    <div class="news-card-content">
                        <div class="news-card-meta">
                            <span class="news-card-source">${article.source || 'News'}</span>
                            <span class="news-card-date">${pubDate}</span>
                        </div>
                        <h3 class="news-card-title" id="title-${index}">${article.title}</h3>
                        <p class="news-card-description" id="desc-${index}">${article.description}</p>
                        <div class="news-card-actions">
                            <a href="${article.link}" target="_blank" class="news-card-link">
                                Read Full Article <i class="fas fa-external-link-alt"></i>
                            </a>
                            ${showTranslateBtn ? `<button class="news-translate-btn" id="trans-${index}" data-index="${index}" data-translated="false" title="Translate to Malayalam">
                                <i class="fas fa-language"></i> മലയാളം
                            </button>` : ''}
                        </div>
                    </div>
                </div>`;
            }).join('');
            
            if (language === 'en') {
                data.articles.forEach((_, index) => {
                    const btn = document.getElementById(`trans-${index}`);
                    if (btn) {
                        btn.addEventListener('click', function(e) {
                            e.preventDefault();
                            const titleEl = document.getElementById(`title-${index}`);
                            const descEl = document.getElementById(`desc-${index}`);
                            
                            if (this.dataset.translated === 'true') {
                                handleRestore(titleEl, descEl, this);
                            } else {
                                handleTranslate(titleEl, descEl, this, 'en', 'ml');
                            }
                        });
                    }
                });
            }
        } catch (error) {
            console.error('Failed to load news:', error);
            container.innerHTML = '<div class="news-error">Failed to load headlines. Please try again.</div>';
        }
    }
    
    document.addEventListener('DOMContentLoaded', () => {
        const newsLocationInput = document.getElementById('newsLocationInput');
        const newsLanguageSelect = document.getElementById('newsLanguageSelect');
        const newsSearchBtn = document.getElementById('newsSearchBtn');
        const newsRefreshBtn = document.getElementById('newsRefreshBtn');
        
        const performSearch = () => {
            const location = newsLocationInput.value.trim() || '@defaultLocation';
            const language = newsLanguageSelect.value || 'en';
            loadNews(location, language);
        };
        
        if (newsSearchBtn) {
            newsSearchBtn.addEventListener('click', performSearch);
        }
        
        if (newsLanguageSelect) {
            newsLanguageSelect.addEventListener('change', performSearch);
        }
        
        if (newsLocationInput) {
            newsLocationInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    performSearch();
                }
            });
            // Load news for the default location on page load
            loadNews('@defaultLocation', 'en');
        }
        
        if (newsRefreshBtn) {
            newsRefreshBtn.addEventListener('click', () => {
                const loc = newsLocationInput ? newsLocationInput.value.trim() : '@defaultLocation';
                const lang = newsLanguageSelect ? newsLanguageSelect.value : 'en';
                loadNews(loc || '@defaultLocation', lang);
            });
        }
    });
</script>