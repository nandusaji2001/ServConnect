    }
    
    .news-location-input:focus {
        outline: none;
        box-shadow: 0 0 0 3px rgba(34, 134, 58, 0.2);
        border-color: #22863a;
    }
    
    .news-language-select {
        border: 1px solid #cbd5e0;
        border-radius: 8px;
        padding: 10px 14px;
        font-weight: 500;
        background: #fff;
        min-width: 120px;
        color: #1f2937;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }
    
    .news-language-select:focus {
        outline: none;
        box-shadow: 0 0 0 3px rgba(34, 134, 58, 0.2);
        border-color: #22863a;
    }
    
    .news-search-btn {
        border: none;
        border-radius: 8px;
        padding: 10px 16px;
        background: linear-gradient(135deg, #22863a 0%, #28a745 100%);
        color: #fff;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    
    .news-search-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(34, 134, 58, 0.3);
    }
    
    .news-refresh {
        border: none;
        border-radius: 50%;
        width: 44px;
        height: 44px;
        background: #f8f9fa;
        color: #4a5568;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        border: 1px solid #e2e8f0;
    }
    
    .news-refresh:hover {
        background: #edf2f7;
        transform: rotate(90deg);
    }
    
    .back-btn {
        color: #4a5568;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 4px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: opacity 0.3s ease;
        margin-bottom: 15px;
    }
    
    .back-btn:hover {
        opacity: 0.8;
        text-decoration: none;
    }
    
    .news-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 28px;
        margin: 40px 0;
        grid-auto-rows: 1fr;
        align-items: stretch;
    }
    
    .news-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
        min-height: 0;
    }
    
    .news-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
    }
    
    .news-card-image {
        width: 100%;
        height: 200px;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .news-card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .news-card-image-placeholder {
        color: #9ca3af;
        font-size: 3rem;
    }
    
    .news-card-content {
        padding: 24px;
        display: flex;
        flex-direction: column;
        flex: 1;
    }
    
    .news-card-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 12px;
        font-size: 0.85rem;
    }
    
    .news-card-source {
        background: linear-gradient(135deg, #22863a 0%, #28a745 100%);
        color: white;
        padding: 4px 12px;
        border-radius: 20px;
        font-weight: 600;
        display: inline-block;
    }
    
    .news-card-date {
        color: #9ca3af;
    }
    
    .news-card-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #0f172a;
        margin-bottom: 10px;
        line-height: 1.4;
    }
    
    .news-card-description {
        color: #6b7280;
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 16px;
        flex: 1;
    }
    
    .news-card-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: white;
        background: linear-gradient(135deg, #22863a 0%, #28a745 100%);
        text-decoration: none;
        padding: 10px 16px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        align-self: flex-start;
    }
    
    .news-card-link:hover {
        transform: translateX(4px);
        color: white;
        text-decoration: none;
    }
    
    .news-card-actions {
        display: flex;
        gap: 8px;
        margin-top: 12px;
    }
    
    .news-translate-btn {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        color: white;
        background: linear-gradient(135deg, #22863a 0%, #28a745 100%);
        border: none;
        padding: 8px 12px;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.85rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    
    .news-translate-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 2px 8px rgba(34, 134, 58, 0.3);
    }
    
    .news-translate-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }
    
    .news-card-title.translated,
    .news-card-description.translated {
        background: #f0fdf4;
        padding: 8px;
        border-left: 3px solid #22863a;
    }
    
    .news-placeholder {
        grid-column: 1 / -1;
        text-align: center;
        padding: 60px 20px;
        color: #9ca3af;
    }
    
    .news-placeholder-spinner {
        display: inline-block;
        width: 40px;
        height: 40px;
        border: 4px solid #f0f0f0;
        border-top-color: #22863a;
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin-bottom: 20px;
    }
    
    @@keyframes spin {
        to { transform: rotate(360deg); }
    }
    
    .news-error {
        grid-column: 1 / -1;
        text-align: center;
        padding: 40px 20px;
        color: #b91c1c;
        background: #fee;
        border: 1px solid #fca5a5;
