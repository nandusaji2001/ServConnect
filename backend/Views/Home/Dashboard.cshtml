@{
    ViewData["Title"] = "Dashboard";
}

<style>
    .options-grid { display: grid; grid-template-columns: repeat(auto-fit,minmax(220px,1fr)); gap: 16px; }
    .option-card { border-radius: 12px; background: #fff; box-shadow: 0 6px 18px rgba(0,0,0,0.08); padding: 18px; display:flex; flex-direction:column; gap:8px; transition: transform .2s ease, box-shadow .2s ease; }
    .option-card:hover { transform: translateY(-4px); box-shadow: 0 14px 30px rgba(0,0,0,0.12); text-decoration: none; }
    .option-icon { width: 48px; height: 48px; border-radius:10px; display:flex; align-items:center; justify-content:center; color:#fff; font-size:20px; }
    .bg1 { background: linear-gradient(135deg,#00b09b,#96c93d); }
    .bg2 { background: linear-gradient(135deg,#36d1dc,#5b86e5); }
    .bg3 { background: linear-gradient(135deg,#f7971e,#ffd200); }
    .bg4 { background: linear-gradient(135deg,#ff5858,#f857a6); }
    .option-title { margin:0; font-weight:600; color:#333; }
    .option-desc { margin:0; color:#666; font-size:.95rem; }

    /* Header wave and footer */
    .header-wave svg { display:block; width:100%; height:40px; margin-top:-10px; }
    .dashboard-headerx {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white; padding: 28px; border-radius: 14px; margin-bottom: 18px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }
    .dashboard-footerx {
        margin-top: 22px; padding: 14px 18px; border-radius: 12px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #fff; display:flex; justify-content:space-between; align-items:center; gap:12px; flex-wrap:wrap;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }
    .dashboard-footerx .btn-outline-light { border-color:#fff; color:#fff; }
    .dashboard-footerx .btn-outline-light:hover { background:#fff; color:#764ba2; }
</style>

<div class="container py-4">
    <div class="dashboard-headerx">
        <h2 class="mb-1"><i class="fas fa-grid"></i> Dashboard</h2>
        <div class="opacity-75">Choose what youâ€™d like to do today</div>
    </div>
    <div class="header-wave">
        <svg preserveAspectRatio="none" viewBox="0 0 1200 120" xmlns="http://www.w3.org/2000/svg"><path d="M0,0V46.29c47.79,22.2,103.59,29,158,17C289.09,36,348.06-1.72,413,0c60.66,1.6,114.22,34.08,172,48,118.91,28.73,228.91-23.19,332-31,88.8-6.79,171.06,16.13,283,36V0Z" opacity=".25" fill="#667eea"></path><path d="M0,0V15.81C13,36.92,27.64,56.39,47.69,72.05,99.41,112.19,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8C438.17,19.86,512.34,6.09,583,22.75c59.68,14.15,113.73,46.41,173,60.45,70.05,16.71,136.87,1.93,200-22.45,33-13.16,63.74-31.21,94-49.9V0Z" opacity=".5" fill="#667eea"></path><path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46C739.57,4.16,784.39,6.3,828,18.31c110.76,30.42,221.61,3.93,372-18.31V0Z" fill="#667eea"></path></svg>
    </div>

    <h3 class="mb-3">What would you like to do?</h3>
    <div class="options-grid">
        <a class="option-card" href="/Services/Browse">
            <div class="option-icon bg1"><i class="fas fa-bolt"></i></div>
            <h5 class="option-title">Book Service</h5>
            <p class="option-desc">Browse and book from available services</p>
        </a>
        <a class="option-card" href="#" onclick="openNearby();return false;">
            <div class="option-icon bg2"><i class="fas fa-map-marker-alt"></i></div>
            <h5 class="option-title">Explore Nearby Services</h5>
            <p class="option-desc">Find services around your location</p>
        </a>
        <a class="option-card" href="#" onclick="openSubscriptions();return false;">
            <div class="option-icon bg3"><i class="fas fa-repeat"></i></div>
            <h5 class="option-title">Subscriptions: Daily Essentials</h5>
            <p class="option-desc">Milk, groceries and more on schedule</p>
        </a>
        <a class="option-card" href="/Home/Items?role=Vendor">
            <div class="option-icon bg4"><i class="fas fa-store"></i></div>
            <h5 class="option-title">Explore Local Market</h5>
            <p class="option-desc">Browse products listed by local sellers</p>
        </a>
    </div>

    <div class="dashboard-footerx">
        <div>
            <strong>Quick actions</strong>
            <div class="text-white-50">Profile and marketplace at your fingertips</div>
        </div>
        <div class="d-flex gap-2 flex-wrap">
            <a class="btn btn-sm btn-outline-light" href="/Account/Profile"><i class="fas fa-user"></i> Profile</a>
            <a class="btn btn-sm btn-outline-light" href="/Home/Items"><i class="fas fa-store"></i> Marketplace</a>
        </div>
    </div>
</div>

