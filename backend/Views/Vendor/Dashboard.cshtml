@{
    ViewData["Title"] = "Vendor Dashboard";
    var isGasVendor = ViewBag.IsGasVendor ?? false;
}

<style>
    :root {
        --vendor-gradient: linear-gradient(135deg, #10b981 0%, #059669 100%);
        --vendor-primary: #10b981;
        --vendor-secondary: #059669;
        --card-shadow: 0 10px 40px rgba(0,0,0,0.08);
        --card-hover-shadow: 0 20px 60px rgba(0,0,0,0.12);
    }
    
    .vendor-dashboard {
        min-height: 100vh;
        background: linear-gradient(180deg, #f8fafc 0%, #f1f5f9 100%);
        padding-bottom: 40px;
        overflow-x: hidden;
    }
    
    /* Hero Header */
    .dashboard-hero {
        background: var(--vendor-gradient);
        padding: 40px 30px;
        border-radius: 0 0 30px 30px;
        margin: -20px 0 30px 0;
        position: relative;
        overflow: hidden;
    }
    
    .dashboard-hero::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -20%;
        width: 400px;
        height: 400px;
        background: rgba(255,255,255,0.1);
        border-radius: 50%;
    }
    
    .dashboard-hero::after {
        content: '';
        position: absolute;
        bottom: -60%;
        left: -10%;
        width: 300px;
        height: 300px;
        background: rgba(255,255,255,0.05);
        border-radius: 50%;
    }
    
    .hero-content {
        position: relative;
        z-index: 1;
    }
    
    .hero-content h1 {
        font-size: 2rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 8px;
    }
    
    .hero-content p {
        color: rgba(255,255,255,0.85);
        font-size: 1.05rem;
        margin: 0;
    }
    
    .hero-date {
        background: rgba(255,255,255,0.2);
        padding: 8px 16px;
        border-radius: 20px;
        color: #fff;
        font-size: 0.85rem;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        margin-top: 12px;
        backdrop-filter: blur(10px);
    }
    
    /* Stat Cards */
    .stats-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
        margin-top: -60px;
        position: relative;
        z-index: 10;
    }
    
    .stat-card {
        background: #fff;
        border-radius: 20px;
        padding: 24px;
        box-shadow: var(--card-shadow);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid rgba(255,255,255,0.8);
    }
    
    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--card-hover-shadow);
    }
    
    .stat-icon-wrap {
        width: 56px;
        height: 56px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 16px;
    }
    
    .stat-icon-wrap i {
        font-size: 24px;
        color: #fff;
    }
    
    .stat-icon-wrap.products { background: linear-gradient(135deg, #10b981 0%, #059669 100%); }
    .stat-icon-wrap.active { background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); }
    .stat-icon-wrap.inactive { background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); }
    .stat-icon-wrap.gas { background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%); }
    
    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: #1e293b;
        line-height: 1;
        margin-bottom: 4px;
    }
    
    .stat-label {
        color: #64748b;
        font-size: 0.9rem;
        font-weight: 500;
    }
    
    /* Quick Actions Grid */
    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }
    
    .section-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #1e293b;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .section-title i {
        color: var(--vendor-primary);
    }
    
    .actions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
        gap: 16px;
        margin-bottom: 30px;
    }
    
    .action-card {
        background: #fff;
        border-radius: 16px;
        padding: 24px 20px;
        text-align: center;
        text-decoration: none;
        color: #1e293b;
        box-shadow: var(--card-shadow);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid transparent;
        position: relative;
        overflow: hidden;
    }
    
    .action-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: var(--vendor-gradient);
        transform: scaleX(0);
        transition: transform 0.3s ease;
    }
    
    .action-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--card-hover-shadow);
        text-decoration: none;
        color: #1e293b;
        border-color: rgba(102, 126, 234, 0.2);
    }
    
    .action-card:hover::before {
        transform: scaleX(1);
    }
    
    .action-icon {
        width: 50px;
        height: 50px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 14px;
        font-size: 22px;
    }
    
    .action-icon.purple { background: rgba(16, 185, 129, 0.12); color: #10b981; }
    .action-icon.green { background: rgba(16, 185, 129, 0.12); color: #10b981; }
    .action-icon.blue { background: rgba(59, 130, 246, 0.12); color: #3b82f6; }
    .action-icon.orange { background: rgba(245, 158, 11, 0.12); color: #f59e0b; }
    .action-icon.red { background: rgba(239, 68, 68, 0.12); color: #ef4444; }
    .action-icon.pink { background: rgba(236, 72, 153, 0.12); color: #ec4899; }
    .action-icon.teal { background: rgba(20, 184, 166, 0.12); color: #14b8a6; }
    .action-icon.indigo { background: rgba(16, 185, 129, 0.12); color: #10b981; }
    
    .action-title {
        font-weight: 600;
        font-size: 0.95rem;
        margin-bottom: 4px;
    }
    
    .action-subtitle {
        font-size: 0.8rem;
        color: #94a3b8;
    }
    
    .action-badge {
        position: absolute;
        top: 12px;
        right: 12px;
        background: #ef4444;
        color: #fff;
        font-size: 0.7rem;
        padding: 2px 8px;
        border-radius: 10px;
        font-weight: 600;
    }
    
    /* Content Cards */
    .content-section {
        display: grid;
        grid-template-columns: 1fr 380px;
        gap: 24px;
    }
    
    .content-card {
        background: #fff;
        border-radius: 20px;
        padding: 24px;
        box-shadow: var(--card-shadow);
    }
    
    .card-header-custom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }
    
    .card-title-custom {
        font-size: 1.1rem;
        font-weight: 600;
        color: #1e293b;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    
    .card-title-custom i {
        color: var(--vendor-primary);
    }
    
    .btn-outline-primary {
        color: var(--vendor-primary);
        border-color: var(--vendor-primary);
    }
    
    .btn-outline-primary:hover {
        background: var(--vendor-primary);
        border-color: var(--vendor-primary);
        color: #fff;
    }
    
    /* Activity Items */
    .activity-list {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }
    
    .activity-item {
        display: flex;
        gap: 14px;
        padding: 14px;
        background: #f8fafc;
        border-radius: 12px;
        transition: all 0.2s ease;
    }
    
    .activity-item:hover {
        background: #f1f5f9;
    }
    
    .activity-icon {
        width: 42px;
        height: 42px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }
    
    .activity-content {
        flex: 1;
    }
    
    .activity-title {
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 2px;
    }
    
    .activity-meta {
        font-size: 0.85rem;
        color: #64748b;
    }
    
    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 40px 20px;
        color: #64748b;
    }
    
    .empty-state i {
        font-size: 48px;
        color: #cbd5e1;
        margin-bottom: 16px;
    }
    
    /* Tips Card */
    .tips-card {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border-radius: 16px;
        padding: 20px;
        color: #fff;
    }
    
    .tips-card h5 {
        font-weight: 600;
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    
    .tips-card ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .tips-card li {
        padding: 8px 0;
        display: flex;
        align-items: flex-start;
        gap: 10px;
        font-size: 0.9rem;
        opacity: 0.95;
    }
    
    .tips-card li i {
        margin-top: 2px;
    }
    
    /* Quick Stats Mini */
    .quick-stats {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 12px;
    }
    
    .quick-stat-item {
        background: #f8fafc;
        border-radius: 12px;
        padding: 16px;
        text-align: center;
    }
    
    .quick-stat-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1e293b;
    }
    
    .quick-stat-label {
        font-size: 0.8rem;
        color: #64748b;
        margin-top: 2px;
    }
    
    /* Gas Vendor Banner */
    .gas-vendor-banner {
        background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
        border-radius: 16px;
        padding: 20px;
        margin-bottom: 24px;
        display: flex;
        align-items: center;
        gap: 16px;
        color: #78350f;
    }
    
    .gas-vendor-banner i {
        font-size: 32px;
    }
    
    .gas-vendor-banner .banner-content h5 {
        font-weight: 600;
        margin: 0 0 4px 0;
    }
    
    .gas-vendor-banner .banner-content p {
        margin: 0;
        font-size: 0.9rem;
        opacity: 0.9;
    }
    
    .gas-vendor-banner .banner-btn {
        margin-left: auto;
        background: #fff;
        color: #f59e0b;
        padding: 10px 20px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.2s;
    }
    
    .gas-vendor-banner .banner-btn:hover {
        background: #fef3c7;
        text-decoration: none;
    }
    
    /* Responsive */
    @@media (max-width: 1024px) {
        .content-section {
            grid-template-columns: 1fr;
        }
    }
    
    @@media (max-width: 768px) {
        .dashboard-hero {
            padding: 30px 20px;
            margin: -15px 0 30px 0;
        }
        
        .hero-content h1 {
            font-size: 1.6rem;
        }
        
        .stats-row {
            grid-template-columns: repeat(2, 1fr);
            gap: 12px;
            margin-top: -40px;
        }
        
        .stat-card {
            padding: 18px;
        }
        
        .stat-value {
            font-size: 1.5rem;
        }
        
        .actions-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 12px;
        }
        
        .action-card {
            padding: 18px 14px;
        }
        
        .gas-vendor-banner {
            flex-direction: column;
            text-align: center;
        }
        
        .gas-vendor-banner .banner-btn {
            margin-left: 0;
            margin-top: 12px;
        }
    }
</style>

<div class="vendor-dashboard">
    <!-- Hero Header -->
    <div class="dashboard-hero">
        <div class="hero-content">
            <h1><i class="bi bi-shop"></i> Welcome, @ViewBag.UserName!</h1>
            <p>Manage your products, track orders, and grow your business</p>
            <div class="hero-date">
                <i class="bi bi-calendar3"></i>
                @DateTime.UtcNow.ToString("dddd, MMMM dd, yyyy")
            </div>
        </div>
    </div>
    
    <!-- Stats Cards -->
    <div class="container-fluid px-3 px-md-4">
        <div class="stats-row">
            <div class="stat-card">
                <div class="stat-icon-wrap products">
                    <i class="bi bi-box-seam"></i>
                </div>
                <div class="stat-value">@ViewBag.TotalItems</div>
                <div class="stat-label">Total Products</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon-wrap active">
                    <i class="bi bi-toggle-on"></i>
                </div>
                <div class="stat-value">@ViewBag.ActiveItems</div>
                <div class="stat-label">Active Listings</div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon-wrap inactive">
                    <i class="bi bi-toggle-off"></i>
                </div>
                <div class="stat-value">@((ViewBag.TotalItems ?? 0) - (ViewBag.ActiveItems ?? 0))</div>
                <div class="stat-label">Inactive Products</div>
            </div>
            
            @if (isGasVendor)
            {
                <div class="stat-card">
                    <div class="stat-icon-wrap gas">
                        <i class="bi bi-fire"></i>
                    </div>
                    <div class="stat-value">@ViewBag.PendingGasOrders</div>
                    <div class="stat-label">Gas Orders Pending</div>
                </div>
            }
        </div>
        
        <!-- Gas Vendor Banner -->
        @if (isGasVendor && ViewBag.PendingGasOrders > 0)
        {
            <div class="gas-vendor-banner">
                <i class="bi bi-fire"></i>
                <div class="banner-content">
                    <h5>You have @ViewBag.PendingGasOrders pending gas orders!</h5>
                    <p>Review and process customer orders from the IoT auto-booking system</p>
                </div>
                <a href="/Vendor/GasOrders" class="banner-btn">
                    <i class="bi bi-arrow-right me-1"></i> View Orders
                </a>
            </div>
        }
        
        <!-- Quick Actions -->
        <div class="section-header">
            <h2 class="section-title">
                <i class="bi bi-lightning-charge"></i>
                Quick Actions
            </h2>
        </div>
        
        <div class="actions-grid">
            <a href="/Vendor/Products" class="action-card">
                <div class="action-icon purple">
                    <i class="bi bi-plus-circle"></i>
                </div>
                <div class="action-title">Add Product</div>
                <div class="action-subtitle">List new items</div>
            </a>
            
            <a href="/Vendor/Products" class="action-card">
                <div class="action-icon green">
                    <i class="bi bi-box-seam"></i>
                </div>
                <div class="action-title">My Products</div>
                <div class="action-subtitle">Manage listings</div>
            </a>
            
            <a href="/Vendor/Orders" class="action-card">
                <div class="action-icon blue">
                    <i class="bi bi-bag-check"></i>
                </div>
                <div class="action-title">Orders</div>
                <div class="action-subtitle">Track & fulfill</div>
            </a>
            
            @if (isGasVendor)
            {
                <a href="/Vendor/GasOrders" class="action-card">
                    @if (ViewBag.PendingGasOrders > 0)
                    {
                        <span class="action-badge">@ViewBag.PendingGasOrders</span>
                    }
                    <div class="action-icon orange">
                        <i class="bi bi-fire"></i>
                    </div>
                    <div class="action-title">Gas Orders</div>
                    <div class="action-subtitle">IoT bookings</div>
                </a>
            }
            
            <a href="/Home/Items" class="action-card">
                <div class="action-icon teal">
                    <i class="bi bi-grid-3x3-gap"></i>
                </div>
                <div class="action-title">Marketplace</div>
                <div class="action-subtitle">Browse all</div>
            </a>
            
            <a href="/Complaints/Create" class="action-card">
                <div class="action-icon red">
                    <i class="bi bi-flag"></i>
                </div>
                <div class="action-title">Raise Issue</div>
                <div class="action-subtitle">Report problem</div>
            </a>
            
            <a href="/Complaints/MyComplaints" class="action-card">
                <div class="action-icon pink">
                    <i class="bi bi-clipboard-check"></i>
                </div>
                <div class="action-title">My Complaints</div>
                <div class="action-subtitle">Track issues</div>
            </a>
            
            <a href="/Vendor/Settings" class="action-card">
                <div class="action-icon indigo">
                    <i class="bi bi-gear"></i>
                </div>
                <div class="action-title">Settings</div>
                <div class="action-subtitle">Configure store</div>
            </a>
        </div>
        
        <!-- Content Section -->
        <div class="content-section">
            <!-- Main Content -->
            <div class="content-card">
                <div class="card-header-custom">
                    <h3 class="card-title-custom">
                        <i class="bi bi-activity"></i>
                        Recent Activity
                    </h3>
                    <a href="/Vendor/Orders" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                
                <div class="activity-list" id="activityList">
                    <div class="empty-state">
                        <i class="bi bi-inbox"></i>
                        <h5>No recent activity</h5>
                        <p>Start by adding products to your store</p>
                        <a href="/Vendor/Products" class="btn btn-primary mt-2">
                            <i class="bi bi-plus-circle me-1"></i> Add First Product
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Sidebar -->
            <div class="d-flex flex-column gap-4">
                <!-- Quick Stats -->
                <div class="content-card">
                    <div class="card-header-custom">
                        <h3 class="card-title-custom">
                            <i class="bi bi-graph-up-arrow"></i>
                            Overview
                        </h3>
                    </div>
                    <div class="quick-stats">
                        <div class="quick-stat-item">
                            <div class="quick-stat-value text-success">@ViewBag.ActiveItems</div>
                            <div class="quick-stat-label">Live Products</div>
                        </div>
                        <div class="quick-stat-item">
                            <div class="quick-stat-value text-primary">@ViewBag.TotalItems</div>
                            <div class="quick-stat-label">Total Listed</div>
                        </div>
                        @if (isGasVendor)
                        {
                            <div class="quick-stat-item">
                                <div class="quick-stat-value text-warning">@ViewBag.PendingGasOrders</div>
                                <div class="quick-stat-label">Gas Pending</div>
                            </div>
                            <div class="quick-stat-item">
                                <div class="quick-stat-value text-info">
                                    <i class="bi bi-patch-check-fill"></i>
                                </div>
                                <div class="quick-stat-label">Gas Vendor</div>
                            </div>
                        }
                    </div>
                </div>
                
                <!-- Tips -->
                <div class="tips-card">
                    <h5><i class="bi bi-lightbulb"></i> Seller Tips</h5>
                    <ul>
                        <li>
                            <i class="bi bi-check-circle"></i>
                            <span>Add high-quality product images for better sales</span>
                        </li>
                        <li>
                            <i class="bi bi-check-circle"></i>
                            <span>Keep your inventory updated to avoid stockouts</span>
                        </li>
                        <li>
                            <i class="bi bi-check-circle"></i>
                            <span>Respond to orders promptly for better ratings</span>
                        </li>
                        <li>
                            <i class="bi bi-check-circle"></i>
                            <span>Complete your business profile for credibility</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Animate stat values
    const statValues = document.querySelectorAll('.stat-value');
    statValues.forEach(stat => {
        const text = stat.textContent.trim();
        const num = parseInt(text);
        if (!isNaN(num) && num > 0) {
            let current = 0;
            const increment = Math.ceil(num / 20);
            const timer = setInterval(() => {
                current += increment;
                if (current >= num) {
                    stat.textContent = num;
                    clearInterval(timer);
                } else {
                    stat.textContent = current;
                }
            }, 40);
        }
    });
    
    // Load recent activity
    loadRecentActivity();
});

async function loadRecentActivity() {
    try {
        const response = await fetch('/api/items/mine', { credentials: 'same-origin' });
        if (response.ok) {
            const items = await response.json();
            const activityList = document.getElementById('activityList');
            
            if (items && items.length > 0) {
                const recentItems = items.slice(0, 5);
                activityList.innerHTML = recentItems.map(item => `
                    <div class="activity-item">
                        <div class="activity-icon" style="background: rgba(16, 185, 129, 0.12);">
                            ${item.imageUrl ? 
                                `<img src="${item.imageUrl}" alt="" style="width: 42px; height: 42px; object-fit: cover; border-radius: 12px;">` :
                                `<i class="bi bi-box" style="color: #10b981; font-size: 18px;"></i>`
                            }
                        </div>
                        <div class="activity-content">
                            <div class="activity-title">${item.title || 'Untitled Product'}</div>
                            <div class="activity-meta">
                                ${item.isActive ? 
                                    '<span class="text-success"><i class="bi bi-circle-fill me-1" style="font-size: 8px;"></i>Active</span>' : 
                                    '<span class="text-muted"><i class="bi bi-circle-fill me-1" style="font-size: 8px;"></i>Inactive</span>'
                                }
                                &middot; â‚¹${(item.price || 0).toLocaleString()}
                            </div>
                        </div>
                    </div>
                `).join('');
            }
        }
    } catch (e) {
        console.log('Could not load activity');
    }
}
</script>
