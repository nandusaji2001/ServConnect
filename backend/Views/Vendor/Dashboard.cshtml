    </div>

    <!-- Statistics Cards -->
    <div class="stats-grid">
        <div class="stat-card products">
            <div class="stat-icon">
                <i class="fas fa-box"></i>
            </div>
            <h2 class="stat-number">@ViewBag.TotalItems</h2>
            <p class="stat-label">Total Items</p>
        </div>
        
        <div class="stat-card orders">
            <div class="stat-icon">
                <i class="fas fa-toggle-on"></i>
            </div>
            <h2 class="stat-number">@ViewBag.ActiveItems</h2>
            <p class="stat-label">Active Items</p>
        </div>
        
        <div class="stat-card revenue">
            <div class="stat-icon">
                <i class="fas fa-box-open"></i>
            </div>
            <h2 class="stat-number">@((ViewBag.TotalItems ?? 0) - (ViewBag.ActiveItems ?? 0))</h2>
            <p class="stat-label">Inactive Items</p>
        </div>
        
        <div class="stat-card customers">
            <div class="stat-icon">
                <i class="fas fa-clock"></i>
            </div>
            <h2 class="stat-number">@DateTime.UtcNow.ToString("MMM yyyy")</h2>
            <p class="stat-label">Updated</p>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions">
        <a href="/Vendor/Products" class="quick-action-btn">
            <i class="fas fa-plus-circle"></i>
            <span>Add Product</span>
        </a>
        
        <a href="/Vendor/Orders" class="quick-action-btn">
            <i class="fas fa-list-alt"></i>
            <span>View Orders</span>
        </a>
        
        <a href="/Vendor/GasOrders" class="quick-action-btn">
            <i class="fas fa-fire text-warning"></i>
            <span>Gas Orders @(ViewBag.PendingGasOrders > 0 ? $"({ViewBag.PendingGasOrders})" : "")</span>
        </a>
        
        <a href="#" class="quick-action-btn">
            <i class="fas fa-warehouse"></i>
            <span>Inventory</span>
        </a>
        
        <a href="#" class="quick-action-btn">
            <i class="fas fa-chart-bar"></i>
            <span>Analytics</span>
        </a>
        
        <a href="/Complaints/Create" class="quick-action-btn">
            <i class="fas fa-flag"></i>
            <span>Raise Complaint</span>
        </a>

        <a href="/Complaints/MyComplaints" class="quick-action-btn">
            <i class="fas fa-clipboard-list"></i>
            <span>My Complaints</span>
        </a>

        <a href="/Home/Items?role=ServiceProvider" class="quick-action-btn">
            <i class="fas fa-briefcase"></i>
            <span>Browse Services</span>
        </a>
        
        <a href="#" class="quick-action-btn" onclick="alert('Booking flow coming soon');return false;">
            <i class="fas fa-calendar-check"></i>
            <span>Book Service</span>
        </a>
        
        <a href="/Home/Items?role=Vendor" class="quick-action-btn">
            <i class="fas fa-store"></i>
            <span>Seller Items</span>
        </a>
        
        <a href="/Account/Profile" class="quick-action-btn">
            <i class="fas fa-user-cog"></i>
            <span>Profile</span>
        </a>
    </div>

    <!-- Main Content Grid -->
    <div class="content-grid">
        <!-- Items Summary -->
        <div class="main-content">
            <h3 class="section-title">
                <i class="fas fa-boxes"></i>
                My Items Snapshot
            </h3>
            <div class="row g-3">
                <div class="col-sm-6 col-lg-3">
                    <div class="stat-card products">
                        <div class="stat-icon"><i class="fas fa-box"></i></div>
                        <h2 class="stat-number">@ViewBag.TotalItems</h2>
                        <p class="stat-label">Total Items</p>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <div class="stat-card orders">
                        <div class="stat-icon"><i class="fas fa-toggle-on"></i></div>
                        <h2 class="stat-number">@ViewBag.ActiveItems</h2>
                        <p class="stat-label">Active</p>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <div class="stat-card revenue">
                        <div class="stat-icon"><i class="fas fa-toggle-off"></i></div>
                        <h2 class="stat-number">@((ViewBag.TotalItems ?? 0) - (ViewBag.ActiveItems ?? 0))</h2>
                        <p class="stat-label">Inactive</p>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-3">
                    <div class="stat-card customers">
                        <div class="stat-icon"><i class="fas fa-clock"></i></div>
                        <h2 class="stat-number">@DateTime.UtcNow.ToString("dd MMM")</h2>
                        <p class="stat-label">As of</p>
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <a href="/Vendor/Products" class="btn btn-primary"><i class="fas fa-plus"></i> Manage Items</a>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="sidebar-content">
            <!-- Top Products -->
            <div class="sidebar-card">
                <h4 class="section-title">
                    <i class="fas fa-trophy"></i>
                    Top Products
                </h4>
                
                <div class="product-item">
                    <div class="product-image">
                        <i class="fas fa-laptop"></i>
                    </div>
                    <div class="product-info">
                        <h5>Gaming Laptop</h5>
                        <p>45 sold this month</p>
                    </div>
                    <div class="product-stock">
                        <div class="stock-count stock-good">12 left</div>
                    </div>
                </div>
                
                <div class="product-item">
                    <div class="product-image">
                        <i class="fas fa-headphones"></i>
                    </div>
                    <div class="product-info">
                        <h5>Wireless Headphones</h5>
                        <p>38 sold this month</p>
                    </div>
                    <div class="product-stock">
                        <div class="stock-count stock-low">3 left</div>
                    </div>
                </div>
                
                <div class="product-item">
                    <div class="product-image">
                        <i class="fas fa-mobile-alt"></i>
                    </div>
                    <div class="product-info">
                        <h5>Smartphone Case</h5>
                        <p>29 sold this month</p>
                    </div>
                    <div class="product-stock">
                        <div class="stock-count stock-good">25 left</div>
                    </div>
                </div>
            </div>

            <!-- Alerts -->
            <div class="sidebar-card">
                <h4 class="section-title">
                    <i class="fas fa-exclamation-triangle"></i>
                    Alerts
                </h4>
                
                <div class="alert-item">
                    <i class="fas fa-box"></i>
                    <span>5 products are low in stock</span>
                </div>
                
                <div class="alert-item">
                    <i class="fas fa-clock"></i>
                    <span>3 orders need processing</span>
                </div>
                
                <div class="alert-item">
                    <i class="fas fa-star"></i>
                    <span>2 new reviews to respond to</span>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="sidebar-card">
                <h4 class="section-title">
                    <i class="fas fa-tachometer-alt"></i>
                    Quick Stats
                </h4>
                
                <div style="display: flex; justify-content: space-between; margin-bottom: 15px;">
                    <span>Today's Sales:</span>
                    <strong>$234.50</strong>
                </div>
                
                <div style="display: flex; justify-content: space-between; margin-bottom: 15px;">
                    <span>Pending Orders:</span>
                    <strong style="color: #FF9800;">7</strong>
                </div>
                
                <div style="display: flex; justify-content: space-between; margin-bottom: 15px;">
                    <span>Conversion Rate:</span>
                    <strong style="color: #4CAF50;">3.2%</strong>
                </div>
                
                <div style="display: flex; justify-content: space-between;">
                    <span>Customer Rating:</span>
                    <strong style="color: #FF9800;">‚≠ê 4.6/5</strong>
                </div>
            </div>
        </div>
        <div class="dashboard-footer">
            <div>
                <strong>Boost your catalog today</strong>
                <div class="text-white-50">Add new products or review orders quickly.</div>
            </div>
            <div class="cta">
                <a class="btn btn-sm btn-outline-light" href="/Vendor/Products"><i class="fas fa-plus-circle"></i> Add Product</a>
                <a class="btn btn-sm btn-outline-light" href="/Vendor/Orders"><i class="fas fa-list"></i> Orders</a>
                <a class="btn btn-sm btn-outline-light" href="/Account/Profile"><i class="fas fa-user-cog"></i> Profile</a>
            </div>
        </div>
    </div>

<script>
    // Add some interactivity
    document.addEventListener('DOMContentLoaded', function() {
        // Animate stat numbers on load
        const statNumbers = document.querySelectorAll('.stat-number');
        statNumbers.forEach(stat => {
            const text = stat.textContent;
            if (text.includes('$')) {
                const finalNumber = parseInt(text.replace('$', '').replace(',', ''));
                let currentNumber = 0;
                const increment = finalNumber / 50;
                
                const timer = setInterval(() => {
                    currentNumber += increment;
                    if (currentNumber >= finalNumber) {
                        stat.textContent = '$' + finalNumber.toLocaleString();
                        clearInterval(timer);
                    } else {
                        stat.textContent = '$' + Math.floor(currentNumber).toLocaleString();
                    }
                }, 30);
            } else {
                const finalNumber = parseInt(text);
                let currentNumber = 0;
                const increment = finalNumber / 30;
                
                const timer = setInterval(() => {
                    currentNumber += increment;
                    if (currentNumber >= finalNumber) {
                        stat.textContent = finalNumber;
                        clearInterval(timer);
                    } else {
                        stat.textContent = Math.floor(currentNumber);
                    }
                }, 50);
            }
        });
    });
</script>