@using ServConnect.ViewModels;
@model ForgotPasswordViewModel;

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box">
        <h2 class="text-center mb-4">Forgot Password</h2>
        <p class="text-center text-muted mb-4">Enter your phone number to receive an OTP for password reset</p>
        
        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="9744892806, +919744892806, or 1234567890" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                <small class="form-text text-muted">Enter the phone number associated with your account (supports international formats)</small>
            </div>

            <input type="submit" value="Send OTP" class="btn btn-primary w-100 p-2" />
        </form>

        <div class="text-center mt-3">
            <a asp-controller="Account" asp-action="Login" class="text-decoration-none">Back to Login</a>
        </div>
        
        <div class="text-center">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none mt-3">Back to Home</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}