@{
    ViewData["Title"] = "Complaint Submitted";
}

<style>
    .thankyou-container {
        max-width: 600px;
        margin: 60px auto;
        padding: 20px;
        text-align: center;
    }
    
    .success-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        padding: 50px 40px;
    }
    
    .success-icon {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 30px;
        animation: scaleIn 0.5s ease-out;
    }
    
    .success-icon i {
        font-size: 3rem;
        color: white;
    }
    
    @@keyframes scaleIn {
        0% { transform: scale(0); }
        50% { transform: scale(1.1); }
        100% { transform: scale(1); }
    }
    
    .success-card h1 {
        color: #065f46;
        font-size: 2rem;
        margin-bottom: 15px;
    }
    
    .success-card p {
        color: #6b7280;
        font-size: 1.1rem;
        line-height: 1.7;
        margin-bottom: 30px;
    }
    
    .info-box {
        background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 30px;
        text-align: left;
    }
    
    .info-box h4 {
        color: #065f46;
        font-size: 1rem;
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    
    .info-box ul {
        margin: 0;
        padding-left: 20px;
        color: #047857;
    }
    
    .info-box li {
        margin-bottom: 8px;
    }
    
    .btn-group {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
    }
    
    .btn-primary-custom {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        padding: 14px 30px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
    }
    
    .btn-primary-custom:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(16, 185, 129, 0.3);
        color: white;
    }
    
    .btn-secondary-custom {
        background: #f3f4f6;
        color: #374151;
        padding: 14px 30px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: all 0.2s ease;
    }
    
    .btn-secondary-custom:hover {
        background: #e5e7eb;
        color: #111827;
    }
</style>

<div class="thankyou-container">
    <div class="success-card">
        <div class="success-icon">
            <i class="fas fa-check"></i>
        </div>
        
        <h1>Complaint Submitted!</h1>
        <p>@(TempData["ComplaintMessage"] as string ?? "Your complaint has been submitted successfully. Our team will review it and take appropriate action.")</p>
        
        <div class="info-box">
            <h4><i class="fas fa-info-circle"></i> What happens next?</h4>
            <ul>
                <li>Our admin team will review your complaint</li>
                <li>You can track the status from "My Complaints"</li>
                <li>You'll be notified when there's an update</li>
                <li>Priority complaints are handled faster</li>
            </ul>
        </div>
        
        <div class="btn-group">
            <a asp-controller="Complaints" asp-action="MyComplaints" class="btn-primary-custom">
                <i class="fas fa-clipboard-list"></i>
                Track My Complaints
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn-secondary-custom">
                <i class="fas fa-home"></i>
                Back to Home
            </a>
        </div>
    </div>
</div>
