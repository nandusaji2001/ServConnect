@model ServConnect.ViewModels.ComplaintFormDataViewModel
@{
    ViewData["Title"] = "Raise a Complaint";
}

<style>
    .complaint-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 30px 20px;
    }
    
    .complaint-header {
        text-align: center;
        margin-bottom: 40px;
    }
    
    .complaint-header h1 {
        color: #065f46;
        font-size: 2rem;
        margin-bottom: 10px;
    }
    
    .complaint-header p {
        color: #6b7280;
        font-size: 1rem;
    }
    
    .complaint-form {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        padding: 30px;
    }
    
    .form-section {
        margin-bottom: 30px;
        padding-bottom: 25px;
        border-bottom: 1px solid #e5e7eb;
    }
    
    .form-section:last-child {
        border-bottom: none;
        margin-bottom: 0;
        padding-bottom: 0;
    }
    
    .section-title {
        display: flex;
        align-items: center;
        gap: 10px;
        color: #065f46;
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 20px;
    }
    
    .section-title i {
        width: 36px;
        height: 36px;
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1rem;
    }
    
    .category-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 15px;
    }
    
    @@media (max-width: 600px) {
        .category-grid {
            grid-template-columns: 1fr;
        }
    }
    
    .category-card {
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        padding: 20px;
        cursor: pointer;
        transition: all 0.3s ease;
        background: #fff;
    }
    
    .category-card:hover {
        border-color: #10b981;
        background: #f0fdf4;
    }
    
    .category-card.selected {
        border-color: #10b981;
        background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.2);
    }
    
    .category-card input[type="radio"] {
        display: none;
    }
    
    .category-card .card-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.3rem;
        margin-bottom: 12px;
    }
    
    .category-card.service-provider .card-icon {
        background: #dbeafe;
        color: #2563eb;
    }
    
    .category-card.vendor .card-icon {
        background: #fef3c7;
        color: #d97706;
    }
    
    .category-card.technical .card-icon {
        background: #e0e7ff;
        color: #4f46e5;
    }
    
    .category-card.safety .card-icon {
        background: #fee2e2;
        color: #dc2626;
    }
    
    .category-card h4 {
        font-size: 1rem;
        font-weight: 600;
        color: #111827;
        margin-bottom: 6px;
    }
    
    .category-card p {
        font-size: 0.85rem;
        color: #6b7280;
        margin: 0;
    }
    
    .sub-category-section {
        display: none;
        margin-top: 20px;
        padding: 20px;
        background: #f9fafb;
        border-radius: 12px;
    }
    
    .sub-category-section.visible {
        display: block;
    }
    
    .linked-entity-section {
        display: none;
        margin-top: 20px;
    }
    
    .linked-entity-section.visible {
        display: block;
    }
    
    .entity-select {
        background: #f9fafb;
        border-radius: 12px;
        padding: 20px;
    }
    
    .entity-option {
        display: flex;
        align-items: center;
        padding: 15px;
        border: 2px solid #e5e7eb;
        border-radius: 10px;
        margin-bottom: 10px;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .entity-option:hover {
        border-color: #10b981;
        background: #f0fdf4;
    }
    
    .entity-option.selected {
        border-color: #10b981;
        background: #ecfdf5;
    }
    
    .entity-option input[type="radio"] {
        display: none;
    }
    
    .entity-info {
        flex: 1;
    }
    
    .entity-info .name {
        font-weight: 600;
        color: #111827;
    }
    
    .entity-info .details {
        font-size: 0.85rem;
        color: #6b7280;
    }
    
    .entity-check {
        width: 24px;
        height: 24px;
        border: 2px solid #d1d5db;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: transparent;
        transition: all 0.2s ease;
    }
    
    .entity-option.selected .entity-check {
        background: #10b981;
        border-color: #10b981;
        color: white;
    }
    
    .form-control, .form-select {
        border: 2px solid #e5e7eb;
        border-radius: 10px;
        padding: 12px 16px;
        font-size: 1rem;
        transition: all 0.2s ease;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #10b981;
        box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.15);
    }
    
    .form-label {
        font-weight: 500;
        color: #374151;
        margin-bottom: 8px;
    }
    
    .evidence-upload {
        border: 2px dashed #d1d5db;
        border-radius: 12px;
        padding: 30px;
        text-align: center;
        cursor: pointer;
        transition: all 0.2s ease;
        background: #f9fafb;
    }
    
    .evidence-upload:hover {
        border-color: #10b981;
        background: #f0fdf4;
    }
    
    .evidence-upload i {
        font-size: 2.5rem;
        color: #9ca3af;
        margin-bottom: 10px;
    }
    
    .evidence-upload p {
        color: #6b7280;
        margin: 0;
    }
    
    .btn-submit {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border: none;
        color: white;
        padding: 14px 40px;
        border-radius: 12px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }
    
    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(16, 185, 129, 0.3);
    }
    
    .btn-cancel {
        background: #f3f4f6;
        border: none;
        color: #6b7280;
        padding: 14px 30px;
        border-radius: 12px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .btn-cancel:hover {
        background: #e5e7eb;
    }
    
    .alert-success {
        background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
        border: 1px solid #10b981;
        color: #065f46;
        border-radius: 12px;
        padding: 16px 20px;
    }
    
    .no-items-message {
        text-align: center;
        padding: 30px;
        color: #6b7280;
    }
    
    .no-items-message i {
        font-size: 2rem;
        margin-bottom: 10px;
        color: #d1d5db;
    }
</style>

<div class="complaint-container">
    <div class="complaint-header">
        <h1><i class="fas fa-exclamation-circle me-2"></i>Raise a Complaint</h1>
        <p>We're here to help. Please provide details about your concern.</p>
    </div>

    @if (TempData["ComplaintMessage"] != null)
    {
        <div class="alert alert-success mb-4">
            <i class="fas fa-check-circle me-2"></i>@TempData["ComplaintMessage"]
        </div>
    }

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="complaint-form" id="complaintForm">
        <div asp-validation-summary="All" class="alert alert-danger" role="alert" style="display:none;"></div>
        
        <input type="hidden" asp-for="Form.ComplainantId" />
        <input type="hidden" asp-for="Form.Name" />
        <input type="hidden" asp-for="Form.Email" />
        <input type="hidden" asp-for="Form.Role" />
        <input type="hidden" asp-for="Form.IsElderly" />
        <input type="hidden" asp-for="Form.ServiceProviderId" id="serviceProviderId" />
        <input type="hidden" asp-for="Form.ServiceProviderName" id="serviceProviderName" />
        <input type="hidden" asp-for="Form.VendorId" id="vendorId" />
        <input type="hidden" asp-for="Form.VendorName" id="vendorName" />
        <input type="hidden" asp-for="Form.BookingId" id="bookingId" />
        <input type="hidden" asp-for="Form.BookingServiceName" id="bookingServiceName" />
        <input type="hidden" asp-for="Form.OrderId" id="orderId" />
        <input type="hidden" asp-for="Form.OrderItemName" id="orderItemName" />

        <!-- Category Selection -->
        <div class="form-section">
            <div class="section-title">
                <i class="fas fa-folder"></i>
                <span>Select Complaint Category</span>
            </div>
            
            <div class="category-grid">
                <label class="category-card service-provider" data-category="ServiceProviderIssue">
                    <input type="radio" name="Form.Category" value="ServiceProviderIssue" />
                    <div class="card-icon"><i class="fas fa-user-tie"></i></div>
                    <h4>Service Provider Issue</h4>
                    <p>Late arrival, poor service, unprofessional behavior</p>
                </label>
                
                <label class="category-card vendor" data-category="VendorIssue">
                    <input type="radio" name="Form.Category" value="VendorIssue" />
                    <div class="card-icon"><i class="fas fa-store"></i></div>
                    <h4>Vendor Issue</h4>
                    <p>Wrong item, delay, unavailable product</p>
                </label>
                
                <label class="category-card technical" data-category="TechnicalIssue">
                    <input type="radio" name="Form.Category" value="TechnicalIssue" />
                    <div class="card-icon"><i class="fas fa-cog"></i></div>
                    <h4>Technical / App Issue</h4>
                    <p>App bugs, payment issues, account problems</p>
                </label>
                
                <label class="category-card safety" data-category="SafetyEmergency">
                    <input type="radio" name="Form.Category" value="SafetyEmergency" />
                    <div class="card-icon"><i class="fas fa-shield-alt"></i></div>
                    <h4>Safety / Emergency</h4>
                    <p>Security concerns, harassment, urgent issues</p>
                </label>
            </div>
            <span asp-validation-for="Form.Category" class="text-danger"></span>
        </div>

        <!-- Sub-category for Service Provider -->
        <div class="sub-category-section" id="serviceProviderSubCategory">
            <label class="form-label">What type of issue?</label>
            <select class="form-select" id="serviceProviderSubSelect">
                <option value="">Select issue type...</option>
                <option value="Late Arrival">Late Arrival</option>
                <option value="Poor Service Quality">Poor Service Quality</option>
                <option value="Unprofessional Behavior">Unprofessional Behavior</option>
                <option value="Overcharging">Overcharging</option>
                <option value="No Show">No Show</option>
                <option value="Incomplete Work">Incomplete Work</option>
                <option value="Other">Other</option>
            </select>
        </div>

        <!-- Sub-category for Vendor -->
        <div class="sub-category-section" id="vendorSubCategory">
            <label class="form-label">What type of issue?</label>
            <select class="form-select" id="vendorSubSelect">
                <option value="">Select issue type...</option>
                <option value="Wrong Item Delivered">Wrong Item Delivered</option>
                <option value="Damaged Product">Damaged Product</option>
                <option value="Delivery Delay">Delivery Delay</option>
                <option value="Product Not as Described">Product Not as Described</option>
                <option value="Missing Items">Missing Items</option>
                <option value="Refund Issue">Refund Issue</option>
                <option value="Other">Other</option>
            </select>
        </div>

        <!-- Sub-category for Technical -->
        <div class="sub-category-section" id="technicalSubCategory">
            <label class="form-label">What type of issue?</label>
            <select class="form-select" id="technicalSubSelect">
                <option value="">Select issue type...</option>
                <option value="Payment Failed">Payment Failed</option>
                <option value="App Crash">App Crash</option>
                <option value="Login Issues">Login Issues</option>
                <option value="Booking Error">Booking Error</option>
                <option value="Notification Issues">Notification Issues</option>
                <option value="Other">Other</option>
            </select>
        </div>

        <!-- Sub-category for Safety -->
        <div class="sub-category-section" id="safetySubCategory">
            <label class="form-label">What type of concern?</label>
            <select class="form-select" id="safetySubSelect">
                <option value="">Select concern type...</option>
                <option value="Harassment">Harassment</option>
                <option value="Fraud/Scam">Fraud/Scam</option>
                <option value="Theft">Theft</option>
                <option value="Physical Safety">Physical Safety</option>
                <option value="Privacy Violation">Privacy Violation</option>
                <option value="Other Emergency">Other Emergency</option>
            </select>
        </div>

        <input type="hidden" asp-for="Form.SubCategory" id="subCategoryInput" />

        <!-- Linked Service/Order Selection -->
        <div class="linked-entity-section" id="bookingSelection">
            <div class="form-section">
                <div class="section-title">
                    <i class="fas fa-calendar-check"></i>
                    <span>Select the Service</span>
                </div>
                
                <div class="entity-select">
                    @if (Model.CompletedBookings.Count > 0)
                    {
                        @foreach (var booking in Model.CompletedBookings)
                        {
                            <label class="entity-option" data-booking-id="@booking.BookingId" data-provider-id="@booking.ProviderId" data-provider-name="@booking.ProviderName" data-service-name="@booking.ServiceName">
                                <input type="radio" name="selectedBooking" value="@booking.BookingId" />
                                <div class="entity-info">
                                    <div class="name">@booking.ServiceName</div>
                                    <div class="details">by @booking.ProviderName â€¢ @booking.CompletedAt.ToString("dd MMM yyyy")</div>
                                </div>
                                <div class="entity-check"><i class="fas fa-check"></i></div>
                            </label>
                        }
                    }
                    else
                    {
                        <div class="no-items-message">
                            <i class="fas fa-calendar-times"></i>
                            <p>No completed services found. You can still describe your issue below.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="linked-entity-section" id="orderSelection">
            <div class="form-section">
                <div class="section-title">
                    <i class="fas fa-shopping-bag"></i>
                    <span>Select the Order</span>
                </div>
                
                <div class="entity-select">
                    @if (Model.DeliveredOrders.Count > 0)
                    {
                        @foreach (var order in Model.DeliveredOrders)
                        {
                            <label class="entity-option" data-order-id="@order.OrderId" data-vendor-id="@order.VendorId" data-item-name="@order.ItemName">
                                <input type="radio" name="selectedOrder" value="@order.OrderId" />
                                <div class="entity-info">
                                    <div class="name">@order.ItemName</div>
                                    <div class="details">Delivered on @order.DeliveredAt.ToString("dd MMM yyyy")</div>
                                </div>
                                <div class="entity-check"><i class="fas fa-check"></i></div>
                            </label>
                        }
                    }
                    else
                    {
                        <div class="no-items-message">
                            <i class="fas fa-box-open"></i>
                            <p>No delivered orders found. You can still describe your issue below.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Description -->
        <div class="form-section">
            <div class="section-title">
                <i class="fas fa-edit"></i>
                <span>Describe Your Issue</span>
            </div>
            
            <div class="mb-3">
                <label class="form-label">Phone Number (optional)</label>
                <input asp-for="Form.Phone" class="form-control" placeholder="For follow-up contact" />
            </div>
            
            <div class="mb-3">
                <label class="form-label">Detailed Description <span class="text-danger">*</span></label>
                <textarea asp-for="Form.Description" rows="5" class="form-control" placeholder="Please describe what happened with as much detail as possible. Include dates, times, and any relevant information."></textarea>
                <span asp-validation-for="Form.Description" class="text-danger"></span>
            </div>
        </div>

        <!-- Evidence Upload -->
        <div class="form-section">
            <div class="section-title">
                <i class="fas fa-paperclip"></i>
                <span>Attach Evidence (Optional)</span>
            </div>
            
            <label class="evidence-upload" for="evidenceInput">
                <i class="fas fa-cloud-upload-alt"></i>
                <p>Click to upload screenshots, invoices, or other evidence</p>
                <p class="small text-muted mt-2">You can upload multiple files</p>
            </label>
            <input type="file" asp-for="Form.EvidenceFiles" id="evidenceInput" multiple style="display:none;" data-val="false" />
            <div id="fileList" class="mt-2"></div>
        </div>

        <!-- Submit -->
        <div class="d-flex gap-3 justify-content-end">
            <a class="btn-cancel" asp-controller="Home" asp-action="Index">Cancel</a>
            <button type="submit" class="btn-submit">
                <i class="fas fa-paper-plane"></i>
                Submit Complaint
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const categoryCards = document.querySelectorAll('.category-card');
            const subCategorySections = {
                'ServiceProviderIssue': document.getElementById('serviceProviderSubCategory'),
                'VendorIssue': document.getElementById('vendorSubCategory'),
                'TechnicalIssue': document.getElementById('technicalSubCategory'),
                'SafetyEmergency': document.getElementById('safetySubCategory')
            };
            const linkedSections = {
                'ServiceProviderIssue': document.getElementById('bookingSelection'),
                'VendorIssue': document.getElementById('orderSelection')
            };
            const subCategoryInput = document.getElementById('subCategoryInput');
            
            // Category selection
            categoryCards.forEach(card => {
                card.addEventListener('click', function() {
                    categoryCards.forEach(c => c.classList.remove('selected'));
                    this.classList.add('selected');
                    this.querySelector('input[type="radio"]').checked = true;
                    
                    const category = this.dataset.category;
                    
                    // Hide all sub-category sections
                    Object.values(subCategorySections).forEach(s => s.classList.remove('visible'));
                    Object.values(linkedSections).forEach(s => s?.classList.remove('visible'));
                    
                    // Show relevant sections
                    if (subCategorySections[category]) {
                        subCategorySections[category].classList.add('visible');
                    }
                    if (linkedSections[category]) {
                        linkedSections[category].classList.add('visible');
                    }
                    
                    // Clear hidden fields
                    document.getElementById('serviceProviderId').value = '';
                    document.getElementById('serviceProviderName').value = '';
                    document.getElementById('vendorId').value = '';
                    document.getElementById('vendorName').value = '';
                    document.getElementById('bookingId').value = '';
                    document.getElementById('bookingServiceName').value = '';
                    document.getElementById('orderId').value = '';
                    document.getElementById('orderItemName').value = '';
                });
            });
            
            // Sub-category selection
            ['serviceProviderSubSelect', 'vendorSubSelect', 'technicalSubSelect', 'safetySubSelect'].forEach(id => {
                const select = document.getElementById(id);
                if (select) {
                    select.addEventListener('change', function() {
                        subCategoryInput.value = this.value;
                    });
                }
            });
            
            // Booking selection
            document.querySelectorAll('#bookingSelection .entity-option').forEach(option => {
                option.addEventListener('click', function() {
                    document.querySelectorAll('#bookingSelection .entity-option').forEach(o => o.classList.remove('selected'));
                    this.classList.add('selected');
                    this.querySelector('input[type="radio"]').checked = true;
                    
                    document.getElementById('bookingId').value = this.dataset.bookingId;
                    document.getElementById('bookingServiceName').value = this.dataset.serviceName;
                    document.getElementById('serviceProviderId').value = this.dataset.providerId;
                    document.getElementById('serviceProviderName').value = this.dataset.providerName;
                });
            });
            
            // Order selection
            document.querySelectorAll('#orderSelection .entity-option').forEach(option => {
                option.addEventListener('click', function() {
                    document.querySelectorAll('#orderSelection .entity-option').forEach(o => o.classList.remove('selected'));
                    this.classList.add('selected');
                    this.querySelector('input[type="radio"]').checked = true;
                    
                    document.getElementById('orderId').value = this.dataset.orderId;
                    document.getElementById('orderItemName').value = this.dataset.itemName;
                    document.getElementById('vendorId').value = this.dataset.vendorId;
                });
            });
            
            // File upload display
            const fileInput = document.getElementById('evidenceInput');
            const fileList = document.getElementById('fileList');
            
            fileInput.addEventListener('change', function() {
                fileList.innerHTML = '';
                Array.from(this.files).forEach(file => {
                    const div = document.createElement('div');
                    div.className = 'badge bg-light text-dark me-2 mb-2 p-2';
                    div.innerHTML = `<i class="fas fa-file me-1"></i>${file.name}`;
                    fileList.appendChild(div);
                });
            });
        });
    </script>
}
